@{
    ViewData["Title"] = "صفحه اصلی";
}

<div class="min-h-screen bg-gradient-to-br from-blue-50 to-blue-100">
    <!-- Hero Section -->
    <div class="container mx-auto px-4 py-16">
        <div class="text-center mb-16">
            <h1 class="text-6xl font-bold text-gray-800 mb-6">اسنپ‌داکتر</h1>
            <p class="text-xl text-gray-600 mb-8">پلتفرم تله‌مدیسین پیشرفته ایران</p>
            <p class="text-lg text-gray-500 max-w-2xl mx-auto">
                به راحتی با بهترین پزشکان کشور در ارتباط باشید. مشاوره آنلاین، نوبت‌دهی و پیگیری درمان در یک مکان.
            </p>
        </div>

        <!-- Action Cards -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto mb-16">
            <!-- User Panel -->
            <div class="bg-white rounded-2xl shadow-xl p-8 text-center hover:shadow-2xl transition-shadow">
                <div class="w-20 h-20 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-6">
                    <svg class="w-10 h-10 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                </div>
                <h3 class="text-2xl font-bold text-gray-800 mb-4">پنل بیمار</h3>
                <p class="text-gray-600 mb-6">
                    جستجو و انتخاب پزشک، رزرو نوبت، مشاوره آنلاین و پیگیری درمان
                </p>
                <div class="space-y-3">
                    <a href="/User/Dashboard" class="block w-full bg-blue-600 text-white py-3 px-6 rounded-lg hover:bg-blue-700 transition-colors">
                        ورود به پنل بیمار
                    </a>
                    <a href="/Auth/Register" class="block w-full bg-gray-100 text-gray-700 py-3 px-6 rounded-lg hover:bg-gray-200 transition-colors">
                        ثبت‌نام جدید
                    </a>
                </div>
            </div>

            <!-- Doctor Panel -->
            <div class="bg-white rounded-2xl shadow-xl p-8 text-center hover:shadow-2xl transition-shadow">
                <div class="w-20 h-20 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-6">
                    <svg class="w-10 h-10 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                </div>
                <h3 class="text-2xl font-bold text-gray-800 mb-4">پنل پزشک</h3>
                <p class="text-gray-600 mb-6">
                    مدیریت نوبت‌ها، انجام مشاوره‌های آنلاین و پیگیری بیماران
                </p>
                <div class="space-y-3">
                    <a href="/Doctor/Dashboard" class="block w-full bg-green-600 text-white py-3 px-6 rounded-lg hover:bg-green-700 transition-colors">
                        ورود به پنل پزشک
                    </a>
                    <span class="block text-sm text-gray-500">
                        (نیاز به تأیید نظام پزشکی)
                    </span>
                </div>
            </div>
        </div>

        <!-- Features Section -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto">
            <div class="bg-white/70 backdrop-blur-sm rounded-xl p-6 text-center">
                <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
                    <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
                <h4 class="text-lg font-semibold text-gray-800 mb-2">۲۴ ساعته</h4>
                <p class="text-gray-600">در تمام ساعات شبانه‌روز در دسترس</p>
            </div>

            <div class="bg-white/70 backdrop-blur-sm rounded-xl p-6 text-center">
                <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
                    <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
                <h4 class="text-lg font-semibold text-gray-800 mb-2">تضمین کیفیت</h4>
                <p class="text-gray-600">بهترین پزشکان با مجوز رسمی</p>
            </div>

            <div class="bg-white/70 backdrop-blur-sm rounded-xl p-6 text-center">
                <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4">
                    <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                    </svg>
                </div>
                <h4 class="text-lg font-semibold text-gray-800 mb-2">امنیت بالا</h4>
                <p class="text-gray-600">حفاظت کامل از اطلاعات پزشکی</p>
            </div>
        </div>

        <!-- Statistics -->
        <div class="mt-16 text-center">
            <div class="grid grid-cols-2 md:grid-cols-4 gap-8 max-w-4xl mx-auto">
                <div>
                    <div class="text-3xl font-bold text-blue-600">۵۰۰+</div>
                    <div class="text-gray-600">پزشک متخصص</div>
                </div>
                <div>
                    <div class="text-3xl font-bold text-green-600">۱۰,۰۰۰+</div>
                    <div class="text-gray-600">مشاوره انجام شده</div>
                </div>
                <div>
                    <div class="text-3xl font-bold text-purple-600">۹۸%</div>
                    <div class="text-gray-600">رضایت بیماران</div>
                </div>
                <div>
                    <div class="text-3xl font-bold text-orange-600">۲۴/۷</div>
                    <div class="text-gray-600">پشتیبانی</div>
                </div>
            </div>
        </div>
    </div>
</div> 