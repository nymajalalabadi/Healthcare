@model RegisterDto
@{
    ViewData["Title"] = "ثبت‌نام";
}

<div class="min-h-screen bg-gradient-to-br from-blue-50 to-blue-100 py-12">
    <div class="container mx-auto px-4">
        <div class="max-w-md mx-auto">
            <!-- Header -->
            <div class="text-center mb-8">
                <div class="w-20 h-20 bg-gradient-to-r from-blue-500 to-blue-600 rounded-full flex items-center justify-center mx-auto mb-4">
                    <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
                    </svg>
                </div>
                <h1 class="text-3xl font-bold text-gray-800 mb-2">ثبت‌نام در ژین‌یار</h1>
                <p class="text-gray-600">حساب کاربری خود را ایجاد کنید</p>
            </div>

            <!-- Registration Form -->
            <div class="bg-white rounded-2xl shadow-xl p-8">
                <form asp-action="Register" method="post" class="space-y-6">
                    <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm"></div>

                    <!-- First Name -->
                    <div>
                        <label asp-for="FirstName" class="block text-sm font-medium text-gray-700 mb-2"></label>
                        <input asp-for="FirstName" 
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition-all"
                               placeholder="نام خود را وارد کنید">
                        <span asp-validation-for="FirstName" class="text-red-500 text-sm"></span>
                    </div>

                    <!-- Last Name -->
                    <div>
                        <label asp-for="LastName" class="block text-sm font-medium text-gray-700 mb-2"></label>
                        <input asp-for="LastName" 
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition-all"
                               placeholder="نام خانوادگی خود را وارد کنید">
                        <span asp-validation-for="LastName" class="text-red-500 text-sm"></span>
                    </div>

                    <!-- Phone Number -->
                    <div>
                        <label asp-for="PhoneNumber" class="block text-sm font-medium text-gray-700 mb-2"></label>
                        <div class="relative">
                            <input asp-for="PhoneNumber" 
                                   class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition-all pr-12"
                                   placeholder="۰۹۱۲۳۴۵۶۷۸۹">
                            <div class="absolute right-3 top-1/2 transform -translate-y-1/2">
                                <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                                </svg>
                            </div>
                        </div>
                        <span asp-validation-for="PhoneNumber" class="text-red-500 text-sm"></span>
                    </div>

                    <!-- Password -->
                    <div>
                        <label asp-for="Password" class="block text-sm font-medium text-gray-700 mb-2"></label>
                        <div class="relative">
                            <input asp-for="Password" type="password"
                                   class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition-all pr-12"
                                   placeholder="رمز عبور خود را وارد کنید">
                            <div class="absolute right-3 top-1/2 transform -translate-y-1/2">
                                <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                                </svg>
                            </div>
                        </div>
                        <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
                    </div>

                    <!-- Confirm Password -->
                    <div>
                        <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700 mb-2"></label>
                        <div class="relative">
                            <input asp-for="ConfirmPassword" type="password"
                                   class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition-all pr-12"
                                   placeholder="رمز عبور خود را مجدداً وارد کنید">
                            <div class="absolute right-3 top-1/2 transform -translate-y-1/2">
                                <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                                </svg>
                            </div>
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-red-500 text-sm"></span>
                    </div>

                    <!-- User Type -->
                    <div>
                        <label asp-for="UserType" class="block text-sm font-medium text-gray-700 mb-3"></label>
                        <div class="space-y-4">
                            <div class="flex items-start p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors">
                                <input asp-for="UserType" type="radio" value="1" checked
                                       class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 mt-1">
                                <div class="mr-3">
                                    <label class="block text-sm font-medium text-gray-900">
                                        کاربر عادی (بیمار)
                                    </label>
                                    <p class="text-xs text-gray-500 mt-1">برای دریافت مشاوره پزشکی و رزرو نوبت</p>
                                </div>
                            </div>
                            <div class="flex items-start p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors">
                                <input asp-for="UserType" type="radio" value="2"
                                       class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 mt-1">
                                <div class="mr-3">
                                    <label class="block text-sm font-medium text-gray-900">
                                        پزشک
                                    </label>
                                    <p class="text-xs text-gray-500 mt-1">برای ارائه مشاوره پزشکی و مدیریت بیماران</p>
                                </div>
                            </div>
                        </div>
                        <span asp-validation-for="UserType" class="text-red-500 text-sm"></span>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" 
                            class="w-full bg-gradient-to-r from-blue-500 to-blue-600 text-white py-3 px-4 rounded-lg font-semibold hover:from-blue-600 hover:to-blue-700 transition-all transform hover:scale-105">
                        ثبت‌نام
                    </button>

                    <!-- Login Link -->
                    <div class="text-center">
                        <p class="text-gray-600">
                            قبلاً ثبت‌نام کرده‌اید؟ 
                            <a href="/Auth/Login" class="text-blue-600 hover:text-blue-800 font-medium">ورود</a>
                        </p>
                    </div>
                </form>
            </div>

            <!-- Terms -->
            <div class="text-center mt-6">
                <p class="text-sm text-gray-500">
                    با ثبت‌نام در ژین‌یار، 
                    <a href="#" class="text-blue-600 hover:underline">قوانین و مقررات</a> 
                    و 
                    <a href="#" class="text-blue-600 hover:underline">حریم خصوصی</a> 
                    را می‌پذیرید.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 