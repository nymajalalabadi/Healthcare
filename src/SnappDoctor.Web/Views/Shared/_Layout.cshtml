<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - اسنپ‌داکتر</title>
    <link rel="icon" type="image/x-icon" href="~/favicon.ico">
    
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- Persian Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Vazirmatn:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    
    <!-- Custom CSS -->
    <style>
        body {
            font-family: 'Vazirmatn', sans-serif;
        }
        
        /* RTL Direction Fix */
        .rtl {
            direction: rtl;
        }
        
        /* Custom Scrollbar */
        ::-webkit-scrollbar {
            width: 8px;
        }
        
        ::-webkit-scrollbar-track {
            background: #f1f1f1;
        }
        
        ::-webkit-scrollbar-thumb {
            background: #3b82f6;
            border-radius: 4px;
        }
        
        ::-webkit-scrollbar-thumb:hover {
            background: #1d4ed8;
        }
        
        /* Animation */
        .fade-in {
            animation: fadeIn 0.5s ease-in;
        }
        
        @@-webkit-keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        /* Mobile Menu Toggle */
        .mobile-menu-open {
            transform: translateX(0);
        }
        
        .mobile-menu-closed {
            transform: translateX(100%);
        }
    </style>
    
    <!-- Configure Tailwind for RTL -->
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'brand-blue': '#3b82f6',
                        'brand-light-blue': '#dbeafe',
                        'brand-dark-blue': '#1e40af',
                    }
                }
            }
        };
    </script>
</head>
<body class="bg-gray-50 text-gray-900 rtl">
    <!-- Header -->
    <header class="bg-white shadow-md sticky top-0 z-50">
        <div class="container mx-auto px-4 py-4">
            <div class="flex justify-between items-center">
                <!-- Logo -->
                <div class="flex items-center">
                    <a href="/" class="flex items-center">
                        <div class="w-10 h-10 bg-gradient-to-r from-blue-500 to-blue-600 rounded-lg flex items-center justify-center ml-3">
                            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                            </svg>
                        </div>
                        <span class="text-2xl font-bold text-brand-blue">اسنپ‌داکتر</span>
                    </a>
                </div>

                <!-- Desktop Navigation -->
                <nav class="hidden md:flex items-center space-x-8 space-x-reverse">
                    <a href="/" class="text-gray-700 hover:text-brand-blue transition-colors">خانه</a>
                    <a href="/Home/About" class="text-gray-700 hover:text-brand-blue transition-colors">درباره ما</a>
                    <a href="#services" class="text-gray-700 hover:text-brand-blue transition-colors">خدمات</a>
                    <a href="#doctors" class="text-gray-700 hover:text-brand-blue transition-colors">پزشکان</a>
                </nav>

                <!-- Auth Buttons -->
                <div class="hidden md:flex items-center space-x-4 space-x-reverse">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <div class="relative">
                            <button id="user-menu-button" class="flex items-center space-x-2 space-x-reverse text-gray-700 hover:text-brand-blue bg-gray-50 hover:bg-gray-100 px-3 py-2 rounded-lg transition-colors focus:outline-none focus:ring-2 focus:ring-brand-blue focus:ring-offset-2">
                                <div class="w-8 h-8 bg-gradient-to-r from-brand-blue to-brand-dark-blue rounded-full flex items-center justify-center">
                                    <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                    </svg>
                                </div>
                                <span class="font-medium">@(User.Identity.Name ?? "کاربر")</span>
                                <svg id="dropdown-arrow" class="w-4 h-4 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                                </svg>
                            </button>
                            <div id="user-dropdown" class="absolute left-0 mt-2 w-56 bg-white rounded-lg shadow-lg py-2 z-50 border border-gray-200 hidden">
                                <div class="px-4 py-2 border-b border-gray-100">
                                    <p class="text-sm font-medium text-gray-900">@(User.Identity.Name ?? "کاربر")</p>
                                    <p class="text-xs text-gray-500">مدیریت حساب کاربری</p>
                                </div>
                                @if (User.IsInRole("Doctor"))
                                {
                                    <a href="/Doctor/Dashboard" class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors">
                                        <svg class="w-4 h-4 ml-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"></path>
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5a2 2 0 012-2h4a2 2 0 012 2v3H8V5z"></path>
                                        </svg>
                                        داشبورد پزشک
                                    </a>
                                    <a href="/Doctor/Consultations" class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors">
                                        <svg class="w-4 h-4 ml-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                                        </svg>
                                        مشاوره‌های بیماران
                                    </a>
                                }
                                else
                                {
                                    <a href="/User/Dashboard" class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors">
                                        <svg class="w-4 h-4 ml-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"></path>
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5a2 2 0 012-2h4a2 2 0 012 2v3H8V5z"></path>
                                        </svg>
                                        داشبورد من
                                    </a>
                                    <a href="/User/Doctors" class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors">
                                        <svg class="w-4 h-4 ml-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.982 18.725A7.488 7.488 0 0012 15.75a7.488 7.488 0 00-5.982 2.975m11.963 0a9 9 0 10-11.963 0m11.963 0A8.966 8.966 0 0112 21a8.966 8.966 0 01-5.982-2.275M15 9.75a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                        </svg>
                                        پزشکان
                                    </a>
                                    <a href="/User/Consultations" class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors">
                                        <svg class="w-4 h-4 ml-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                                        </svg>
                                        مشاوره‌های من
                                    </a>
                                }
                                <a href="#" class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors">
                                    <svg class="w-4 h-4 ml-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                    </svg>
                                    تنظیمات
                                </a>
                                <div class="border-t border-gray-100 mt-2">
                                    <form method="post" action="/Auth/Logout" class="inline w-full">
                                        <button type="submit" class="flex items-center w-full px-4 py-2 text-sm text-red-600 hover:bg-red-50 transition-colors">
                                            <svg class="w-4 h-4 ml-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                                            </svg>
                                            خروج از حساب
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <a href="/Auth/Login" class="text-brand-blue hover:text-brand-dark-blue transition-colors font-medium px-3 py-2 hover:bg-blue-50 rounded-lg">ورود</a>
                        <a href="/Auth/Register" class="bg-gradient-to-r from-brand-blue to-brand-dark-blue text-white px-6 py-2 rounded-lg hover:from-brand-dark-blue hover:to-blue-800 transition-all transform hover:scale-105 font-medium shadow-md">ثبت‌نام</a>
                    }
                </div>

                <!-- Mobile Menu Button -->
                <button class="md:hidden p-2" onclick="toggleMobileMenu()">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                </button>
            </div>
        </div>

        <!-- Mobile Menu -->
        <div id="mobile-menu" class="md:hidden bg-white border-t mobile-menu-closed transition-transform duration-300 ease-in-out absolute w-full">
            <div class="px-4 py-4 space-y-4">
                <a href="/" class="block text-gray-700 hover:text-brand-blue">خانه</a>
                <a href="/Home/About" class="block text-gray-700 hover:text-brand-blue">درباره ما</a>
                <a href="#services" class="block text-gray-700 hover:text-brand-blue">خدمات</a>
                <a href="#doctors" class="block text-gray-700 hover:text-brand-blue">پزشکان</a>
                <div class="border-t pt-4">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <p class="text-gray-700 mb-2">سلام، @User.Identity.Name</p>
                        <a href="#" class="block text-gray-700 hover:text-brand-blue mb-2">پروفایل</a>
                        <a href="#" class="block text-gray-700 hover:text-brand-blue mb-2">مشاوره‌های من</a>
                        <form method="post" action="/Auth/Logout" class="inline">
                            <button type="submit" class="text-red-600 hover:text-red-800">خروج</button>
                        </form>
                    }
                    else
                    {
                        <a href="/Auth/Login" class="block text-brand-blue hover:text-brand-dark-blue mb-2">ورود</a>
                        <a href="/Auth/Register" class="block bg-brand-blue text-white px-4 py-2 rounded-lg hover:bg-brand-dark-blue text-center">ثبت‌نام</a>
                    }
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="min-h-screen">
        @if (TempData["Message"] != null)
        {
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mx-4 mt-4" role="alert">
                <span class="block sm:inline">@TempData["Message"]</span>
            </div>
        }
        
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white py-12">
        <div class="container mx-auto px-4">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
                <!-- Logo and Description -->
                <div class="col-span-1 md:col-span-2">
                    <div class="flex items-center mb-4">
                        <div class="w-10 h-10 bg-gradient-to-r from-blue-500 to-blue-600 rounded-lg flex items-center justify-center ml-3">
                            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                            </svg>
                        </div>
                        <span class="text-2xl font-bold">اسنپ‌داکتر</span>
                    </div>
                    <p class="text-gray-400 mb-4">پلتفرم دیجیتال سلامت برای مشاوره‌های پزشکی و روانشناسی آنلاین و خدمات درمانی در منزل</p>
                </div>

                <!-- Quick Links -->
                <div>
                    <h3 class="text-lg font-semibold mb-4">لینک‌های سریع</h3>
                    <ul class="space-y-2">
                        <li><a href="/" class="text-gray-400 hover:text-white transition-colors">خانه</a></li>
                        <li><a href="/Home/About" class="text-gray-400 hover:text-white transition-colors">درباره ما</a></li>
                        <li><a href="#services" class="text-gray-400 hover:text-white transition-colors">خدمات</a></li>
                        <li><a href="#doctors" class="text-gray-400 hover:text-white transition-colors">پزشکان</a></li>
                    </ul>
                </div>

                <!-- Contact Info -->
                <div>
                    <h3 class="text-lg font-semibold mb-4">تماس با ما</h3>
                    <ul class="space-y-2">
                        <li class="text-gray-400">تلفن: ۰۲۱-۱۲۳۴۵۶۷۸</li>
                        <li class="text-gray-400">ایمیل: info@snappdoctor.ir</li>
                        <li class="text-gray-400">آدرس: تهران، خیابان ولیعصر</li>
                    </ul>
                </div>
            </div>

            <div class="border-t border-gray-700 mt-8 pt-8 text-center">
                <p class="text-gray-400">&copy; ۱۴۰۳ اسنپ‌داکتر. تمامی حقوق محفوظ است.</p>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script>
        function toggleMobileMenu() {
            const menu = document.getElementById('mobile-menu');
            menu.classList.toggle('mobile-menu-open');
            menu.classList.toggle('mobile-menu-closed');
        }
        
        // User dropdown functionality
        function initUserDropdown() {
            const button = document.getElementById('user-menu-button');
            const dropdown = document.getElementById('user-dropdown');
            const arrow = document.getElementById('dropdown-arrow');
            
            if (!button || !dropdown) return;
            
            button.addEventListener('click', function(event) {
                event.stopPropagation();
                const isOpen = !dropdown.classList.contains('hidden');
                
                if (isOpen) {
                    dropdown.classList.add('hidden');
                    arrow.style.transform = 'rotate(0deg)';
                } else {
                    dropdown.classList.remove('hidden');
                    arrow.style.transform = 'rotate(180deg)';
                }
            });
            
            // Close dropdown when clicking outside
            document.addEventListener('click', function(event) {
                if (!button.contains(event.target) && !dropdown.contains(event.target)) {
                    dropdown.classList.add('hidden');
                    arrow.style.transform = 'rotate(0deg)';
                }
            });
            
            // Close dropdown when pressing Escape
            document.addEventListener('keydown', function(event) {
                if (event.key === 'Escape') {
                    dropdown.classList.add('hidden');
                    arrow.style.transform = 'rotate(0deg)';
                }
            });
        }
        
        // Close mobile menu when clicking outside
        document.addEventListener('click', function(event) {
            const menu = document.getElementById('mobile-menu');
            const button = event.target.closest('button');
            
            if (!menu.contains(event.target) && !button) {
                menu.classList.remove('mobile-menu-open');
                menu.classList.add('mobile-menu-closed');
            }
        });
        
        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth'
                    });
                }
            });
        });
        
        // Initialize everything when DOM is loaded
        document.addEventListener('DOMContentLoaded', function() {
            initUserDropdown();
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html> 