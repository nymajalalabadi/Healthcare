@model ErrorViewModel
@{
    ViewData["Title"] = "خطا";
}

<div class="min-h-screen flex items-center justify-center bg-gray-50">
    <div class="max-w-md w-full bg-white rounded-lg shadow-lg p-8 text-center">
        <div class="w-16 h-16 mx-auto mb-4 bg-red-100 rounded-full flex items-center justify-center">
            <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.728-.833-2.498 0L4.268 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
            </svg>
        </div>
        <h1 class="text-2xl font-bold text-gray-800 mb-4">خطایی رخ داده است</h1>
        <p class="text-gray-600 mb-6">متأسفانه خطایی در سیستم رخ داده است. لطفاً دوباره تلاش کنید.</p>
        
        @if (Model.ShowRequestId)
        {
            <p class="text-sm text-gray-500 mb-4">شناسه درخواست: @Model.RequestId</p>
        }
        
        <a href="/" class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition-colors">
            بازگشت به صفحه اصلی
        </a>
    </div>
</div> 