@model IEnumerable<Doctor>
@{
    ViewData["Title"] = "پزشکان";
}

<div class="min-h-screen bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Enhanced Header with gradient background -->
        <div class="bg-gradient-to-r from-blue-600 to-indigo-700 rounded-2xl shadow-2xl p-8 mb-8 text-white transform hover:scale-[1.02] transition-all duration-300">
            <div class="flex flex-col lg:flex-row items-center justify-between">
                <div class="flex items-center mb-4 lg:mb-0">
                    <div class="w-16 h-16 bg-white/20 backdrop-blur-sm rounded-2xl flex items-center justify-center ml-4 shadow-lg">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                        </svg>
                    </div>
                    <div>
                        <h1 class="text-3xl lg:text-4xl font-bold">بهترین پزشکان</h1>
                        <p class="text-blue-100 mt-2">متخصصان مجرب و قابل اعتماد در خدمت شما</p>
                    </div>
                </div>
                <div class="flex items-center space-x-3 space-x-reverse">
                    <div class="bg-white/20 backdrop-blur-sm px-6 py-3 rounded-xl border border-white/30">
                        <span class="text-white font-medium">@Model.Count() پزشک موجود</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Enhanced Filters -->
        <div class="bg-white rounded-2xl shadow-xl p-8 mb-8 transform hover:shadow-2xl transition-all duration-300 border border-gray-100">
            <div class="flex items-center mb-6">
                <div class="w-8 h-8 bg-gradient-to-r from-purple-500 to-pink-600 rounded-lg flex items-center justify-center ml-3">
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.207A1 1 0 013 6.5V4z"></path>
                    </svg>
                </div>
                <h3 class="text-xl font-bold text-gray-800">فیلتر بر اساس تخصص</h3>
            </div>
            <div class="flex flex-wrap items-center gap-3">
                <a href="/User/Doctors" class="px-6 py-3 rounded-2xl text-sm font-medium transition-all duration-200 transform hover:scale-105 shadow-lg @(ViewBag.CurrentSpecialization == null ? "bg-gradient-to-r from-blue-500 to-indigo-600 text-white shadow-blue-200" : "bg-gradient-to-r from-gray-100 to-gray-200 text-gray-700 hover:from-gray-200 hover:to-gray-300")">
                    <svg class="w-4 h-4 inline ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                    </svg>
                    همه تخصص‌ها
                </a>
                @if (ViewBag.Specializations != null)
                {
                    @foreach (var spec in ViewBag.Specializations)
                    {
                        <a href="/User/Doctors?specialization=@spec" class="px-6 py-3 rounded-2xl text-sm font-medium transition-all duration-200 transform hover:scale-105 shadow-lg @(ViewBag.CurrentSpecialization == spec ? "bg-gradient-to-r from-blue-500 to-indigo-600 text-white shadow-blue-200" : "bg-gradient-to-r from-gray-100 to-gray-200 text-gray-700 hover:from-gray-200 hover:to-gray-300")">
                            @spec
                        </a>
                    }
                }
            </div>
        </div>

        <!-- Enhanced Doctors Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-8">
            @foreach (var doctor in Model)
            {
                <div class="bg-white rounded-2xl shadow-xl p-8 transform hover:shadow-2xl hover:scale-[1.02] transition-all duration-300 border border-gray-100 group">
                    <!-- Status Badge -->
                    <div class="flex justify-between items-start mb-6">
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium @(doctor.IsAvailable ? "bg-green-100 text-green-800" : "bg-red-100 text-red-800")">
                            <span class="w-2 h-2 @(doctor.IsAvailable ? "bg-green-400" : "bg-red-400") rounded-full ml-2"></span>
                            @(doctor.IsAvailable ? "آنلاین" : "آفلاین")
                        </span>
                        <div class="flex items-center text-yellow-400">
                            @for (int i = 1; i <= 5; i++)
                            {
                                <svg class="w-4 h-4 @(i <= Math.Round(doctor.Rating) ? "text-yellow-400" : "text-gray-300")" fill="currentColor" viewBox="0 0 20 20">
                                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.286 3.97a1 1 0 00.95.69h4.18c.969 0 1.371 1.24.588 1.81l-3.392 2.46a1 1 0 00-.364 1.118l1.286 3.97c.3.921-.755 1.688-1.54 1.118l-3.392-2.46a1 1 0 00-1.176 0l-3.392 2.46c-.784.57-1.838-.197-1.539-1.118l1.286-3.97a1 1 0 00-.364-1.118L2.05 9.397c-.783-.57-.38-1.81.588-1.81h4.18a1 1 0 00.95-.69l1.286-3.97z"></path>
                                </svg>
                            }
                            <span class="text-gray-600 text-sm mr-2">(@doctor.ReviewCount)</span>
                        </div>
                    </div>

                    <!-- Doctor Profile -->
                    <div class="text-center mb-6">
                        <div class="relative">
                            @if (!string.IsNullOrEmpty(doctor.ProfilePictureUrl))
                            {
                                <img src="@doctor.ProfilePictureUrl" alt="تصویر دکتر @doctor.FullName" 
                                     class="w-24 h-24 rounded-2xl object-cover mx-auto mb-4 border-4 border-blue-100 shadow-lg group-hover:border-blue-200 transition-all duration-300">
                            }
                            else if (doctor.ProfilePicture != null && doctor.ProfilePicture.Length > 0)
                            {
                                <img src="@Url.Action("GetDoctorProfilePicture", "Doctors", new { doctorId = doctor.Id })" alt="تصویر دکتر @doctor.FullName" 
                                     class="w-24 h-24 rounded-2xl object-cover mx-auto mb-4 border-4 border-blue-100 shadow-lg group-hover:border-blue-200 transition-all duration-300">
                            }
                            else
                            {
                                <div class="w-24 h-24 rounded-2xl bg-gradient-to-br from-blue-100 to-indigo-200 flex items-center justify-center mx-auto mb-4 shadow-lg border-4 border-blue-100 group-hover:border-blue-200 transition-all duration-300">
                                    <svg class="w-12 h-12 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                    </svg>
                                </div>
                            }
                        </div>
                        <h3 class="text-xl font-bold text-gray-900 mb-2">دکتر @doctor.FullName</h3>
                        <span class="inline-flex items-center px-4 py-2 rounded-xl text-sm font-medium bg-gradient-to-r from-blue-50 to-indigo-50 text-blue-700 border border-blue-200">
                            
                            @doctor.Specialization
                        </span>
                    </div>

                    <!-- Enhanced Stats -->
                    <div class="grid grid-cols-2 gap-4 mb-6">
                        <div class="bg-gradient-to-r from-green-50 to-emerald-50 p-4 rounded-xl text-center border border-green-100">
                            <div class="text-2xl font-bold text-green-600">@doctor.YearsOfExperience</div>
                            <div class="text-sm text-green-700 font-medium">سال تجربه</div>
                        </div>
                        <div class="bg-gradient-to-r from-purple-50 to-pink-50 p-4 rounded-xl text-center border border-purple-100">
                            <div class="text-2xl font-bold text-purple-600">@doctor.Rating</div>
                            <div class="text-sm text-purple-700 font-medium">امتیاز</div>
                        </div>
                    </div>

                    <!-- Bio -->
                    @if (!string.IsNullOrEmpty(doctor.Bio))
                    {
                        <div class="bg-gray-50 rounded-xl p-4 mb-6">
                            <p class="text-gray-700 text-sm leading-relaxed line-clamp-3">@doctor.Bio</p>
                        </div>
                    }

                    <!-- Consultation Fee -->
                    <div class="bg-gradient-to-r from-orange-50 to-yellow-50 p-4 rounded-xl mb-6 border border-orange-100">
                        <div class="flex items-center justify-between">
                            <span class="text-orange-700 font-medium text-sm">تعرفه مشاوره</span>
                            <span class="text-orange-600 font-bold text-lg">@doctor.ConsultationFee.ToString("N0") تومان</span>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="grid grid-cols-2 gap-3">
                        <a href="/User/Doctors/Details/@doctor.Id" class="bg-gradient-to-r from-blue-500 to-indigo-600 text-white px-4 py-3 rounded-xl hover:from-blue-600 hover:to-indigo-700 text-center text-sm font-medium transition-all duration-200 transform hover:scale-105 shadow-lg">
                            <svg class="w-4 h-4 inline ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                            </svg>
                            جزئیات
                        </a>
                        @if (doctor.IsAvailable)
                        {
                            <a href="@Url.Action("BookConsultationPage", new { id = doctor.Id })" class="bg-gradient-to-r from-green-500 to-emerald-600 text-white px-4 py-3 rounded-xl hover:from-green-600 hover:to-emerald-700 text-sm font-medium transition-all duration-200 transform hover:scale-105 shadow-lg text-center inline-flex items-center justify-center">
                                <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                </svg>
                                رزرو نوبت
                            </a>
                        }
                        else
                        {
                            <button disabled class="bg-gray-300 text-gray-500 px-4 py-3 rounded-xl cursor-not-allowed text-sm font-medium">
                                <svg class="w-4 h-4 inline ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728L5.636 5.636m12.728 12.728L18.364 5.636M5.636 18.364l12.728-12.728"></path>
                                </svg>
                                غیرفعال
                            </button>
                        }
                    </div>
                </div>
            }
    </div>

        @if (!Model.Any())
        {
            <div class="bg-white rounded-2xl shadow-xl p-12 text-center">
                <div class="w-32 h-32 bg-gradient-to-br from-gray-100 to-gray-200 rounded-full flex items-center justify-center mx-auto mb-6">
                    <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                    </svg>
                </div>
                <h3 class="text-2xl font-bold text-gray-900 mb-4">هیچ پزشکی یافت نشد</h3>
                <p class="text-gray-600 text-lg mb-6">در حال حاضر پزشکی با این تخصص در دسترس نیست</p>
                <a href="/User/Doctors" class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-blue-500 to-indigo-600 text-white rounded-xl hover:from-blue-600 hover:to-indigo-700 transition-all duration-200 transform hover:scale-105 shadow-lg">
                    <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                    </svg>
                    مشاهده همه پزشکان
                </a>
            </div>
        }
    </div>
</div>



@section Scripts {
    <script>
        // Add smooth scroll animations
        document.addEventListener('DOMContentLoaded', function() {
            const cards = document.querySelectorAll('.group');
            cards.forEach((card, index) => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(30px)';
                
                setTimeout(() => {
                    card.style.transition = 'all 0.8s ease-out';
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, index * 100);
            });
        });
    </script>
} 