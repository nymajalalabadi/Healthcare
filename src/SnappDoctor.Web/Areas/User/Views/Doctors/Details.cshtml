@model Doctor
@{
    ViewData["Title"] = "جزئیات پزشک";
}

<div class="min-h-screen bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Enhanced Header -->
        <div class="bg-gradient-to-r from-blue-600 to-indigo-700 rounded-2xl shadow-2xl p-8 mb-8 text-white transform hover:scale-[1.02] transition-all duration-300">
            <div class="flex flex-col lg:flex-row items-center justify-between">
                <div class="flex items-center mb-4 lg:mb-0">
                    <a href="@Url.Action("Index")" class="text-blue-100 hover:text-white transition-colors duration-200 ml-4 transform hover:scale-110">
                        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                        </svg>
                    </a>
                    <div>
                        <h1 class="text-3xl lg:text-4xl font-bold">پروفایل پزشک</h1>
                        <p class="text-blue-100 mt-2">اطلاعات کامل و جزئیات مشاوره</p>
                    </div>
                </div>
                <div class="flex items-center space-x-4 space-x-reverse">
                    <span class="inline-flex items-center px-4 py-2 rounded-xl text-sm font-medium @(Model.IsAvailable ? "bg-green-100 text-green-800" : "bg-red-100 text-red-800")">
                        <span class="w-2 h-2 @(Model.IsAvailable ? "bg-green-400" : "bg-red-400") rounded-full ml-2"></span>
                        @(Model.IsAvailable ? "آنلاین" : "آفلاین")
                    </span>
                    @if (Model.IsAvailable)
                    {
                        <button onclick="openBookingModal(@Model.Id, '@Model.FullName')" class="bg-white/20 backdrop-blur-sm text-white px-8 py-3 rounded-xl hover:bg-white/30 transition-all duration-200 border border-white/30 transform hover:scale-105 shadow-lg">
                            <svg class="w-5 h-5 inline ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                            </svg>
                            رزرو فوری
                        </button>
                    }
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 xl:grid-cols-4 gap-8">
            <!-- Enhanced Doctor Profile -->
            <div class="xl:col-span-1">
                <div class="bg-white rounded-2xl shadow-xl p-8 transform hover:shadow-2xl transition-all duration-300 border border-gray-100 sticky top-8">
                    <!-- Profile Picture & Basic Info -->
                    <div class="text-center mb-8">
                        <div class="relative mb-6">
                            @if (!string.IsNullOrEmpty(Model.ProfilePictureUrl))
                            {
                                <img src="@Model.ProfilePictureUrl" alt="تصویر دکتر @Model.FullName" 
                                     class="w-40 h-40 rounded-2xl object-cover mx-auto shadow-xl border-4 border-blue-100">
                            }
                            else if (Model.ProfilePicture != null && Model.ProfilePicture.Length > 0)
                            {
                                <img src="@Url.Action("GetDoctorProfilePicture", "Doctors", new { doctorId = Model.Id })" alt="تصویر دکتر @Model.FullName" 
                                     class="w-40 h-40 rounded-2xl object-cover mx-auto shadow-xl border-4 border-blue-100">
                            }
                            else
                            {
                                <div class="w-40 h-40 rounded-2xl bg-gradient-to-br from-blue-100 to-indigo-200 flex items-center justify-center mx-auto shadow-xl border-4 border-blue-100">
                                    <svg class="w-20 h-20 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                    </svg>
                                </div>
                            }
                            <!-- Medical License Badge -->
                            @if (!string.IsNullOrEmpty(Model.MedicalLicenseNumber))
                            {
                                <div class="absolute -bottom-2 right-1/2 transform translate-x-1/2">
                                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800 border-2 border-white shadow-lg">
                                        <svg class="w-3 h-3 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                        </svg>
                                        مجوز رسمی
                                    </span>
                                </div>
                            }
                        </div>
                        <h2 class="text-2xl font-bold text-gray-900 mb-2">دکتر @Model.FullName</h2>
                        <span class="inline-flex items-center px-4 py-2 rounded-xl text-sm font-medium bg-gradient-to-r from-blue-50 to-indigo-50 text-blue-700 border border-blue-200">
                            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a1 1 0 00-.755.302l-.613.613a1 1 0 01-1.022.271c-1.18-.485-2.145-1.45-2.63-2.63a1 1 0 01.271-1.022l.613-.613a1 1 0 00.302-.755l-.477-2.387a2 2 0 00-.547-1.022C10.346 6.09 9.4 6 8.175 6H7a2 2 0 00-2 2 15.3 15.3 0 006.404 10.404A2 2 0 0013 16h1.175c1.225 0 2.171-.346 2.683-1.158z"></path>
                            </svg>
                            @Model.Specialization
                        </span>
                    </div>

                    <!-- Enhanced Stats -->
                    <div class="grid grid-cols-1 gap-4 mb-8">
                        <div class="bg-gradient-to-r from-green-50 to-emerald-50 p-6 rounded-xl text-center border border-green-100">
                            <div class="text-3xl font-bold text-green-600 mb-2">@Model.YearsOfExperience</div>
                            <div class="text-sm text-green-700 font-medium">سال تجربه کاری</div>
                        </div>
                        <div class="bg-gradient-to-r from-yellow-50 to-orange-50 p-6 rounded-xl text-center border border-yellow-100">
                            <div class="flex items-center justify-center mb-2">
                                <span class="text-3xl font-bold text-yellow-600 ml-2">@Model.Rating</span>
                                <div class="flex">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <svg class="w-5 h-5 @(i <= Math.Round(Model.Rating) ? "text-yellow-400" : "text-gray-300")" fill="currentColor" viewBox="0 0 20 20">
                                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.286 3.97a1 1 0 00.95.69h4.18c.969 0 1.371 1.24.588 1.81l-3.392 2.46a1 1 0 00-.364 1.118l1.286 3.97c.3.921-.755 1.688-1.54 1.118l-3.392-2.46a1 1 0 00-1.176 0l-3.392 2.46c-.784.57-1.838-.197-1.539-1.118l1.286-3.97a1 1 0 00-.364-1.118L2.05 9.397c-.783-.57-.38-1.81.588-1.81h4.18a1 1 0 00.95-.69l1.286-3.97z"></path>
                                        </svg>
                                    }
                                </div>
                            </div>
                            <div class="text-sm text-yellow-700 font-medium">@Model.ReviewCount نظر</div>
                        </div>
                        <div class="bg-gradient-to-r from-purple-50 to-pink-50 p-6 rounded-xl text-center border border-purple-100">
                            <div class="text-2xl font-bold text-purple-600 mb-2">@Model.ConsultationFee.ToString("N0")</div>
                            <div class="text-sm text-purple-700 font-medium">تومان - شروع قیمت</div>
                        </div>
                    </div>

                    <!-- Enhanced Contact Info -->
                    <div class="space-y-4 mb-8">
                        <h4 class="font-bold text-gray-800 mb-4 flex items-center">
                            <svg class="w-5 h-5 text-blue-600 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                            </svg>
                            اطلاعات تماس
                        </h4>
                        <div class="bg-gradient-to-r from-blue-50 to-indigo-50 p-4 rounded-xl border border-blue-100">
                            <div class="flex items-center">
                                <svg class="w-5 h-5 text-blue-600 ml-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                                </svg>
                                <span class="text-blue-700 font-medium">@Model.PhoneNumber</span>
                            </div>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.Email))
                        {
                            <div class="bg-gradient-to-r from-green-50 to-emerald-50 p-4 rounded-xl border border-green-100">
                                <div class="flex items-center">
                                    <svg class="w-5 h-5 text-green-600 ml-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                                    </svg>
                                    <span class="text-green-700 font-medium">@Model.Email</span>
                                </div>
                            </div>
                        }
                    </div>

                    <!-- Enhanced Bio -->
                    @if (!string.IsNullOrEmpty(Model.Bio))
                    {
                        <div class="bg-gradient-to-r from-gray-50 to-gray-100 p-6 rounded-xl border border-gray-200">
                            <h4 class="font-bold text-gray-800 mb-4 flex items-center">
                                <svg class="w-5 h-5 text-gray-600 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                </svg>
                                درباره پزشک
                            </h4>
                            <p class="text-gray-700 leading-relaxed">@Model.Bio</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Doctor Details -->
            <div class="lg:col-span-2">
                <!-- Consultation Types & Fees -->
                <div class="bg-white rounded-xl shadow-lg p-6 mb-6">
                    <h3 class="text-lg font-semibold text-gray-800 mb-4">انواع مشاوره و هزینه‌ها</h3>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div class="border border-gray-200 rounded-lg p-4">
                            <div class="flex items-center justify-between mb-2">
                                <span class="font-medium text-gray-800">چت متنی</span>
                                <span class="text-green-600 font-bold">@Model.ConsultationFee.ToString("N0") تومان</span>
                            </div>
                            <p class="text-sm text-gray-600">مشاوره متنی در هر زمان</p>
                        </div>
                        
                        <div class="border border-gray-200 rounded-lg p-4">
                            <div class="flex items-center justify-between mb-2">
                                <span class="font-medium text-gray-800">تماس صوتی</span>
                                <span class="text-green-600 font-bold">@((Model.ConsultationFee * 1.5m).ToString("N0")) تومان</span>
                            </div>
                            <p class="text-sm text-gray-600">مشاوره صوتی 15 دقیقه‌ای</p>
                        </div>
                        
                        <div class="border border-gray-200 rounded-lg p-4">
                            <div class="flex items-center justify-between mb-2">
                                <span class="font-medium text-gray-800">تماس تصویری</span>
                                <span class="text-green-600 font-bold">@((Model.ConsultationFee * 2m).ToString("N0")) تومان</span>
                            </div>
                            <p class="text-sm text-gray-600">مشاوره تصویری 15 دقیقه‌ای</p>
                        </div>
                        
                        <div class="border border-gray-200 rounded-lg p-4">
                            <div class="flex items-center justify-between mb-2">
                                <span class="font-medium text-gray-800">مشاوره حضوری</span>
                                <span class="text-green-600 font-bold">@((Model.ConsultationFee * 3m).ToString("N0")) تومان</span>
                            </div>
                            <p class="text-sm text-gray-600">مشاوره حضوری در مطب</p>
                        </div>
                    </div>
                </div>

                <!-- Schedule -->
                <div class="bg-white rounded-xl shadow-lg p-6 mb-6">
                    <h3 class="text-lg font-semibold text-gray-800 mb-4">برنامه کاری</h3>
                    
                    <div class="grid grid-cols-1 md:grid-cols-7 gap-2">
                        @{
                            var days = new[] { "شنبه", "یکشنبه", "دوشنبه", "سه‌شنبه", "چهارشنبه", "پنج‌شنبه", "جمعه" };
                            var currentDay = DateTime.Now.DayOfWeek;
                            var persianDayIndex = ((int)currentDay + 1) % 7;
                        }
                        
                        @for (int i = 0; i < 7; i++)
                        {
                            var isToday = i == persianDayIndex;
                            <div class="text-center">
                                <div class="text-sm font-medium text-gray-600 mb-1">@days[i]</div>
                                <div class="p-2 rounded-lg @(isToday ? "bg-blue-100 text-blue-800" : "bg-gray-100 text-gray-600")">
                                    @if (Model.IsAvailable)
                                    {
                                        <span class="text-xs">8:00-20:00</span>
                                    }
                                    else
                                    {
                                        <span class="text-xs">تعطیل</span>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Reviews -->
                <div class="bg-white rounded-xl shadow-lg p-6">
                    <h3 class="text-lg font-semibold text-gray-800 mb-4">نظرات بیماران</h3>
                    
                    <div class="text-center py-8">
                        <div class="text-4xl font-bold text-blue-600 mb-2">@Model.Rating</div>
                        <div class="flex justify-center mb-2">
                            @for (int i = 1; i <= 5; i++)
                            {
                                if (i <= Model.Rating)
                                {
                                    <svg class="w-6 h-6 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                                    </svg>
                                }
                                else
                                {
                                    <svg class="w-6 h-6 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                                    </svg>
                                }
                            }
                        </div>
                        <p class="text-gray-600">@Model.ReviewCount نظر</p>
                    </div>
                    
                    <!-- Sample Reviews -->
                    <div class="space-y-4">
                        <div class="border-l-4 border-blue-500 pl-4">
                            <div class="flex items-center mb-2">
                                <div class="flex text-yellow-400">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                                        </svg>
                                    }
                                </div>
                                <span class="text-sm text-gray-500 mr-2">2 روز پیش</span>
                            </div>
                            <p class="text-gray-700">دکتر بسیار حرفه‌ای و دلسوزی هستند. مشاوره‌ای که گرفتم خیلی مفید بود.</p>
                        </div>
                        
                        <div class="border-l-4 border-blue-500 pl-4">
                            <div class="flex items-center mb-2">
                                <div class="flex text-yellow-400">
                                    @for (int i = 1; i <= 4; i++)
                                    {
                                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                                        </svg>
                                    }
                                </div>
                                <span class="text-sm text-gray-500 mr-2">1 هفته پیش</span>
                            </div>
                            <p class="text-gray-700">تجربه خوبی داشتم. دکتر وقت‌شناس و دقیق هستند.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Booking Modal -->
<div id="bookingModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden z-50">
    <div class="flex items-center justify-center min-h-screen p-4">
        <div class="bg-white rounded-xl shadow-lg max-w-md w-full">
            <div class="p-6">
                <h3 class="text-lg font-semibold text-gray-800 mb-4">رزرو نوبت مشاوره</h3>
                <p class="text-gray-600 mb-6">برای رزرو نوبت با دکتر <span id="doctorName"></span>، لطفاً نوع مشاوره و زمان مورد نظر خود را انتخاب کنید.</p>
                
                <form id="bookingForm" class="space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">نوع مشاوره</label>
                        <select class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                            <option value="text">چت متنی</option>
                            <option value="voice">تماس صوتی</option>
                            <option value="video">تماس تصویری</option>
                            <option value="inperson">حضوری</option>
                        </select>
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">تاریخ</label>
                        <input type="date" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">زمان</label>
                        <select class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                            <option value="09:00">09:00</option>
                            <option value="10:00">10:00</option>
                            <option value="11:00">11:00</option>
                            <option value="14:00">14:00</option>
                            <option value="15:00">15:00</option>
                            <option value="16:00">16:00</option>
                        </select>
                    </div>
                </form>
                
                <div class="flex justify-end space-x-3 space-x-reverse mt-6">
                    <button onclick="closeBookingModal()" class="px-4 py-2 text-gray-600 hover:text-gray-800">
                        انصراف
                    </button>
                    <button onclick="submitBooking()" class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
                        رزرو نوبت
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function openBookingModal(doctorId, doctorName) {
        document.getElementById('doctorName').textContent = doctorName;
        document.getElementById('bookingModal').classList.remove('hidden');
    }
    
    function closeBookingModal() {
        document.getElementById('bookingModal').classList.add('hidden');
    }
    
    function submitBooking() {
        // Here you would submit the booking form
        alert('درخواست رزرو نوبت شما ثبت شد. در اسرع وقت با شما تماس خواهیم گرفت.');
        closeBookingModal();
    }
    
    // Close modal when clicking outside
    document.getElementById('bookingModal').addEventListener('click', function(e) {
        if (e.target === this) {
            closeBookingModal();
        }
    });
</script>
