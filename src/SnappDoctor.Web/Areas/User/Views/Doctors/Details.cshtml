@model Doctor
@{
    ViewData["Title"] = "جزئیات پزشک";
}

<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-6xl mx-auto px-4">
        <!-- Header -->
        <div class="bg-white rounded-xl shadow-lg p-6 mb-6">
            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <a href="@Url.Action("Index")" class="text-gray-500 hover:text-gray-700 ml-3">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                        </svg>
                    </a>
                    <h1 class="text-2xl font-bold text-gray-800">جزئیات پزشک</h1>
                </div>
                <div class="flex items-center space-x-3 space-x-reverse">
                    <span class="@(Model.IsAvailable ? "text-green-600" : "text-red-600") font-medium">
                        @(Model.IsAvailable ? "آنلاین" : "آفلاین")
                    </span>
                    @if (Model.IsAvailable)
                    {
                        <button onclick="openBookingModal(@Model.Id, '@Model.FullName')" class="bg-green-600 text-white px-6 py-3 rounded-lg hover:bg-green-700 transition-colors">
                            رزرو نوبت
                        </button>
                    }
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <!-- Doctor Profile -->
            <div class="lg:col-span-1">
                <div class="bg-white rounded-xl shadow-lg p-6">
                    <div class="text-center mb-6">
                        @if (!string.IsNullOrEmpty(Model.ProfilePictureUrl))
                        {
                            <img src="@Model.ProfilePictureUrl" alt="تصویر دکتر @Model.FullName" 
                                 class="w-32 h-32 rounded-full object-cover mx-auto mb-4 border-4 border-blue-100">
                        }
                        else if (Model.ProfilePicture != null && Model.ProfilePicture.Length > 0)
                        {
                            <img src="@Url.Action("GetDoctorProfilePicture", "Doctors", new { doctorId = Model.Id })" alt="تصویر دکتر @Model.FullName" 
                                 class="w-32 h-32 rounded-full object-cover mx-auto mb-4 border-4 border-blue-100">
                        }
                        else
                        {
                            <div class="w-32 h-32 rounded-full bg-blue-100 flex items-center justify-center mx-auto mb-4">
                                <svg class="w-16 h-16 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                </svg>
                            </div>
                        }
                        <h2 class="text-2xl font-bold text-gray-900">دکتر @Model.FullName</h2>
                        <p class="text-blue-600 font-medium text-lg">@Model.Specialization</p>
                    </div>

                    <!-- Quick Stats -->
                    <div class="grid grid-cols-2 gap-4 mb-6">
                        <div class="bg-blue-50 p-4 rounded-lg text-center">
                            <div class="text-2xl font-bold text-blue-600">@Model.YearsOfExperience</div>
                            <div class="text-sm text-gray-600">سال تجربه</div>
                        </div>
                        <div class="bg-green-50 p-4 rounded-lg text-center">
                            <div class="text-2xl font-bold text-green-600">@Model.Rating</div>
                            <div class="text-sm text-gray-600">⭐ امتیاز</div>
                        </div>
                    </div>

                    <!-- Contact Info -->
                    <div class="space-y-3 mb-6">
                        <div class="flex items-center text-sm">
                            <svg class="w-5 h-5 text-gray-400 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                            </svg>
                            <span class="text-gray-700">@Model.PhoneNumber</span>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.Email))
                        {
                            <div class="flex items-center text-sm">
                                <svg class="w-5 h-5 text-gray-400 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                                </svg>
                                <span class="text-gray-700">@Model.Email</span>
                            </div>
                        }
                    </div>

                    <!-- Bio -->
                    @if (!string.IsNullOrEmpty(Model.Bio))
                    {
                        <div class="bg-gray-50 p-4 rounded-lg">
                            <h4 class="font-medium text-gray-800 mb-2">درباره پزشک</h4>
                            <p class="text-sm text-gray-700">@Model.Bio</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Doctor Details -->
            <div class="lg:col-span-2">
                <!-- Consultation Types & Fees -->
                <div class="bg-white rounded-xl shadow-lg p-6 mb-6">
                    <h3 class="text-lg font-semibold text-gray-800 mb-4">انواع مشاوره و هزینه‌ها</h3>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div class="border border-gray-200 rounded-lg p-4">
                            <div class="flex items-center justify-between mb-2">
                                <span class="font-medium text-gray-800">چت متنی</span>
                                <span class="text-green-600 font-bold">@Model.ConsultationFee.ToString("N0") تومان</span>
                            </div>
                            <p class="text-sm text-gray-600">مشاوره متنی در هر زمان</p>
                        </div>
                        
                        <div class="border border-gray-200 rounded-lg p-4">
                            <div class="flex items-center justify-between mb-2">
                                <span class="font-medium text-gray-800">تماس صوتی</span>
                                <span class="text-green-600 font-bold">@((Model.ConsultationFee * 1.5m).ToString("N0")) تومان</span>
                            </div>
                            <p class="text-sm text-gray-600">مشاوره صوتی 15 دقیقه‌ای</p>
                        </div>
                        
                        <div class="border border-gray-200 rounded-lg p-4">
                            <div class="flex items-center justify-between mb-2">
                                <span class="font-medium text-gray-800">تماس تصویری</span>
                                <span class="text-green-600 font-bold">@((Model.ConsultationFee * 2m).ToString("N0")) تومان</span>
                            </div>
                            <p class="text-sm text-gray-600">مشاوره تصویری 15 دقیقه‌ای</p>
                        </div>
                        
                        <div class="border border-gray-200 rounded-lg p-4">
                            <div class="flex items-center justify-between mb-2">
                                <span class="font-medium text-gray-800">مشاوره حضوری</span>
                                <span class="text-green-600 font-bold">@((Model.ConsultationFee * 3m).ToString("N0")) تومان</span>
                            </div>
                            <p class="text-sm text-gray-600">مشاوره حضوری در مطب</p>
                        </div>
                    </div>
                </div>

                <!-- Schedule -->
                <div class="bg-white rounded-xl shadow-lg p-6 mb-6">
                    <h3 class="text-lg font-semibold text-gray-800 mb-4">برنامه کاری</h3>
                    
                    <div class="grid grid-cols-1 md:grid-cols-7 gap-2">
                        @{
                            var days = new[] { "شنبه", "یکشنبه", "دوشنبه", "سه‌شنبه", "چهارشنبه", "پنج‌شنبه", "جمعه" };
                            var currentDay = DateTime.Now.DayOfWeek;
                            var persianDayIndex = ((int)currentDay + 1) % 7;
                        }
                        
                        @for (int i = 0; i < 7; i++)
                        {
                            var isToday = i == persianDayIndex;
                            <div class="text-center">
                                <div class="text-sm font-medium text-gray-600 mb-1">@days[i]</div>
                                <div class="p-2 rounded-lg @(isToday ? "bg-blue-100 text-blue-800" : "bg-gray-100 text-gray-600")">
                                    @if (Model.IsAvailable)
                                    {
                                        <span class="text-xs">8:00-20:00</span>
                                    }
                                    else
                                    {
                                        <span class="text-xs">تعطیل</span>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Reviews -->
                <div class="bg-white rounded-xl shadow-lg p-6">
                    <h3 class="text-lg font-semibold text-gray-800 mb-4">نظرات بیماران</h3>
                    
                    <div class="text-center py-8">
                        <div class="text-4xl font-bold text-blue-600 mb-2">@Model.Rating</div>
                        <div class="flex justify-center mb-2">
                            @for (int i = 1; i <= 5; i++)
                            {
                                if (i <= Model.Rating)
                                {
                                    <svg class="w-6 h-6 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                                    </svg>
                                }
                                else
                                {
                                    <svg class="w-6 h-6 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                                    </svg>
                                }
                            }
                        </div>
                        <p class="text-gray-600">@Model.ReviewCount نظر</p>
                    </div>
                    
                    <!-- Sample Reviews -->
                    <div class="space-y-4">
                        <div class="border-l-4 border-blue-500 pl-4">
                            <div class="flex items-center mb-2">
                                <div class="flex text-yellow-400">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                                        </svg>
                                    }
                                </div>
                                <span class="text-sm text-gray-500 mr-2">2 روز پیش</span>
                            </div>
                            <p class="text-gray-700">دکتر بسیار حرفه‌ای و دلسوزی هستند. مشاوره‌ای که گرفتم خیلی مفید بود.</p>
                        </div>
                        
                        <div class="border-l-4 border-blue-500 pl-4">
                            <div class="flex items-center mb-2">
                                <div class="flex text-yellow-400">
                                    @for (int i = 1; i <= 4; i++)
                                    {
                                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                                        </svg>
                                    }
                                </div>
                                <span class="text-sm text-gray-500 mr-2">1 هفته پیش</span>
                            </div>
                            <p class="text-gray-700">تجربه خوبی داشتم. دکتر وقت‌شناس و دقیق هستند.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Booking Modal -->
<div id="bookingModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden z-50">
    <div class="flex items-center justify-center min-h-screen p-4">
        <div class="bg-white rounded-xl shadow-lg max-w-md w-full">
            <div class="p-6">
                <h3 class="text-lg font-semibold text-gray-800 mb-4">رزرو نوبت مشاوره</h3>
                <p class="text-gray-600 mb-6">برای رزرو نوبت با دکتر <span id="doctorName"></span>، لطفاً نوع مشاوره و زمان مورد نظر خود را انتخاب کنید.</p>
                
                <form id="bookingForm" class="space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">نوع مشاوره</label>
                        <select class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                            <option value="text">چت متنی</option>
                            <option value="voice">تماس صوتی</option>
                            <option value="video">تماس تصویری</option>
                            <option value="inperson">حضوری</option>
                        </select>
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">تاریخ</label>
                        <input type="date" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">زمان</label>
                        <select class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                            <option value="09:00">09:00</option>
                            <option value="10:00">10:00</option>
                            <option value="11:00">11:00</option>
                            <option value="14:00">14:00</option>
                            <option value="15:00">15:00</option>
                            <option value="16:00">16:00</option>
                        </select>
                    </div>
                </form>
                
                <div class="flex justify-end space-x-3 space-x-reverse mt-6">
                    <button onclick="closeBookingModal()" class="px-4 py-2 text-gray-600 hover:text-gray-800">
                        انصراف
                    </button>
                    <button onclick="submitBooking()" class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
                        رزرو نوبت
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function openBookingModal(doctorId, doctorName) {
        document.getElementById('doctorName').textContent = doctorName;
        document.getElementById('bookingModal').classList.remove('hidden');
    }
    
    function closeBookingModal() {
        document.getElementById('bookingModal').classList.add('hidden');
    }
    
    function submitBooking() {
        // Here you would submit the booking form
        alert('درخواست رزرو نوبت شما ثبت شد. در اسرع وقت با شما تماس خواهیم گرفت.');
        closeBookingModal();
    }
    
    // Close modal when clicking outside
    document.getElementById('bookingModal').addEventListener('click', function(e) {
        if (e.target === this) {
            closeBookingModal();
        }
    });
</script>
