@model Consultation
@{
    ViewData["Title"] = "جزئیات مشاوره";
}

<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-4xl mx-auto px-4">
        <!-- Header -->
        <div class="bg-white rounded-xl shadow-lg p-6 mb-6">
            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <a href="@Url.Action("Index")" class="text-gray-500 hover:text-gray-700 ml-3">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                        </svg>
                    </a>
                    <h1 class="text-2xl font-bold text-gray-800">جزئیات مشاوره</h1>
                </div>
                <div class="flex items-center space-x-3 space-x-reverse">
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium
                        @(Model.Status == ConsultationStatus.Completed ? "bg-green-100 text-green-800" :
                          Model.Status == ConsultationStatus.Pending ? "bg-yellow-100 text-yellow-800" :
                          Model.Status == ConsultationStatus.InProgress ? "bg-blue-100 text-blue-800" :
                          Model.Status == ConsultationStatus.Confirmed ? "bg-blue-100 text-blue-800" :
                          Model.Status == ConsultationStatus.Cancelled ? "bg-red-100 text-red-800" :
                          "bg-gray-100 text-gray-800")">
                        @(Model.Status == ConsultationStatus.Completed ? "تکمیل شده" :
                          Model.Status == ConsultationStatus.Pending ? "در انتظار تأیید" :
                          Model.Status == ConsultationStatus.InProgress ? "در حال انجام" :
                          Model.Status == ConsultationStatus.Confirmed ? "تأیید شده" :
                          Model.Status == ConsultationStatus.Cancelled ? "لغو شده" :
                          Model.Status.ToString())
                    </span>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <!-- Doctor Information -->
            <div class="lg:col-span-1">
                <div class="bg-white rounded-xl shadow-lg p-6">
                    <h3 class="text-lg font-semibold text-gray-800 mb-4">اطلاعات پزشک</h3>
                    
                    <div class="text-center mb-4">
                        @if (!string.IsNullOrEmpty(Model.Doctor.ProfilePictureUrl))
                        {
                            <img src="@Model.Doctor.ProfilePictureUrl" alt="تصویر دکتر @Model.Doctor.FullName" 
                                 class="w-24 h-24 rounded-full object-cover mx-auto mb-3 border-2 border-blue-100">
                        }
                        else if (Model.Doctor.ProfilePicture != null && Model.Doctor.ProfilePicture.Length > 0)
                        {
                            <img src="@Url.Action("GetDoctorProfilePicture", "Doctors", new { doctorId = Model.Doctor.Id })" alt="تصویر دکتر @Model.Doctor.FullName" 
                                 class="w-24 h-24 rounded-full object-cover mx-auto mb-3 border-2 border-blue-100">
                        }
                        else
                        {
                            <div class="w-24 h-24 rounded-full bg-blue-100 flex items-center justify-center mx-auto mb-3">
                                <svg class="w-12 h-12 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                </svg>
                            </div>
                        }
                        <h4 class="text-xl font-bold text-gray-900">دکتر @Model.Doctor.FullName</h4>
                        <p class="text-blue-600 font-medium">@Model.Doctor.Specialization</p>
                    </div>

                    <div class="space-y-3">
                        <div class="flex justify-between text-sm">
                            <span class="text-gray-600">تجربه:</span>
                            <span class="font-medium">@Model.Doctor.YearsOfExperience سال</span>
                        </div>
                        <div class="flex justify-between text-sm">
                            <span class="text-gray-600">امتیاز:</span>
                            <span class="font-medium">@Model.Doctor.Rating ⭐</span>
                        </div>
                        <div class="flex justify-between text-sm">
                            <span class="text-gray-600">وضعیت:</span>
                            <span class="@(Model.Doctor.IsAvailable ? "text-green-600" : "text-red-600") font-medium">
                                @(Model.Doctor.IsAvailable ? "آنلاین" : "آفلاین")
                            </span>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Doctor.Bio))
                    {
                        <div class="mt-4 p-3 bg-gray-50 rounded-lg">
                            <p class="text-sm text-gray-700">@Model.Doctor.Bio</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Consultation Details -->
            <div class="lg:col-span-2">
                <div class="bg-white rounded-xl shadow-lg p-6">
                    <h3 class="text-lg font-semibold text-gray-800 mb-6">جزئیات مشاوره</h3>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="space-y-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-600 mb-1">نوع مشاوره</label>
                                <div class="bg-gray-50 p-3 rounded-lg">
                                    <span class="text-gray-800 font-medium">
                                        @(Model.Type == ConsultationType.TextChat ? "چت متنی" :
                                          Model.Type == ConsultationType.VoiceCall ? "تماس صوتی" :
                                          Model.Type == ConsultationType.VideoCall ? "تماس تصویری" :
                                          "حضوری")
                                    </span>
                                </div>
                            </div>
                            
                            <div>
                                <label class="block text-sm font-medium text-gray-600 mb-1">تاریخ رزرو</label>
                                <div class="bg-gray-50 p-3 rounded-lg">
                                    <span class="text-gray-800">@Model.CreatedAt.ToLocalTime().ToString("yyyy/MM/dd - HH:mm")</span>
                                </div>
                            </div>
                            
                            <div>
                                <label class="block text-sm font-medium text-gray-600 mb-1">زمان مشاوره</label>
                                <div class="bg-gray-50 p-3 rounded-lg">
                                    <span class="text-gray-800">@Model.ScheduledAt.ToLocalTime().ToString("yyyy/MM/dd - HH:mm")</span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="space-y-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-600 mb-1">هزینه مشاوره</label>
                                <div class="bg-gray-50 p-3 rounded-lg">
                                    <span class="text-gray-800 font-bold">@Model.Fee.ToString("N0") تومان</span>
                                </div>
                            </div>
                            
                            <div>
                                <label class="block text-sm font-medium text-gray-600 mb-1">وضعیت پرداخت</label>
                                <div class="bg-gray-50 p-3 rounded-lg">
                                    <span class="text-green-600 font-medium">پرداخت شده</span>
                                </div>
                            </div>
                            
                            <div>
                                <label class="block text-sm font-medium text-gray-600 mb-1">شماره مشاوره</label>
                                <div class="bg-gray-50 p-3 rounded-lg">
                                    <span class="text-gray-800 font-mono">@Model.Id</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div class="mt-6">
                            <label class="block text-sm font-medium text-gray-600 mb-2">یادداشت‌های من</label>
                            <div class="bg-gray-50 p-4 rounded-lg">
                                <p class="text-gray-800">@Model.Notes</p>
                            </div>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.DoctorNotes))
                    {
                        <div class="mt-6">
                            <label class="block text-sm font-medium text-gray-600 mb-2">یادداشت‌های پزشک</label>
                            <div class="bg-gray-50 p-4 rounded-lg">
                                <p class="text-gray-800">@Model.DoctorNotes</p>
                            </div>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.PatientSymptoms))
                    {
                        <div class="mt-6">
                            <label class="block text-sm font-medium text-gray-600 mb-2">علائم بیمار</label>
                            <div class="bg-gray-50 p-4 rounded-lg">
                                <p class="text-gray-800">@Model.PatientSymptoms</p>
                            </div>
                        </div>
                    }

                    <!-- Action Buttons -->
                    <div class="mt-8 pt-6 border-t border-gray-200">
                        <div class="flex flex-wrap gap-3">
                            @if (Model.Status == ConsultationStatus.Pending)
                            {
                                <form asp-action="Cancel" method="post" class="inline" onsubmit="return confirm('آیا از لغو این مشاوره اطمینان دارید؟')">
                                    <input type="hidden" name="id" value="@Model.Id" />
                                    <button type="submit" class="bg-red-600 text-white px-6 py-3 rounded-lg hover:bg-red-700 transition-colors">
                                        لغو مشاوره
                                    </button>
                                </form>
                            }
                            
                            @if (Model.Status == ConsultationStatus.Confirmed || Model.Status == ConsultationStatus.InProgress)
                            {
                                <a href="#" class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition-colors">
                                    شروع مشاوره
                                </a>
                            }
                            
                            <a href="@Url.Action("Index")" class="bg-gray-100 text-gray-700 px-6 py-3 rounded-lg hover:bg-gray-200 transition-colors">
                                بازگشت
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
