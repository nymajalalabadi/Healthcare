                        <a href="@Url.Action("BookConsultationPage", "Doctors", new { id = Model.Doctor.Id })" class="w-full bg-gradient-to-r from-orange-500 to-red-600 text-white px-6 py-4 rounded-2xl hover:from-orange-600 hover:to-red-700 transition-all duration-200 transform hover:scale-105 shadow-lg font-bold text-center inline-flex items-center justify-center">
                            <svg class="w-5 h-5 mb-1 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                            </svg>
