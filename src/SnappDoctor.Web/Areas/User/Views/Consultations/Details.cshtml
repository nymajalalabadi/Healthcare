@model Consultation
@{
    ViewData["Title"] = "جزئیات مشاوره";
}

<div class="min-h-screen bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50 py-8">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Enhanced Header -->
        <div class="bg-gradient-to-r @(Model.Status == ConsultationStatus.Completed ? "from-green-600 to-emerald-700" :
                  Model.Status == ConsultationStatus.Pending ? "from-yellow-600 to-orange-700" :
                  Model.Status == ConsultationStatus.InProgress ? "from-blue-600 to-indigo-700" :
                  Model.Status == ConsultationStatus.Confirmed ? "from-blue-600 to-indigo-700" :
                  Model.Status == ConsultationStatus.Cancelled ? "from-red-600 to-pink-700" :
                  "from-gray-600 to-gray-700") rounded-2xl shadow-2xl p-8 mb-8 text-white transform hover:scale-[1.02] transition-all duration-300">
            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <a href="@Url.Action("Index")" class="text-white/80 hover:text-white transition-colors duration-200 ml-4 transform hover:scale-110">
                        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                        </svg>
                    </a>
                    <div class="flex items-center">
                        <div class="w-16 h-16 bg-white/20 backdrop-blur-sm rounded-2xl flex items-center justify-center ml-4 shadow-lg">
                            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                            </svg>
                        </div>
                        <div>
                            <h1 class="text-3xl lg:text-4xl font-bold">جزئیات مشاوره</h1>
                            <p class="text-white/80 mt-2">شماره مشاوره: #@Model.Id</p>
                        </div>
                    </div>
                </div>
                <div class="hidden lg:flex items-center space-x-4 space-x-reverse">
                    <div class="bg-white/20 backdrop-blur-sm px-6 py-3 rounded-xl border border-white/30">
                        <span class="text-white font-bold text-lg">
                            @(Model.Status == ConsultationStatus.Completed ? "✅ تکمیل شده" :
                              Model.Status == ConsultationStatus.Pending ? "⏳ در انتظار تأیید" :
                              Model.Status == ConsultationStatus.InProgress ? "🔄 در حال انجام" :
                              Model.Status == ConsultationStatus.Confirmed ? "✔️ تأیید شده" :
                              Model.Status == ConsultationStatus.Cancelled ? "❌ لغو شده" :
                              Model.Status.ToString())
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Enhanced Doctor Information -->
            <div class="lg:col-span-1">
                <div class="bg-white rounded-2xl shadow-xl p-8 sticky top-8 transform hover:shadow-2xl transition-all duration-300 border border-gray-100">
                    <div class="bg-gradient-to-r from-blue-50 to-indigo-50 rounded-2xl p-6 mb-6 border border-blue-100">
                        <h3 class="text-xl font-bold text-blue-800 mb-4 flex items-center">
                            <svg class="w-6 h-6 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                            </svg>
                            اطلاعات پزشک معالج
                        </h3>
                    </div>
                    
                    <div class="text-center mb-8">
                        @if (!string.IsNullOrEmpty(Model.Doctor.ProfilePictureUrl))
                        {
                            <img src="@Model.Doctor.ProfilePictureUrl" alt="تصویر دکتر @Model.Doctor.FullName" 
                                 class="w-32 h-32 rounded-2xl object-cover mx-auto mb-4 shadow-xl border-4 border-green-100">
                        }
                        else if (Model.Doctor.ProfilePicture != null && Model.Doctor.ProfilePicture.Length > 0)
                        {
                            <img src="@Url.Action("GetDoctorProfilePicture", "Doctors", new { doctorId = Model.Doctor.Id })" alt="تصویر دکتر @Model.Doctor.FullName" 
                                 class="w-32 h-32 rounded-2xl object-cover mx-auto mb-4 shadow-xl border-4 border-green-100">
                        }
                        else
                        {
                            <div class="w-32 h-32 rounded-2xl bg-gradient-to-br from-green-100 to-emerald-200 flex items-center justify-center mx-auto mb-4 shadow-xl border-4 border-green-100">
                                <svg class="w-16 h-16 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                </svg>
                            </div>
                        }
                        <h4 class="text-2xl font-bold text-gray-900 mb-2">دکتر @Model.Doctor.FullName</h4>
                        <span class="inline-flex items-center px-4 py-2 rounded-xl text-sm font-medium bg-gradient-to-r from-green-50 to-emerald-50 text-green-700 border border-green-200">
                            @Model.Doctor.Specialization
                        </span>
                    </div>

                    <!-- Doctor Stats -->
                    <div class="grid grid-cols-2 gap-4 mb-8">
                        <div class="bg-gradient-to-r from-blue-50 to-indigo-50 p-4 rounded-xl text-center border border-blue-100">
                            <div class="text-2xl font-bold text-blue-600">@Model.Doctor.YearsOfExperience</div>
                            <div class="text-sm text-blue-700 font-medium">سال تجربه</div>
                        </div>
                        <div class="bg-gradient-to-r from-yellow-50 to-orange-50 p-4 rounded-xl text-center border border-yellow-100">
                            <div class="text-2xl font-bold text-yellow-600">@Model.Doctor.Rating</div>
                            <div class="text-sm text-yellow-700 font-medium">امتیاز ⭐</div>
                        </div>
                    </div>

                    <!-- Status Card -->
                    <div class="bg-gradient-to-r @(Model.Doctor.IsAvailable ? "from-green-50 to-emerald-50" : "from-red-50 to-pink-50") p-4 rounded-xl border @(Model.Doctor.IsAvailable ? "border-green-200" : "border-red-200") mb-6">
                        <div class="flex items-center justify-center">
                            <span class="w-3 h-3 @(Model.Doctor.IsAvailable ? "bg-green-400" : "bg-red-400") rounded-full ml-2"></span>
                            <span class="@(Model.Doctor.IsAvailable ? "text-green-700" : "text-red-700") font-bold">
                                @(Model.Doctor.IsAvailable ? "🟢 آنلاین و در دسترس" : "🔴 آفلاین")
                            </span>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Doctor.Bio))
                    {
                        <div class="bg-gradient-to-r from-gray-50 to-gray-100 p-6 rounded-2xl border border-gray-200">
                            <h5 class="font-bold text-gray-800 mb-3 flex items-center">
                                <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                درباره پزشک
                            </h5>
                            <p class="text-gray-700 leading-relaxed">@Model.Doctor.Bio</p>
                        </div>
                    }

                    <!-- Contact Doctor Button -->
                    <div class="mt-6">
                        <a href="@Url.Action("Details", "Doctors", new { id = Model.Doctor.Id })" 
                           class="w-full bg-gradient-to-r from-blue-500 to-indigo-600 text-white px-6 py-4 rounded-2xl hover:from-blue-600 hover:to-indigo-700 transition-all duration-200 transform hover:scale-105 shadow-lg text-center font-medium inline-flex items-center justify-center">
                            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                            </svg>
                            مشاهده پروفایل پزشک
                        </a>
                    </div>
                </div>
            </div>

            <!-- Enhanced Consultation Details -->
            <div class="lg:col-span-2 space-y-6">
                <!-- Consultation Type & Overview -->
                <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100">
                    <div class="bg-gradient-to-r from-purple-50 to-pink-50 rounded-2xl p-6 mb-6 border border-purple-100">
                        <h3 class="text-xl font-bold text-purple-800 mb-4 flex items-center">
                            <svg class="w-6 h-6 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                            </svg>
                            اطلاعات کلی مشاوره
                        </h3>
                    </div>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- Consultation Type -->
                        <div class="bg-gradient-to-r @(Model.Type == ConsultationType.TextChat ? "from-blue-50 to-indigo-50" :
                                      Model.Type == ConsultationType.VoiceCall ? "from-green-50 to-emerald-50" :
                                      Model.Type == ConsultationType.VideoCall ? "from-purple-50 to-pink-50" :
                                      "from-orange-50 to-red-50") p-6 rounded-2xl border @(Model.Type == ConsultationType.TextChat ? "border-blue-100" :
                                      Model.Type == ConsultationType.VoiceCall ? "border-green-100" :
                                      Model.Type == ConsultationType.VideoCall ? "border-purple-100" :
                                      "border-orange-100")">
                            <div class="flex items-center mb-4">
                                <div class="w-12 h-12 @(Model.Type == ConsultationType.TextChat ? "bg-blue-500" :
                                          Model.Type == ConsultationType.VoiceCall ? "bg-green-500" :
                                          Model.Type == ConsultationType.VideoCall ? "bg-purple-500" :
                                          "bg-orange-500") rounded-xl flex items-center justify-center ml-4 shadow-lg">
                                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        @if (Model.Type == ConsultationType.TextChat)
                                        {
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                                        }
                                        else if (Model.Type == ConsultationType.VoiceCall)
                                        {
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                                        }
                                        else if (Model.Type == ConsultationType.VideoCall)
                                        {
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                                        }
                                        else
                                        {
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                                        }
                                    </svg>
                                </div>
                                <div>
                                    <h4 class="font-bold @(Model.Type == ConsultationType.TextChat ? "text-blue-800" :
                                              Model.Type == ConsultationType.VoiceCall ? "text-green-800" :
                                              Model.Type == ConsultationType.VideoCall ? "text-purple-800" :
                                              "text-orange-800") text-lg">نوع مشاوره</h4>
                                </div>
                            </div>
                            <p class="@(Model.Type == ConsultationType.TextChat ? "text-blue-700" :
                                      Model.Type == ConsultationType.VoiceCall ? "text-green-700" :
                                      Model.Type == ConsultationType.VideoCall ? "text-purple-700" :
                                      "text-orange-700") font-bold text-xl">
                                @(Model.Type == ConsultationType.TextChat ? "💬 چت متنی" :
                                  Model.Type == ConsultationType.VoiceCall ? "📞 تماس صوتی" :
                                  Model.Type == ConsultationType.VideoCall ? "📹 تماس تصویری" :
                                  "🏥 مشاوره حضوری")
                            </p>
                        </div>

                        <!-- Fee & Payment -->
                        <div class="bg-gradient-to-r from-green-50 to-emerald-50 p-6 rounded-2xl border border-green-100">
                            <div class="flex items-center mb-4">
                                <div class="w-12 h-12 bg-green-500 rounded-xl flex items-center justify-center ml-4 shadow-lg">
                                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
                                    </svg>
                                </div>
                                <div>
                                    <h4 class="font-bold text-green-800 text-lg">هزینه مشاوره</h4>
                                </div>
                            </div>
                            <p class="text-green-700 font-bold text-2xl">💰 @(Model.Fee?.ToString("N0") ?? "0") تومان</p>
                            <div class="mt-3 flex items-center">
                                <span class="w-2 h-2 bg-green-400 rounded-full ml-2"></span>
                                <span class="text-green-600 text-sm font-medium">پرداخت شده ✅</span>
                            </div>
                        </div>
                    </div>

                    <!-- Date & Time Information -->
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-8">
                        <div class="bg-gradient-to-r from-blue-50 to-indigo-50 p-6 rounded-2xl border border-blue-100 text-center">
                            <div class="w-12 h-12 bg-blue-500 rounded-xl flex items-center justify-center mx-auto mb-4 shadow-lg">
                                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                </svg>
                            </div>
                            <h5 class="font-bold text-blue-800 mb-2">تاریخ رزرو</h5>
                            <p class="text-blue-700 font-bold">@Model.CreatedAt.ToLocalTime().ToString("yyyy/MM/dd")</p>
                            <p class="text-blue-600 text-sm">@Model.CreatedAt.ToLocalTime().ToString("HH:mm")</p>
                        </div>

                        <div class="bg-gradient-to-r from-purple-50 to-pink-50 p-6 rounded-2xl border border-purple-100 text-center">
                            <div class="w-12 h-12 bg-purple-500 rounded-xl flex items-center justify-center mx-auto mb-4 shadow-lg">
                                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                            </div>
                            <h5 class="font-bold text-purple-800 mb-2">زمان مشاوره</h5>
                            <p class="text-purple-700 font-bold">@Model.ScheduledAt.ToLocalTime().ToString("yyyy/MM/dd")</p>
                            <p class="text-purple-600 text-sm">@Model.ScheduledAt.ToLocalTime().ToString("HH:mm")</p>
                        </div>

                        <div class="bg-gradient-to-r from-gray-50 to-gray-100 p-6 rounded-2xl border border-gray-200 text-center">
                            <div class="w-12 h-12 bg-gray-500 rounded-xl flex items-center justify-center mx-auto mb-4 shadow-lg">
                                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14"></path>
                                </svg>
                            </div>
                            <h5 class="font-bold text-gray-800 mb-2">شماره مشاوره</h5>
                            <p class="text-gray-700 font-bold font-mono">#@Model.Id</p>
                            <p class="text-gray-600 text-sm">کد پیگیری</p>
                        </div>
                    </div>
                </div>

                <!-- Patient Symptoms -->
                @if (!string.IsNullOrEmpty(Model.PatientSymptoms))
                {
                    <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100">
                        <div class="bg-gradient-to-r from-red-50 to-pink-50 rounded-2xl p-6 mb-6 border border-red-100">
                            <h3 class="text-xl font-bold text-red-800 mb-4 flex items-center">
                                <svg class="w-6 h-6 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                                </svg>
                                علائم و شکایات بیمار
                            </h3>
                        </div>
                        <div class="bg-gradient-to-r from-gray-50 to-gray-100 p-6 rounded-2xl border border-gray-200">
                            <p class="text-gray-800 leading-relaxed text-lg">@Model.PatientSymptoms</p>
                        </div>
                    </div>
                }

                <!-- Notes Section -->
                @if (!string.IsNullOrEmpty(Model.Notes) || !string.IsNullOrEmpty(Model.DoctorNotes))
                {
                    <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100">
                        <div class="bg-gradient-to-r from-indigo-50 to-purple-50 rounded-2xl p-6 mb-6 border border-indigo-100">
                            <h3 class="text-xl font-bold text-indigo-800 mb-4 flex items-center">
                                <svg class="w-6 h-6 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                </svg>
                                یادداشت‌ها و نکات
                            </h3>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.Notes))
                        {
                            <div class="mb-6">
                                <div class="bg-gradient-to-r from-blue-50 to-indigo-50 p-6 rounded-2xl border border-blue-100">
                                    <h5 class="font-bold text-blue-800 mb-3 flex items-center">
                                        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                        </svg>
                                        یادداشت‌های شما
                                    </h5>
                                    <p class="text-blue-700 leading-relaxed">@Model.Notes</p>
                                </div>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.DoctorNotes))
                        {
                            <div class="bg-gradient-to-r from-green-50 to-emerald-50 p-6 rounded-2xl border border-green-100">
                                <h5 class="font-bold text-green-800 mb-3 flex items-center">
                                    <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                    یادداشت‌های پزشک
                                </h5>
                                <p class="text-green-700 leading-relaxed">@Model.DoctorNotes</p>
                            </div>
                        }
                    </div>
                }

                <!-- Enhanced Action Buttons -->
                <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100">
                    <div class="bg-gradient-to-r from-gray-50 to-gray-100 rounded-2xl p-6 mb-6 border border-gray-200">
                        <h3 class="text-xl font-bold text-gray-800 mb-4 flex items-center">
                            <svg class="w-6 h-6 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            </svg>
                            عملیات و دکمه‌ها
                        </h3>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
                        @if (Model.Status == ConsultationStatus.Pending)
                        {
                            <form asp-action="Cancel" method="post" class="w-full" onsubmit="return confirm('آیا از لغو این مشاوره اطمینان دارید؟\n\n⚠️ این عمل غیرقابل بازگشت است!')">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@Model.Id" />
                                <button type="submit" class="w-full bg-gradient-to-r from-red-500 to-pink-600 text-white px-6 py-4 rounded-2xl hover:from-red-600 hover:to-pink-700 transition-all duration-200 transform hover:scale-105 shadow-lg font-bold">
                                    <svg class="w-5 h-5 inline mb-1 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                    </svg>
                                    لغو مشاوره
                                </button>
                            </form>
