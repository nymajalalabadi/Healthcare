@model ProfileDto
@{
    ViewData["Title"] = "پروفایل من";
}

<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-4xl mx-auto px-4">
        <!-- Header -->
        <div class="bg-white rounded-xl shadow-lg p-6 mb-6">
            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <h1 class="text-2xl font-bold text-gray-800">پروفایل من</h1>
                </div>
                <a href="@Url.Action("Edit")" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors">
                    ویرایش پروفایل
                </a>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <!-- Profile Picture Section -->
            <div class="lg:col-span-1">
                <div class="bg-white rounded-xl shadow-lg p-6">
                    <div class="text-center">
                        <div class="relative inline-block">
                            @if (!string.IsNullOrEmpty(Model.ProfilePictureUrl))
                            {
                                <img src="@Model.ProfilePictureUrl" alt="تصویر پروفایل" 
                                     class="w-32 h-32 rounded-full object-cover border-4 border-blue-100">
                            }
                            else if (Model.ProfilePicture != null && Model.ProfilePicture.Length > 0)
                            {
                                <img src="@Url.Action("GetProfilePicture", "Profile", new { userId = Model.Id })" alt="تصویر پروفایل" 
                                     class="w-32 h-32 rounded-full object-cover border-4 border-blue-100">
                            }
                            else
                            {
                                <div class="w-32 h-32 rounded-full bg-gradient-to-r from-blue-500 to-blue-600 flex items-center justify-center border-4 border-blue-100">
                                    <svg class="w-16 h-16 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                    </svg>
                                </div>
                            }
                        </div>
                        
                        <h2 class="mt-4 text-xl font-semibold text-gray-800">@Model.FullName</h2>
                        <p class="text-gray-600">
                            @(Model.UserType == UserType.Doctor ? "پزشک" : "کاربر عادی")
                        </p>
                        
                        <!-- Upload Profile Picture -->
                        <form asp-action="UploadProfilePicture" method="post" enctype="multipart/form-data" class="mt-4">
                            @Html.AntiForgeryToken()
                            <div class="flex flex-col items-center">
                                <input type="file" name="profilePicture" accept="image/*" 
                                       class="hidden" id="profile-picture-input">
                                <label for="profile-picture-input" 
                                       class="cursor-pointer bg-gray-100 hover:bg-gray-200 text-gray-700 px-4 py-2 rounded-lg transition-colors text-sm">
                                    <svg class="w-4 h-4 inline ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"></path>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                    </svg>
                                    تغییر تصویر
                                </label>
                                <button type="submit" id="upload-btn" 
                                        class="hidden mt-2 bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors text-sm">
                                    آپلود
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="bg-white rounded-xl shadow-lg p-6 mt-6">
                    <h3 class="text-lg font-semibold text-gray-800 mb-4">عملیات سریع</h3>
                    <div class="space-y-3">
                        <a href="@Url.Action("Edit")" 
                           class="flex items-center p-3 text-gray-700 hover:bg-gray-50 rounded-lg transition-colors">
                            <svg class="w-5 h-5 ml-3 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                            </svg>
                            ویرایش اطلاعات
                        </a>
                        <a href="@Url.Action("ChangePassword")" 
                           class="flex items-center p-3 text-gray-700 hover:bg-gray-50 rounded-lg transition-colors">
                            <svg class="w-5 h-5 ml-3 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v-2L4.257 10.257a6 6 0 119.486-9.486L15 2.5"></path>
                            </svg>
                            تغییر رمز عبور
                        </a>
                        <a href="@Url.Action("Index", "Dashboard")" 
                           class="flex items-center p-3 text-gray-700 hover:bg-gray-50 rounded-lg transition-colors">
                            <svg class="w-5 h-5 ml-3 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"></path>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5a2 2 0 012-2h4a2 2 0 012 2v3H8V5z"></path>
                            </svg>
                            داشبورد
                        </a>
                    </div>
                </div>
            </div>

            <!-- Profile Information -->
            <div class="lg:col-span-2">
                <div class="bg-white rounded-xl shadow-lg p-6">
                    <h3 class="text-lg font-semibold text-gray-800 mb-6">اطلاعات شخصی</h3>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="space-y-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-600 mb-1">نام</label>
                                <div class="bg-gray-50 p-3 rounded-lg">
                                    <span class="text-gray-800">@Model.FirstName</span>
                                </div>
                            </div>
                            
                            <div>
                                <label class="block text-sm font-medium text-gray-600 mb-1">شماره موبایل</label>
                                <div class="bg-gray-50 p-3 rounded-lg">
                                    <span class="text-gray-800 font-mono">@Model.PhoneNumber</span>
                                </div>
                            </div>
                            
                            <div>
                                <label class="block text-sm font-medium text-gray-600 mb-1">تاریخ ثبت‌نام</label>
                                <div class="bg-gray-50 p-3 rounded-lg">
                                    <span class="text-gray-800">@Model.CreatedAt.ToString("yyyy/MM/dd - HH:mm")</span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="space-y-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-600 mb-1">نام خانوادگی</label>
                                <div class="bg-gray-50 p-3 rounded-lg">
                                    <span class="text-gray-800">@Model.LastName</span>
                                </div>
                            </div>
                            
                            <div>
                                <label class="block text-sm font-medium text-gray-600 mb-1">ایمیل</label>
                                <div class="bg-gray-50 p-3 rounded-lg">
                                    <span class="text-gray-800">@(Model.Email ?? "تعریف نشده")</span>
                                </div>
                            </div>
                            
                            @if (Model.UpdatedAt.HasValue)
                            {
                                <div>
                                    <label class="block text-sm font-medium text-gray-600 mb-1">آخرین بروزرسانی</label>
                                    <div class="bg-gray-50 p-3 rounded-lg">
                                        <span class="text-gray-800">@Model.UpdatedAt.Value.ToString("yyyy/MM/dd - HH:mm")</span>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Account Statistics -->
                <div class="bg-white rounded-xl shadow-lg p-6 mt-6">
                    <h3 class="text-lg font-semibold text-gray-800 mb-6">آمار حساب کاربری</h3>
                    
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                        <div class="bg-blue-50 p-4 rounded-lg text-center">
                            <div class="text-2xl font-bold text-blue-600">0</div>
                            <div class="text-sm text-gray-600">مشاوره‌های کل</div>
                        </div>
                        <div class="bg-green-50 p-4 rounded-lg text-center">
                            <div class="text-2xl font-bold text-green-600">0</div>
                            <div class="text-sm text-gray-600">مشاوره‌های تکمیل شده</div>
                        </div>
                        <div class="bg-yellow-50 p-4 rounded-lg text-center">
                            <div class="text-2xl font-bold text-yellow-600">0</div>
                            <div class="text-sm text-gray-600">مشاوره‌های در انتظار</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById('profile-picture-input').addEventListener('change', function(e) {
        const uploadBtn = document.getElementById('upload-btn');
        if (e.target.files.length > 0) {
            uploadBtn.classList.remove('hidden');
        } else {
            uploadBtn.classList.add('hidden');
        }
    });
</script> 