@model User
@{
    ViewData["Title"] = "داشبورد کاربری";
}

<div class="px-4 py-6 sm:px-0">
    <!-- Welcome Section -->
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900">خوش آمدید، @Model.FullName</h1>
        <p class="text-gray-600 mt-2">به پنل کاربری اسنپ‌داکتر خوش آمدید</p>
    </div>

    <!-- Statistics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center">
                            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                            </svg>
                        </div>
                    </div>
                    <div class="mr-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">کل مشاوره‌ها</dt>
                            <dd class="text-lg font-medium text-gray-900">@ViewBag.TotalConsultations</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <div class="w-8 h-8 bg-green-500 rounded-full flex items-center justify-center">
                            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                        </div>
                    </div>
                    <div class="mr-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">مشاوره‌های تکمیل شده</dt>
                            <dd class="text-lg font-medium text-gray-900">@ViewBag.CompletedConsultations</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <div class="w-8 h-8 bg-yellow-500 rounded-full flex items-center justify-center">
                            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                        </div>
                    </div>
                    <div class="mr-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">مشاوره‌های در انتظار</dt>
                            <dd class="text-lg font-medium text-gray-900">@ViewBag.PendingConsultations</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
        <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-6">
                <h3 class="text-lg font-medium text-gray-900 mb-4">عملیات سریع</h3>
                <div class="space-y-3">
                    <a href="/User/Doctors" class="w-full bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 flex items-center justify-center">
                        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                        یافتن پزشک
                    </a>
                    <a href="/User/Consultations" class="w-full bg-green-600 text-white px-4 py-2 rounded-md hover:bg-green-700 flex items-center justify-center">
                        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                        </svg>
                        مشاوره‌های من
                    </a>
                </div>
            </div>
        </div>

        <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-6">
                <h3 class="text-lg font-medium text-gray-900 mb-4">پروفایل من</h3>
                <div class="space-y-3">
                    <p class="text-sm text-gray-600">نام: @Model.FullName</p>
                    <p class="text-sm text-gray-600">شماره تماس: @Model.PhoneNumber</p>
                    <p class="text-sm text-gray-600">تاریخ عضویت: @Model.CreatedAt.ToLocalTime().ToString("yyyy/MM/dd")</p>
                    <a href="/User/Dashboard/Profile" class="text-blue-600 hover:text-blue-800 text-sm">ویرایش پروفایل</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Consultations -->
    @if (ViewBag.RecentConsultations != null)
    {
        <div class="bg-white shadow rounded-lg">
            <div class="px-6 py-4 border-b border-gray-200">
                <h3 class="text-lg font-medium text-gray-900">آخرین مشاوره‌ها</h3>
            </div>
            <div class="divide-y divide-gray-200">
                @foreach (var consultation in ViewBag.RecentConsultations)
                {
                    <div class="px-6 py-4">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-sm font-medium text-gray-900">دکتر @consultation.Doctor.FullName</p>
                                <p class="text-sm text-gray-500">@consultation.Doctor.Specialization</p>
                                <p class="text-sm text-gray-400">@consultation.CreatedAt.ToLocalTime().ToString("yyyy/MM/dd HH:mm")</p>
                            </div>
                            <div class="text-left">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                                    @(consultation.Status == ConsultationStatus.Completed ? "bg-green-100 text-green-800" :
                                      consultation.Status == ConsultationStatus.Pending ? "bg-yellow-100 text-yellow-800" :
                                      consultation.Status == ConsultationStatus.InProgress ? "bg-blue-100 text-blue-800" :
                                      "bg-gray-100 text-gray-800")">
                                    @(consultation.Status == ConsultationStatus.Completed ? "تکمیل شده" :
                                      consultation.Status == ConsultationStatus.Pending ? "در انتظار" :
                                      consultation.Status == ConsultationStatus.InProgress ? "در حال انجام" :
                                      consultation.Status.ToString())
                                </span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div> 