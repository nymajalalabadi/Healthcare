@model User
@{
    ViewData["Title"] = "پروفایل من";
}

<div class="min-h-screen bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50 py-8">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Enhanced Header with gradient background -->
        <div class="bg-gradient-to-r from-blue-600 to-indigo-700 rounded-2xl shadow-2xl p-8 mb-8 text-white transform hover:scale-[1.02] transition-all duration-300">
            <div class="flex flex-col lg:flex-row items-center justify-between">
                <div class="flex items-center mb-4 lg:mb-0">
                    <a href="@Url.Action("Index")" class="text-blue-100 hover:text-white transition-colors duration-200 ml-4 transform hover:scale-110">
                        <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                        </svg>
                    </a>
                    <div>
                        <h1 class="text-3xl lg:text-4xl font-bold">پروفایل من</h1>
                        <p class="text-blue-100 mt-2">مدیریت اطلاعات شخصی و حساب کاربری</p>
                    </div>
                </div>
                <div class="flex items-center space-x-3 space-x-reverse">
                    <a href="/User/Profile/Edit" class="bg-white/20 backdrop-blur-sm text-white px-6 py-3 rounded-xl hover:bg-white/30 transition-all duration-200 border border-white/30 transform hover:scale-105">
                        <svg class="w-5 h-5 inline ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                        </svg>
                        ویرایش پروفایل
                    </a>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Enhanced Profile Picture Section -->
            <div class="lg:col-span-1">
                <div class="bg-white rounded-2xl shadow-xl p-8 transform hover:shadow-2xl transition-all duration-300 border border-gray-100">
                    <div class="text-center">
                        <div class="relative inline-block group">
                            @if (!string.IsNullOrEmpty(Model.ProfilePictureUrl))
                            {
                                <img src="@Model.ProfilePictureUrl" alt="تصویر پروفایل" 
                                     class="w-36 h-36 rounded-full object-cover border-4 border-blue-100 shadow-lg transform group-hover:scale-105 transition-all duration-300">
                            }
                            else if (Model.ProfilePicture != null && Model.ProfilePicture.Length > 0)
                            {
                                <img src="@Url.Action("GetProfilePicture", "Profile", new { userId = Model.Id })" alt="تصویر پروفایل" 
                                     class="w-36 h-36 rounded-full object-cover border-4 border-blue-100 shadow-lg transform group-hover:scale-105 transition-all duration-300">
                            }
                            else
                            {
                                <div class="w-36 h-36 rounded-full bg-gradient-to-r from-blue-500 to-indigo-600 flex items-center justify-center border-4 border-blue-100 shadow-lg transform group-hover:scale-105 transition-all duration-300">
                                    <svg class="w-20 h-20 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                    </svg>
                                </div>
                            }
                            
                            <!-- Upload overlay -->
                            <div class="absolute inset-0 bg-black/50 rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center">
                                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                </svg>
                            </div>
                        </div>
                        
                        <h2 class="mt-6 text-2xl font-bold text-gray-800">@Model.FullName</h2>
                        <div class="inline-flex items-center px-4 py-2 bg-gradient-to-r from-blue-100 to-indigo-100 rounded-full mt-3">
                            <div class="w-2 h-2 bg-blue-500 rounded-full ml-2"></div>
                            <span class="text-blue-700 font-medium">
                                @(Model.UserType == UserType.Doctor ? "پزشک" : "کاربر عادی")
                            </span>
                        </div>
                        
                        <!-- Enhanced Upload Profile Picture -->
                        <form asp-action="UploadProfilePicture" method="post" enctype="multipart/form-data" class="mt-6">
                            @Html.AntiForgeryToken()
                            <div class="flex flex-col items-center">
                                <input type="file" name="profilePicture" accept="image/*" 
                                       class="hidden" id="profile-picture-input">
                                <label for="profile-picture-input" 
                                       class="cursor-pointer bg-gradient-to-r from-blue-500 to-indigo-600 text-white px-6 py-3 rounded-xl hover:from-blue-600 hover:to-indigo-700 transition-all duration-200 text-sm font-medium transform hover:scale-105 shadow-lg">
                                    <svg class="w-4 h-4 inline ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"></path>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                    </svg>
                                    تغییر تصویر
                                </label>
                                <button type="submit" id="upload-btn" 
                                        class="hidden mt-3 bg-green-500 text-white px-6 py-2 rounded-lg hover:bg-green-600 transition-all duration-200 text-sm font-medium transform hover:scale-105 shadow-lg">
                                    <svg class="w-4 h-4 inline ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                    </svg>
                                    آپلود
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Enhanced Quick Actions -->
                <div class="bg-white rounded-2xl shadow-xl p-8 mt-8 transform hover:shadow-2xl transition-all duration-300 border border-gray-100">
                    <h3 class="text-xl font-bold text-gray-800 mb-6 flex items-center">
                        <svg class="w-6 h-6 text-blue-600 ml-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                        </svg>
                        عملیات سریع
                    </h3>
                    <div class="space-y-4">
                        <a href="/User/Profile/Edit" 
                           class="flex items-center p-4 text-gray-700 hover:bg-gradient-to-r hover:from-blue-50 hover:to-indigo-50 rounded-xl transition-all duration-200 border border-transparent hover:border-blue-200 transform hover:scale-[1.02]">
                            <div class="w-10 h-10 bg-blue-100 rounded-xl flex items-center justify-center ml-4">
                                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                </svg>
                            </div>
                            <span class="font-medium">ویرایش اطلاعات</span>
                        </a>
                        <a href="/User/Profile/ChangePassword" 
                           class="flex items-center p-4 text-gray-700 hover:bg-gradient-to-r hover:from-green-50 hover:to-emerald-50 rounded-xl transition-all duration-200 border border-transparent hover:border-green-200 transform hover:scale-[1.02]">
                            <div class="w-10 h-10 bg-green-100 rounded-xl flex items-center justify-center ml-4">
                                <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v-2L4.257 10.257a6 6 0 119.486-9.486L15 2.5"></path>
                                </svg>
                            </div>
                            <span class="font-medium">تغییر رمز عبور</span>
                        </a>
                        <a href="@Url.Action("Index")" 
                           class="flex items-center p-4 text-gray-700 hover:bg-gradient-to-r hover:from-purple-50 hover:to-violet-50 rounded-xl transition-all duration-200 border border-transparent hover:border-purple-200 transform hover:scale-[1.02]">
                            <div class="w-10 h-10 bg-purple-100 rounded-xl flex items-center justify-center ml-4">
                                <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5a2 2 0 012-2h4a2 2 0 012 2v3H8V5z"></path>
                                </svg>
                            </div>
                            <span class="font-medium">داشبورد</span>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Enhanced Profile Information -->
            <div class="lg:col-span-2 space-y-8">
                <!-- Personal Information Card -->
                <div class="bg-white rounded-2xl shadow-xl p-8 transform hover:shadow-2xl transition-all duration-300 border border-gray-100">
                    <h3 class="text-xl font-bold text-gray-800 mb-6 flex items-center">
                        <svg class="w-6 h-6 text-indigo-600 ml-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                        اطلاعات شخصی
                    </h3>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="space-y-4">
                            <div class="group">
                                <label class="block text-sm font-medium text-gray-600 mb-2">نام</label>
                                <div class="bg-gradient-to-r from-blue-50 to-indigo-50 p-4 rounded-xl border border-blue-100 group-hover:border-blue-300 transition-all duration-200">
                                    <span class="text-gray-800 font-medium">@Model.FirstName</span>
                                </div>
                            </div>
                            
                            <div class="group">
                                <label class="block text-sm font-medium text-gray-600 mb-2">شماره موبایل</label>
                                <div class="bg-gradient-to-r from-blue-50 to-indigo-50 p-4 rounded-xl border border-blue-100 group-hover:border-blue-300 transition-all duration-200">
                                    <span class="text-gray-800 font-mono font-medium">@Model.PhoneNumber</span>
                                </div>
                            </div>
                            
                            <div class="group">
                                <label class="block text-sm font-medium text-gray-600 mb-2">تاریخ ثبت‌نام</label>
                                <div class="bg-gradient-to-r from-blue-50 to-indigo-50 p-4 rounded-xl border border-blue-100 group-hover:border-blue-300 transition-all duration-200">
                                    <span class="text-gray-800 font-medium">@Model.CreatedAt.ToString("yyyy/MM/dd - HH:mm")</span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="space-y-4">
                            <div class="group">
                                <label class="block text-sm font-medium text-gray-600 mb-2">نام خانوادگی</label>
                                <div class="bg-gradient-to-r from-blue-50 to-indigo-50 p-4 rounded-xl border border-blue-100 group-hover:border-blue-300 transition-all duration-200">
                                    <span class="text-gray-800 font-medium">@Model.LastName</span>
                                </div>
                            </div>
                            
                            <div class="group">
                                <label class="block text-sm font-medium text-gray-600 mb-2">ایمیل</label>
                                <div class="bg-gradient-to-r from-blue-50 to-indigo-50 p-4 rounded-xl border border-blue-100 group-hover:border-blue-300 transition-all duration-200">
                                    <span class="text-gray-800 font-medium">@(Model.Email ?? "تعریف نشده")</span>
                                </div>
                            </div>
                            
                            @if (Model.UpdatedAt.HasValue)
                            {
                                <div class="group">
                                    <label class="block text-sm font-medium text-gray-600 mb-2">آخرین بروزرسانی</label>
                                    <div class="bg-gradient-to-r from-blue-50 to-indigo-50 p-4 rounded-xl border border-blue-100 group-hover:border-blue-300 transition-all duration-200">
                                        <span class="text-gray-800 font-medium">@Model.UpdatedAt.Value.ToString("yyyy/MM/dd - HH:mm")</span>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Enhanced Account Statistics -->
                <div class="bg-white rounded-2xl shadow-xl p-8 transform hover:shadow-2xl transition-all duration-300 border border-gray-100">
                    <h3 class="text-xl font-bold text-gray-800 mb-6 flex items-center">
                        <svg class="w-6 h-6 text-green-600 ml-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                        </svg>
                        آمار حساب کاربری
                    </h3>
                    
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                        <div class="bg-gradient-to-br from-blue-50 to-blue-100 p-6 rounded-2xl text-center border border-blue-200 transform hover:scale-105 transition-all duration-300">
                            <div class="w-16 h-16 bg-gradient-to-r from-blue-500 to-blue-600 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-lg">
                                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                                </svg>
                            </div>
                            <div class="text-3xl font-bold text-blue-600">@ViewBag.TotalConsultations</div>
                            <div class="text-sm text-blue-700 font-medium">مشاوره‌های کل</div>
                        </div>
                        <div class="bg-gradient-to-br from-green-50 to-green-100 p-6 rounded-2xl text-center border border-green-200 transform hover:scale-105 transition-all duration-300">
                            <div class="w-16 h-16 bg-gradient-to-r from-green-500 to-green-600 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-lg">
                                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                </svg>
                            </div>
                            <div class="text-3xl font-bold text-green-600">@ViewBag.CompletedConsultations</div>
                            <div class="text-sm text-green-700 font-medium">مشاوره‌های تکمیل شده</div>
                        </div>
                        <div class="bg-gradient-to-br from-yellow-50 to-yellow-100 p-6 rounded-2xl text-center border border-yellow-200 transform hover:scale-105 transition-all duration-300">
                            <div class="w-16 h-16 bg-gradient-to-r from-yellow-500 to-yellow-600 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-lg">
                                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                            </div>
                            <div class="text-3xl font-bold text-yellow-600">@ViewBag.PendingConsultations</div>
                            <div class="text-sm text-yellow-700 font-medium">مشاوره‌های در انتظار</div>
                        </div>
                    </div>
                </div>

                <!-- Enhanced Recent Activity -->
                <div class="bg-white rounded-2xl shadow-xl p-8 transform hover:shadow-2xl transition-all duration-300 border border-gray-100">
                    <h3 class="text-xl font-bold text-gray-800 mb-6 flex items-center">
                        <svg class="w-6 h-6 text-red-600 ml-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        فعالیت‌های اخیر
                    </h3>
                    
                    <div class="space-y-4">
                        @if (ViewBag.RecentActivity != null && ViewBag.RecentActivity.Count > 0)
                        {
                            @foreach (var activity in ViewBag.RecentActivity)
                            {
                                <div class="flex items-center p-4 hover:bg-gradient-to-r hover:from-red-50 hover:to-pink-50 rounded-xl transition-all duration-200 border border-transparent hover:border-red-100 transform hover:scale-[1.02]">
                                    <div class="w-12 h-12 bg-gradient-to-r from-red-500 to-pink-600 rounded-xl flex items-center justify-center ml-4 shadow-lg">
                                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                        </svg>
                                    </div>
                                    <div class="flex-1">
                                        <p class="text-sm font-medium text-gray-900">@activity.Description</p>
                                        <p class="text-xs text-gray-500 mt-1">@activity.Timestamp.ToString("yyyy/MM/dd HH:mm")</p>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-center py-12 text-gray-500">
                                <div class="w-24 h-24 bg-gradient-to-r from-gray-200 to-gray-300 rounded-full flex items-center justify-center mx-auto mb-6">
                                    <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                </div>
                                <p class="text-lg font-medium text-gray-600">هیچ فعالیتی نداشته‌اید</p>
                                <p class="text-sm text-gray-400 mt-2">پس از رزرو نوبت مشاوره، فعالیت‌ها نمایش داده می‌شوند</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Enhanced profile picture upload functionality
    document.getElementById('profile-picture-input').addEventListener('change', function(e) {
        const uploadBtn = document.getElementById('upload-btn');
        if (e.target.files.length > 0) {
            uploadBtn.classList.remove('hidden');
            uploadBtn.classList.add('animate-pulse');
        } else {
            uploadBtn.classList.add('hidden');
            uploadBtn.classList.remove('animate-pulse');
        }
    });

    // Add smooth scroll animations
    document.addEventListener('DOMContentLoaded', function() {
        const cards = document.querySelectorAll('.bg-white');
        cards.forEach((card, index) => {
            card.style.opacity = '0';
            card.style.transform = 'translateY(30px)';
            
            setTimeout(() => {
                card.style.transition = 'all 0.8s ease-out';
                card.style.opacity = '1';
                card.style.transform = 'translateY(0)';
            }, index * 150);
        });
    });

    // Add hover effects for interactive elements
    const interactiveElements = document.querySelectorAll('a, button, .group');
    interactiveElements.forEach(element => {
        element.addEventListener('mouseenter', function() {
            this.style.transform = 'translateY(-2px)';
        });
        
        element.addEventListener('mouseleave', function() {
            this.style.transform = 'translateY(0)';
        });
    });
</script>
