@model User
@using System.Linq
@{
    ViewData["Title"] = "برنامه‌ها و زمان‌بندی";
}

<div class="min-h-screen bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Enhanced Header with gradient background -->
        <div class="bg-gradient-to-r from-blue-600 to-indigo-700 rounded-2xl shadow-2xl p-8 mb-8 text-white transform hover:scale-[1.02] transition-all duration-300">
            <div class="flex flex-col lg:flex-row items-center justify-between">
                <div class="flex items-center mb-4 lg:mb-0">
                    <a href="@Url.Action("Index")" class="text-blue-100 hover:text-white transition-colors duration-200 ml-4 transform hover:scale-110">
                        <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                        </svg>
                    </a>
                    <div>
                        <h1 class="text-3xl lg:text-4xl font-bold">برنامه‌ها و زمان‌بندی</h1>
                        <p class="text-blue-100 mt-2">مدیریت نوبت‌ها و یادآوری‌های مشاوره</p>
                    </div>
                </div>
                <div class="flex items-center space-x-3 space-x-reverse">
                    <button onclick="addNewSchedule()" class="bg-white/20 backdrop-blur-sm text-white px-6 py-3 rounded-xl hover:bg-white/30 transition-all duration-200 border border-white/30 transform hover:scale-105">
                        <svg class="w-5 h-5 inline ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                        </svg>
                        افزودن برنامه جدید
                    </button>
                </div>
            </div>
        </div>

        <!-- Enhanced Calendar Navigation -->
        <div class="bg-white rounded-2xl shadow-xl p-8 mb-8 transform hover:shadow-2xl transition-all duration-300 border border-gray-100">
            <div class="flex flex-col lg:flex-row items-center justify-between mb-6">
                <div class="flex items-center space-x-4 space-x-reverse mb-4 lg:mb-0">
                    <button onclick="previousMonth()" class="p-3 hover:bg-gradient-to-r hover:from-blue-50 hover:to-indigo-50 rounded-xl transition-all duration-200 transform hover:scale-110">
                        <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                        </svg>
                    </button>
                    <h2 id="currentMonth" class="text-2xl font-bold text-gray-800">@DateTime.Now.ToString("MMMM yyyy")</h2>
                    <button onclick="nextMonth()" class="p-3 hover:bg-gradient-to-r hover:from-blue-50 hover:to-indigo-50 rounded-xl transition-all duration-200 transform hover:scale-110">
                        <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                    </button>
                </div>
                <div class="flex items-center space-x-3 space-x-reverse">
                    <button onclick="today()" class="px-6 py-3 bg-gradient-to-r from-blue-500 to-indigo-600 text-white rounded-xl hover:from-blue-600 hover:to-indigo-700 transition-all duration-200 transform hover:scale-105 shadow-lg">
                        امروز
                    </button>
                    <select id="viewType" class="px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent bg-white shadow-sm">
                        <option value="month">ماهانه</option>
                        <option value="week">هفتگی</option>
                        <option value="day">روزانه</option>
                    </select>
                </div>
            </div>

            <!-- Enhanced Calendar Grid -->
            <div class="grid grid-cols-7 gap-2">
                <!-- Day Headers -->
                <div class="p-4 text-center text-sm font-bold text-gray-600 bg-gradient-to-r from-gray-50 to-gray-100 rounded-xl">شنبه</div>
                <div class="p-4 text-center text-sm font-bold text-gray-600 bg-gradient-to-r from-gray-50 to-gray-100 rounded-xl">یکشنبه</div>
                <div class="p-4 text-center text-sm font-bold text-gray-600 bg-gradient-to-r from-gray-50 to-gray-100 rounded-xl">دوشنبه</div>
                <div class="p-4 text-center text-sm font-bold text-gray-600 bg-gradient-to-r from-gray-50 to-gray-100 rounded-xl">سه‌شنبه</div>
                <div class="p-4 text-center text-sm font-bold text-gray-600 bg-gradient-to-r from-gray-50 to-gray-100 rounded-xl">چهارشنبه</div>
                <div class="p-4 text-center text-sm font-bold text-gray-600 bg-gradient-to-r from-gray-50 to-gray-100 rounded-xl">پنج‌شنبه</div>
                <div class="p-4 text-center text-sm font-bold text-gray-600 bg-gradient-to-r from-gray-50 to-gray-100 rounded-xl">جمعه</div>

                <!-- Calendar Days -->
                <div id="calendarDays" class="col-span-7 grid grid-cols-7 gap-2">
                    <!-- Calendar days will be populated by JavaScript -->
                </div>
            </div>
        </div>

        <!-- Enhanced Upcoming Appointments and Reminders -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
            <!-- Enhanced Upcoming Appointments -->
            <div class="bg-white rounded-2xl shadow-xl p-8 transform hover:shadow-2xl transition-all duration-300 border border-gray-100">
                <h3 class="text-xl font-bold text-gray-800 mb-6 flex items-center">
                    <svg class="w-6 h-6 text-blue-600 ml-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                    نوبت‌های آینده
                </h3>
                <div class="space-y-4">
                    @if (ViewBag.UpcomingConsultations != null && ViewBag.UpcomingConsultations.Count > 0)
                    {
                        @foreach (var consultation in ViewBag.UpcomingConsultations)
                        {
                            <div class="bg-gradient-to-r from-blue-50 to-indigo-50 rounded-xl p-6 border border-blue-100 hover:border-blue-300 transition-all duration-200 transform hover:scale-[1.02]">
                                <div class="flex items-center justify-between mb-4">
                                    <div class="flex items-center">
                                        <div class="w-12 h-12 bg-gradient-to-r from-blue-500 to-indigo-600 rounded-xl flex items-center justify-center ml-4 shadow-lg">
                                            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                            </svg>
                                        </div>
                                        <div>
                                            <p class="font-bold text-gray-900">دکتر @consultation.Doctor?.FullName</p>
                                            <p class="text-sm text-gray-600">@consultation.Doctor?.Specialization</p>
                                        </div>
                                    </div>
                                    <div class="text-right">
                                        <span class="text-lg font-bold text-blue-600">@consultation.ScheduledAt.ToString("HH:mm")</span>
                                        <p class="text-sm text-gray-500">@consultation.ScheduledAt.ToString("MM/dd")</p>
                                    </div>
                                </div>
                                <div class="flex items-center justify-between">
                                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                                        @(consultation.Type == ConsultationType.TextChat ? "چت متنی" :
                                          consultation.Type == ConsultationType.VoiceCall ? "تماس صوتی" :
                                          consultation.Type == ConsultationType.VideoCall ? "تماس تصویری" :
                                          "حضوری")
                                    </span>
                                                                         <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                                         @(consultation.Status == SnappDoctor.Core.Enums.ConsultationStatus.Confirmed ? "تأیید شده" : "در انتظار تأیید")
                                     </span>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-12 text-gray-500">
                            <div class="w-24 h-24 bg-gradient-to-r from-gray-200 to-gray-300 rounded-full flex items-center justify-center mx-auto mb-6">
                                <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                </svg>
                            </div>
                            <p class="text-lg font-medium text-gray-600">نوبت آینده‌ای ندارید</p>
                            <p class="text-sm text-gray-400 mt-2">برای رزرو نوبت مشاوره، به بخش پزشکان مراجعه کنید</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Enhanced Reminders -->
            <div class="bg-white rounded-2xl shadow-xl p-8 transform hover:shadow-2xl transition-all duration-300 border border-gray-100">
                <h3 class="text-xl font-bold text-gray-800 mb-6 flex items-center">
                    <svg class="w-6 h-6 text-yellow-600 ml-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    یادآوری‌ها
                </h3>
                <div class="space-y-4">
                    @if (ViewBag.Reminders != null && ViewBag.Reminders.Count > 0)
                    {
                        @foreach (var reminder in ViewBag.Reminders)
                        {
                            <div class="bg-gradient-to-r from-yellow-50 to-orange-50 rounded-xl p-6 border border-yellow-100 hover:border-yellow-300 transition-all duration-200 transform hover:scale-[1.02]">
                                <div class="flex items-center justify-between mb-4">
                                    <div class="flex items-center">
                                        <div class="w-12 h-12 bg-gradient-to-r from-yellow-500 to-orange-600 rounded-xl flex items-center justify-center ml-4 shadow-lg">
                                            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                            </svg>
                                        </div>
                                        <div>
                                            <p class="font-bold text-gray-900">@reminder.Title</p>
                                            <p class="text-sm text-gray-600">@reminder.DateTime</p>
                                        </div>
                                    </div>
                                    <button class="text-gray-400 hover:text-gray-600 transition-colors duration-200">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                        </svg>
                                    </button>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-12 text-gray-500">
                            <div class="w-24 h-24 bg-gradient-to-r from-gray-200 to-gray-300 rounded-full flex items-center justify-center mx-auto mb-6">
                                <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                            </div>
                            <p class="text-lg font-medium text-gray-600">یادآوری‌ای ندارید</p>
                            <p class="text-sm text-gray-400 mt-2">یادآوری جدید اضافه کنید</p>
                        </div>
                    }
                </div>

                <button onclick="addNewReminder()" class="w-full mt-6 p-4 border-2 border-dashed border-gray-300 rounded-xl text-gray-500 hover:text-gray-700 hover:border-gray-400 transition-all duration-200 transform hover:scale-[1.02]">
                    <svg class="w-8 h-8 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                    </svg>
                    افزودن یادآوری جدید
                </button>
            </div>
        </div>

        <!-- Enhanced Schedule Statistics -->
        <div class="bg-white rounded-2xl shadow-xl p-8 transform hover:shadow-2xl transition-all duration-300 border border-gray-100">
            <h3 class="text-xl font-bold text-gray-800 mb-6 flex items-center">
                <svg class="w-6 h-6 text-green-600 ml-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                </svg>
                آمار برنامه‌ها
            </h3>
            <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
                <div class="bg-gradient-to-br from-blue-50 to-blue-100 p-6 rounded-2xl text-center border border-blue-200 transform hover:scale-105 transition-all duration-300">
                    <div class="w-16 h-16 bg-gradient-to-r from-blue-500 to-blue-600 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-lg">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                    </div>
                    <div class="text-3xl font-bold text-blue-600">@ViewBag.TotalScheduled</div>
                    <div class="text-sm text-blue-700 font-medium">کل نوبت‌های رزرو شده</div>
                </div>
                <div class="bg-gradient-to-br from-green-50 to-green-100 p-6 rounded-2xl text-center border border-green-200 transform hover:scale-105 transition-all duration-300">
                    <div class="w-16 h-16 bg-gradient-to-r from-green-500 to-green-600 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-lg">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                    </div>
                    <div class="text-3xl font-bold text-green-600">@ViewBag.CompletedScheduled</div>
                    <div class="text-sm text-green-700 font-medium">نوبت‌های تکمیل شده</div>
                </div>
                <div class="bg-gradient-to-br from-yellow-50 to-yellow-100 p-6 rounded-2xl text-center border border-yellow-200 transform hover:scale-105 transition-all duration-300">
                    <div class="w-16 h-16 bg-gradient-to-r from-yellow-500 to-yellow-600 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-lg">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                    <div class="text-3xl font-bold text-yellow-600">@ViewBag.UpcomingScheduled</div>
                    <div class="text-sm text-yellow-700 font-medium">نوبت‌های آینده</div>
                </div>
                <div class="bg-gradient-to-br from-red-50 to-red-100 p-6 rounded-2xl text-center border border-red-200 transform hover:scale-105 transition-all duration-300">
                    <div class="w-16 h-16 bg-gradient-to-r from-red-500 to-red-600 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-lg">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                    </div>
                    <div class="text-3xl font-bold text-red-600">@ViewBag.CancelledScheduled</div>
                    <div class="text-sm text-red-700 font-medium">نوبت‌های لغو شده</div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Enhanced Add Schedule Modal -->
<div id="scheduleModal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50 backdrop-blur-sm">
    <div class="flex items-center justify-center min-h-screen p-4">
        <div class="bg-white rounded-2xl shadow-2xl max-w-md w-full transform transition-all duration-300 scale-95 opacity-0" id="modalContent">
            <div class="p-8">
                <div class="flex items-center justify-between mb-6">
                    <h3 class="text-xl font-bold text-gray-800">افزودن برنامه جدید</h3>
                    <button onclick="closeScheduleModal()" class="text-gray-400 hover:text-gray-600 transition-colors duration-200">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                    </button>
                </div>
                
                <form id="scheduleForm" class="space-y-6">
                    <div>
                        <label class="block text-sm font-bold text-gray-700 mb-2">عنوان برنامه</label>
                        <input type="text" id="scheduleTitle" class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200" placeholder="عنوان برنامه را وارد کنید">
                    </div>
                    
                    <div>
                        <label class="block text-sm font-bold text-gray-700 mb-2">تاریخ</label>
                        <input type="date" id="scheduleDate" class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200">
                    </div>
                    
                    <div>
                        <label class="block text-sm font-bold text-gray-700 mb-2">زمان</label>
                        <input type="time" id="scheduleTime" class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200">
                    </div>
                    
                    <div>
                        <label class="block text-sm font-bold text-gray-700 mb-2">توضیحات</label>
                        <textarea id="scheduleDescription" rows="3" class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200" placeholder="توضیحات برنامه را وارد کنید"></textarea>
                    </div>
                    
                    <div>
                        <label class="block text-sm font-bold text-gray-700 mb-2">نوع</label>
                        <select id="scheduleType" class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200">
                            <option value="consultation">مشاوره</option>
                            <option value="reminder">یادآوری</option>
                            <option value="appointment">نوبت</option>
                            <option value="other">سایر</option>
                        </select>
                    </div>
                </form>
                
                <div class="flex justify-end space-x-3 space-x-reverse mt-8">
                    <button onclick="closeScheduleModal()" class="px-6 py-3 text-gray-600 hover:text-gray-800 transition-colors duration-200">
                        انصراف
                    </button>
                    <button onclick="saveSchedule()" class="px-8 py-3 bg-gradient-to-r from-blue-500 to-indigo-600 text-white rounded-xl hover:from-blue-600 hover:to-indigo-700 transition-all duration-200 transform hover:scale-105 shadow-lg">
                        ذخیره
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    let currentDate = new Date();
    
    function renderCalendar() {
        const year = currentDate.getFullYear();
        const month = currentDate.getMonth();
        
        // Update month display
        const monthNames = ['فروردین', 'اردیبهشت', 'خرداد', 'تیر', 'مرداد', 'شهریور', 'مهر', 'آبان', 'آذر', 'دی', 'بهمن', 'اسفند'];
        document.getElementById('currentMonth').textContent = `${monthNames[month]} ${year}`;
        
        // Get first day of month and number of days
        const firstDay = new Date(year, month, 1);
        const lastDay = new Date(year, month + 1, 0);
        const startDate = new Date(firstDay);
        startDate.setDate(startDate.getDate() - firstDay.getDay());
        
        const calendarDays = document.getElementById('calendarDays');
        calendarDays.innerHTML = '';
        
        // Generate calendar grid
        for (let i = 0; i < 42; i++) {
            const date = new Date(startDate);
            date.setDate(startDate.getDate() + i);
            
            const dayElement = document.createElement('div');
            dayElement.className = 'min-h-[120px] p-3 border border-gray-200 hover:bg-gradient-to-r hover:from-blue-50 hover:to-indigo-50 cursor-pointer transition-all duration-200 rounded-xl';
            
            // Check if date is current month
            if (date.getMonth() !== month) {
                dayElement.className += ' bg-gray-50 text-gray-400';
            }
            
            // Check if date is today
            const today = new Date();
            if (date.toDateString() === today.toDateString()) {
                dayElement.className += ' bg-gradient-to-r from-blue-100 to-indigo-100 border-blue-300 shadow-lg';
            }
            
            dayElement.innerHTML = `
                <div class="text-sm font-bold mb-2">${date.getDate()}</div>
                <div class="text-xs text-gray-500 space-y-1">
                    <!-- Events will be populated here -->
                </div>
            `;
            
            dayElement.onclick = () => selectDate(date);
            calendarDays.appendChild(dayElement);
        }
    }
    
    function previousMonth() {
        currentDate.setMonth(currentDate.getMonth() - 1);
        renderCalendar();
    }
    
    function nextMonth() {
        currentDate.setMonth(currentDate.getMonth() + 1);
        renderCalendar();
    }
    
    function today() {
        currentDate = new Date();
        renderCalendar();
    }
    
    function selectDate(date) {
        console.log('Selected date:', date);
        // Here you would typically show events for the selected date
    }
    
    function addNewSchedule() {
        const modal = document.getElementById('scheduleModal');
        const modalContent = document.getElementById('modalContent');
        
        modal.classList.remove('hidden');
        setTimeout(() => {
            modalContent.classList.remove('scale-95', 'opacity-0');
            modalContent.classList.add('scale-100', 'opacity-100');
        }, 10);
        
        // Set default date to today
        const today = new Date().toISOString().split('T')[0];
        document.getElementById('scheduleDate').value = today;
    }
    
    function closeScheduleModal() {
        const modal = document.getElementById('scheduleModal');
        const modalContent = document.getElementById('modalContent');
        
        modalContent.classList.add('scale-95', 'opacity-0');
        modalContent.classList.remove('scale-100', 'opacity-100');
        
        setTimeout(() => {
            modal.classList.add('hidden');
        }, 300);
    }
    
    function saveSchedule() {
