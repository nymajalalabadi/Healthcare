@model User
@{
    ViewData["Title"] = "برنامه‌ها و زمان‌بندی";
}

<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-7xl mx-auto px-4">
        <!-- Header -->
        <div class="bg-white rounded-xl shadow-lg p-6 mb-6">
            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <a href="@Url.Action("Index")" class="text-gray-500 hover:text-gray-700 ml-3">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                        </svg>
                    </a>
                    <h1 class="text-2xl font-bold text-gray-800">برنامه‌ها و زمان‌بندی</h1>
                </div>
                <div class="flex items-center space-x-3 space-x-reverse">
                    <button onclick="addNewSchedule()" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors">
                        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                        </svg>
                        افزودن برنامه جدید
                    </button>
                </div>
            </div>
        </div>

        <!-- Calendar Navigation -->
        <div class="bg-white rounded-xl shadow-lg p-6 mb-6">
            <div class="flex items-center justify-between mb-4">
                <div class="flex items-center space-x-4 space-x-reverse">
                    <button onclick="previousMonth()" class="p-2 hover:bg-gray-100 rounded-lg">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                        </svg>
                    </button>
                    <h2 id="currentMonth" class="text-xl font-semibold text-gray-800">@DateTime.Now.ToString("MMMM yyyy")</h2>
                    <button onclick="nextMonth()" class="p-2 hover:bg-gray-100 rounded-lg">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                    </button>
                </div>
                <div class="flex items-center space-x-3 space-x-reverse">
                    <button onclick="today()" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                        امروز
                    </button>
                    <select id="viewType" class="px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                        <option value="month">ماهانه</option>
                        <option value="week">هفتگی</option>
                        <option value="day">روزانه</option>
                    </select>
                </div>
            </div>

            <!-- Calendar Grid -->
            <div class="grid grid-cols-7 gap-1">
                <!-- Day Headers -->
                <div class="p-3 text-center text-sm font-medium text-gray-500">شنبه</div>
                <div class="p-3 text-center text-sm font-medium text-gray-500">یکشنبه</div>
                <div class="p-3 text-center text-sm font-medium text-gray-500">دوشنبه</div>
                <div class="p-3 text-center text-sm font-medium text-gray-500">سه‌شنبه</div>
                <div class="p-3 text-center text-sm font-medium text-gray-500">چهارشنبه</div>
                <div class="p-3 text-center text-sm font-medium text-gray-500">پنج‌شنبه</div>
                <div class="p-3 text-center text-sm font-medium text-gray-500">جمعه</div>

                <!-- Calendar Days -->
                <div id="calendarDays" class="col-span-7 grid grid-cols-7 gap-1">
                    <!-- Calendar days will be populated by JavaScript -->
                </div>
            </div>
        </div>

        <!-- Upcoming Appointments -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
            <div class="bg-white rounded-xl shadow-lg p-6">
                <h3 class="text-lg font-semibold text-gray-800 mb-4">نوبت‌های آینده</h3>
                <div class="space-y-4">
                    @if (ViewBag.UpcomingConsultations != null)
                    {
                        @foreach (var consultation in ViewBag.UpcomingConsultations)
                        {
                            <div class="border border-gray-200 rounded-lg p-4">
                                <div class="flex items-center justify-between mb-2">
                                    <div class="flex items-center">
                                        <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center ml-3">
                                            <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                            </svg>
                                        </div>
                                        <div>
                                            <p class="font-medium text-gray-900">دکتر @consultation.Doctor.FullName</p>
                                            <p class="text-sm text-gray-600">@consultation.Doctor.Specialization</p>
                                        </div>
                                    </div>
                                    <span class="text-sm text-gray-500">@consultation.ScheduledAt.ToString("HH:mm")</span>
                                </div>
                                <div class="flex items-center justify-between">
                                    <span class="text-sm text-gray-600">
                                        @(consultation.Type == ConsultationType.TextChat ? "چت متنی" :
                                          consultation.Type == ConsultationType.VoiceCall ? "تماس صوتی" :
                                          consultation.Type == ConsultationType.VideoCall ? "تماس تصویری" :
                                          "حضوری")
                                    </span>
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                        @consultation.ScheduledAt.ToString("MM/dd")
                                    </span>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-8 text-gray-500">
                            <svg class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                            </svg>
                            <p>نوبت آینده‌ای برای نمایش وجود ندارد</p>
                        </div>
                    }
                </div>
            </div>

            <div class="bg-white rounded-xl shadow-lg p-6">
                <h3 class="text-lg font-semibold text-gray-800 mb-4">یادآوری‌ها</h3>
                <div class="space-y-4">
                    <div class="border border-gray-200 rounded-lg p-4">
                        <div class="flex items-center justify-between mb-2">
                            <div class="flex items-center">
                                <div class="w-10 h-10 bg-yellow-100 rounded-full flex items-center justify-center ml-3">
                                    <svg class="w-5 h-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                </div>
                                <div>
                                    <p class="font-medium text-gray-900">مشاوره با دکتر احمدی</p>
                                    <p class="text-sm text-gray-600">فردا ساعت 10:00</p>
                                </div>
                            </div>
                            <button class="text-gray-400 hover:text-gray-600">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                </svg>
                            </button>
                        </div>
                    </div>

                    <div class="border border-gray-200 rounded-lg p-4">
                        <div class="flex items-center justify-between mb-2">
                            <div class="flex items-center">
                                <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center ml-3">
                                    <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                </div>
                                <div>
                                    <p class="font-medium text-gray-900">تجدید نسخه</p>
                                    <p class="text-sm text-gray-600">پس‌فردا</p>
                                </div>
                            </div>
                            <button class="text-gray-400 hover:text-gray-600">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                </svg>
                            </button>
                        </div>
                    </div>
                </div>

                <button onclick="addNewReminder()" class="w-full mt-4 p-3 border-2 border-dashed border-gray-300 rounded-lg text-gray-500 hover:text-gray-700 hover:border-gray-400 transition-colors">
                    <svg class="w-6 h-6 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                    </svg>
                    افزودن یادآوری جدید
                </button>
            </div>
        </div>

        <!-- Schedule Statistics -->
        <div class="bg-white rounded-xl shadow-lg p-6">
            <h3 class="text-lg font-semibold text-gray-800 mb-4">آمار برنامه‌ها</h3>
            <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
                <div class="text-center">
                    <div class="text-3xl font-bold text-blue-600 mb-2">@ViewBag.TotalScheduled</div>
                    <div class="text-sm text-gray-600">کل نوبت‌های رزرو شده</div>
                </div>
                <div class="text-center">
                    <div class="text-3xl font-bold text-green-600 mb-2">@ViewBag.CompletedScheduled</div>
                    <div class="text-sm text-gray-600">نوبت‌های تکمیل شده</div>
                </div>
                <div class="text-center">
                    <div class="text-3xl font-bold text-yellow-600 mb-2">@ViewBag.UpcomingScheduled</div>
                    <div class="text-sm text-gray-600">نوبت‌های آینده</div>
                </div>
                <div class="text-center">
                    <div class="text-3xl font-bold text-red-600 mb-2">@ViewBag.CancelledScheduled</div>
                    <div class="text-sm text-gray-600">نوبت‌های لغو شده</div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Schedule Modal -->
<div id="scheduleModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden z-50">
    <div class="flex items-center justify-center min-h-screen p-4">
        <div class="bg-white rounded-xl shadow-lg max-w-md w-full">
            <div class="p-6">
                <h3 class="text-lg font-semibold text-gray-800 mb-4">افزودن برنامه جدید</h3>
                
                <form id="scheduleForm" class="space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">عنوان برنامه</label>
                        <input type="text" id="scheduleTitle" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" placeholder="عنوان برنامه را وارد کنید">
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">تاریخ</label>
                        <input type="date" id="scheduleDate" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">زمان</label>
                        <input type="time" id="scheduleTime" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">توضیحات</label>
                        <textarea id="scheduleDescription" rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" placeholder="توضیحات برنامه را وارد کنید"></textarea>
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">نوع</label>
                        <select id="scheduleType" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                            <option value="consultation">مشاوره</option>
                            <option value="reminder">یادآوری</option>
                            <option value="appointment">نوبت</option>
                            <option value="other">سایر</option>
                        </select>
                    </div>
                </form>
                
                <div class="flex justify-end space-x-3 space-x-reverse mt-6">
                    <button onclick="closeScheduleModal()" class="px-4 py-2 text-gray-600 hover:text-gray-800">
                        انصراف
                    </button>
                    <button onclick="saveSchedule()" class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
                        ذخیره
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    let currentDate = new Date();
    
    function renderCalendar() {
        const year = currentDate.getFullYear();
        const month = currentDate.getMonth();
        
        // Update month display
        const monthNames = ['فروردین', 'اردیبهشت', 'خرداد', 'تیر', 'مرداد', 'شهریور', 'مهر', 'آبان', 'آذر', 'دی', 'بهمن', 'اسفند'];
        document.getElementById('currentMonth').textContent = `${monthNames[month]} ${year}`;
        
        // Get first day of month and number of days
        const firstDay = new Date(year, month, 1);
        const lastDay = new Date(year, month + 1, 0);
        const startDate = new Date(firstDay);
        startDate.setDate(startDate.getDate() - firstDay.getDay());
        
        const calendarDays = document.getElementById('calendarDays');
        calendarDays.innerHTML = '';
        
        // Generate calendar grid
        for (let i = 0; i < 42; i++) {
            const date = new Date(startDate);
            date.setDate(startDate.getDate() + i);
            
            const dayElement = document.createElement('div');
            dayElement.className = 'min-h-[100px] p-2 border border-gray-200 hover:bg-gray-50 cursor-pointer';
            
            // Check if date is current month
            if (date.getMonth() !== month) {
                dayElement.className += ' bg-gray-50 text-gray-400';
            }
            
            // Check if date is today
            const today = new Date();
            if (date.toDateString() === today.toDateString()) {
                dayElement.className += ' bg-blue-100 border-blue-300';
            }
            
            dayElement.innerHTML = `
                <div class="text-sm font-medium mb-1">${date.getDate()}</div>
                <div class="text-xs text-gray-500">
                    <!-- Events will be populated here -->
                </div>
            `;
            
            dayElement.onclick = () => selectDate(date);
            calendarDays.appendChild(dayElement);
        }
    }
    
    function previousMonth() {
        currentDate.setMonth(currentDate.getMonth() - 1);
        renderCalendar();
    }
    
    function nextMonth() {
        currentDate.setMonth(currentDate.getMonth() + 1);
        renderCalendar();
    }
    
    function today() {
        currentDate = new Date();
        renderCalendar();
    }
    
    function selectDate(date) {
        console.log('Selected date:', date);
        // Here you would typically show events for the selected date
    }
    
    function addNewSchedule() {
        document.getElementById('scheduleModal').classList.remove('hidden');
        // Set default date to today
        const today = new Date().toISOString().split('T')[0];
        document.getElementById('scheduleDate').value = today;
    }
    
    function closeScheduleModal() {
        document.getElementById('scheduleModal').classList.add('hidden');
    }
    
    function saveSchedule() {
        const title = document.getElementById('scheduleTitle').value;
        const date = document.getElementById('scheduleDate').value;
        const time = document.getElementById('scheduleTime').value;
        const description = document.getElementById('scheduleDescription').value;
        const type = document.getElementById('scheduleType').value;
        
        if (!title || !date || !time) {
            alert('لطفاً تمام فیلدهای ضروری را پر کنید');
            return;
        }
        
        // Here you would typically save the schedule
        console.log('Saving schedule:', { title, date, time, description, type });
        alert('برنامه با موفقیت ذخیره شد');
        closeScheduleModal();
        
        // Clear form
        document.getElementById('scheduleForm').reset();
    }
    
    function addNewReminder() {
        // This would typically open a reminder form
        alert('این قابلیت به زودی اضافه خواهد شد');
    }
    
    // Close modal when clicking outside
    document.getElementById('scheduleModal').addEventListener('click', function(e) {
        if (e.target === this) {
            closeScheduleModal();
        }
    });
    
    // Initialize calendar
    document.addEventListener('DOMContentLoaded', function() {
        renderCalendar();
    });
</script>
