<!DOCTYPE html>
<html dir="rtl" lang="fa">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - پنل پزشکی اسنپ‌داکتر</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        'vazir': ['Vazir', 'sans-serif']
                    }
                }
            }
        }
    </script>
    <link href="https://fonts.googleapis.com/css2?family=Vazir:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="bg-gray-50 font-vazir">
    <!-- Navigation -->
    <nav class="bg-blue-900 shadow-lg">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <div class="flex items-center">
                    <div class="flex-shrink-0 flex items-center">
                        <a href="/" class="text-2xl font-bold text-white">اسنپ‌داکتر</a>
                        <span class="mr-2 text-blue-200 text-sm">پنل پزشکی</span>
                    </div>
                    <div class="hidden md:block">
                        <div class="mr-10 flex items-baseline space-x-4 space-x-reverse">
                            <a href="/Doctor/Dashboard" class="text-white hover:text-blue-200 px-3 py-2 rounded-md text-sm font-medium">داشبورد</a>
                            <a href="/Doctor/Consultations" class="text-blue-200 hover:text-white px-3 py-2 rounded-md text-sm font-medium">مشاوره‌ها</a>
                        </div>
                    </div>
                </div>
                <div class="flex items-center">
                    <div class="flex items-center space-x-4 space-x-reverse">
                        <span class="text-blue-200">دکتر محمد فرضی‌پور</span>
                        <a href="/Doctor/Dashboard/Profile" class="text-blue-200 hover:text-white px-3 py-2 rounded-md text-sm font-medium">پروفایل</a>
                        <form asp-area="" asp-controller="Auth" asp-action="Logout" method="post" class="inline">
                            <button type="submit" class="text-blue-200 hover:text-red-300 px-3 py-2 rounded-md text-sm font-medium">خروج</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
        <!-- Alerts -->
        @if (TempData["Success"] != null)
        {
            <div class="mb-4 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded">
                @TempData["Success"]
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="mb-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
                @TempData["Error"]
            </div>
        }

        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-blue-900 border-t mt-auto">
        <div class="max-w-7xl mx-auto py-4 px-4 sm:px-6 lg:px-8">
            <div class="text-center text-blue-200 text-sm">
                © 2024 اسنپ‌داکتر - پنل پزشکی
            </div>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html> 