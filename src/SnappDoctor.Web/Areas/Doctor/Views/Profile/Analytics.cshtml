                        <svg class="w-10 h-10 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                        </svg>
                    </div>
                    <div class="text-2xl font-bold text-gray-900">@Model.ChatConsultations</div>
                    <div class="text-sm text-gray-500">چت متنی</div>
                    <div class="text-sm text-blue-600">@((Model.TotalConsultations > 0 ? (double)Model.ChatConsultations / Model.TotalConsultations * 100 : 0).ToString("F0"))٪</div>
                </div>
                <div class="text-center">
                    <div class="w-20 h-20 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-3">
                        <svg class="w-10 h-10 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                        </svg>
                    </div>
                    <div class="text-2xl font-bold text-gray-900">@Model.VoiceCallConsultations</div>
                    <div class="text-sm text-gray-500">تماس صوتی</div>
                    <div class="text-sm text-green-600">@((Model.TotalConsultations > 0 ? (double)Model.VoiceCallConsultations / Model.TotalConsultations * 100 : 0).ToString("F0"))٪</div>
                </div>
                <div class="text-center">
                    <div class="w-20 h-20 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-3">
                        <svg class="w-10 h-10 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                        </svg>
                    </div>
                    <div class="text-2xl font-bold text-gray-900">@Model.VideoCallConsultations</div>
                    <div class="text-sm text-gray-500">تماس تصویری</div>
                    <div class="text-sm text-purple-600">@((Model.TotalConsultations > 0 ? (double)Model.VideoCallConsultations / Model.TotalConsultations * 100 : 0).ToString("F0"))٪</div>
                </div>
                <div class="text-center">
                    <div class="w-20 h-20 bg-orange-100 rounded-full flex items-center justify-center mx-auto mb-3">
                        <svg class="w-10 h-10 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                        </svg>
                </div>
                <div class="text-2xl font-bold text-gray-900">@Model.InPersonConsultations</div>
                <div class="text-sm text-gray-500">حضوری</div>
                <div class="text-sm text-orange-600">@((Model.TotalConsultations > 0 ? (double)Model.InPersonConsultations / Model.TotalConsultations * 100 : 0).ToString("F0"))٪</div>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6 mb-8">
        <h3 class="text-lg font-medium text-gray-900 mb-6">فعالیت‌های اخیر</h3>
        <div class="space-y-4">
            @foreach (var activity in Model.RecentActivities)
            {
                <div class="flex items-center space-x-4 space-x-reverse">
                    <div class="w-10 h-10 @(activity.Type == "ConsultationCompleted" ? "bg-green-100" : activity.Type == "NewConsultation" ? "bg-blue-100" : "bg-yellow-100") rounded-full flex items-center justify-center">
                        @if (activity.Type == "ConsultationCompleted")
                        {
                            <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                        }
                        else if (activity.Type == "NewConsultation")
                        {
                            <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path></svg>
                        }
                        else if (activity.Type == "NewReview")
