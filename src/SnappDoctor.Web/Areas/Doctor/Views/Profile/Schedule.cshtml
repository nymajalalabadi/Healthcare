@model SnappDoctor.Core.Entities.Doctor
@{
    ViewData["Title"] = "مدیریت برنامه زمانی";
}

<div class="px-4 py-6 sm:px-0">
    <!-- Header -->
    <div class="mb-8 flex justify-between items-center">
        <div>
            <h1 class="text-3xl font-bold text-gray-900">مدیریت برنامه زمانی</h1>
            <p class="text-gray-600 mt-2">تنظیم ساعات کاری و دسترسی</p>
        </div>
        <a href="/Doctor/Profile" class="bg-gray-600 text-white px-6 py-2 rounded-lg hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-500">
            بازگشت
        </a>
    </div>

    <!-- Current Status -->
    <div class="bg-white shadow rounded-lg p-6 mb-6">
        <div class="flex items-center justify-between">
            <div>
                <h3 class="text-lg font-medium text-gray-900">وضعیت فعلی</h3>
                <p class="text-gray-600">وضعیت دسترسی جهت پذیرش مشاوره</p>
            </div>
            <div class="flex items-center space-x-3 space-x-reverse">
                <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium @(Model.IsAvailable ? "bg-green-100 text-green-800" : "bg-red-100 text-red-800")">
                    @(Model.IsAvailable ? "در دسترس" : "غیر قابل دسترس")
                </span>
                <form asp-controller="Profile" asp-action="UpdateAvailability" method="post" class="inline">
                    <input type="hidden" name="isAvailable" value="@(!Model.IsAvailable)">
                    <button type="submit" class="@(Model.IsAvailable ? "bg-red-600 hover:bg-red-700" : "bg-green-600 hover:bg-green-700") text-white px-4 py-2 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500">
                        @(Model.IsAvailable ? "غیرفعال کردن" : "فعال کردن")
                    </button>
                </form>
            </div>
        </div>
    </div>

    <!-- Weekly Schedule -->
    <div class="bg-white shadow rounded-lg p-6 mb-6">
        <h3 class="text-lg font-medium text-gray-900 mb-6">برنامه هفتگی</h3>
        <div class="space-y-4">
            @{
                var weekDays = new List<(string Persian, string English)>
                {
                    ("شنبه", "Saturday"),
                    ("یکشنبه", "Sunday"),
                    ("دوشنبه", "Monday"),
                    ("سه‌شنبه", "Tuesday"),
                    ("چهارشنبه", "Wednesday"),
                    ("پنج‌شنبه", "Thursday"),
                    ("جمعه", "Friday")
                };
            }
            
            @foreach (var day in weekDays)
            {
                <div class="flex items-center justify-between p-4 border rounded-lg">
                    <div class="flex items-center space-x-3 space-x-reverse">
                        <input type="checkbox" id="@day.English" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                        <label for="@day.English" class="text-sm font-medium text-gray-900">@day.Persian</label>
                    </div>
                    <div class="flex items-center space-x-2 space-x-reverse">
                        <select class="border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 text-sm">
                            <option value="08:00">08:00</option>
                            <option value="09:00">09:00</option>
                            <option value="10:00">10:00</option>
                            <option value="11:00">11:00</option>
                            <option value="12:00">12:00</option>
                            <option value="13:00">13:00</option>
                            <option value="14:00">14:00</option>
                            <option value="15:00">15:00</option>
                            <option value="16:00">16:00</option>
                        </select>
                        <span class="text-gray-500">تا</span>
                        <select class="border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 text-sm">
                            <option value="12:00">12:00</option>
                            <option value="13:00">13:00</option>
                            <option value="14:00">14:00</option>
                            <option value="15:00">15:00</option>
                            <option value="16:00">16:00</option>
                            <option value="17:00">17:00</option>
                            <option value="18:00">18:00</option>
                            <option value="19:00">19:00</option>
                            <option value="20:00">20:00</option>
                            <option value="21:00">21:00</option>
                            <option value="22:00">22:00</option>
                        </select>
                    </div>
                </div>
            }
        </div>
        <div class="mt-6 flex justify-end">
            <button type="button" class="bg-blue-600 text-white px-6 py-2 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
                ذخیره برنامه
            </button>
        </div>
    </div>

    <!-- Consultation Types -->
    <div class="bg-white shadow rounded-lg p-6 mb-6">
        <h3 class="text-lg font-medium text-gray-900 mb-6">نوع مشاوره‌های ارائه شده</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="space-y-4">
                <label class="flex items-center">
                    <input type="checkbox" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" checked>
                    <span class="mr-3 text-sm text-gray-900">چت متنی</span>
                </label>
                <label class="flex items-center">
                    <input type="checkbox" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" checked>
                    <span class="mr-3 text-sm text-gray-900">تماس صوتی</span>
                </label>
                <label class="flex items-center">
                    <input type="checkbox" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" checked>
                    <span class="mr-3 text-sm text-gray-900">تماس تصویری</span>
                </label>
                <label class="flex items-center">
                    <input type="checkbox" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                    <span class="mr-3 text-sm text-gray-900">حضوری</span>
                </label>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">هزینه مشاوره (تومان)</label>
                <input type="number" value="@Model.ConsultationFee" class="block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" min="0" step="1000">
            </div>
        </div>
        <div class="mt-6 flex justify-end">
            <button type="button" class="bg-blue-600 text-white px-6 py-2 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
                ذخیره تنظیمات
            </button>
        </div>
    </div>

    <!-- Break Times -->
    <div class="bg-white shadow rounded-lg p-6 mb-6">
        <h3 class="text-lg font-medium text-gray-900 mb-6">زمان‌های استراحت</h3>
        <div class="space-y-4">
            <div class="flex items-center justify-between p-4 border rounded-lg">
                <div>
                    <label class="text-sm font-medium text-gray-900">استراحت نهار</label>
                    <p class="text-sm text-gray-500">تعطیلی در ساعات ناهار</p>
                </div>
                <div class="flex items-center space-x-2 space-x-reverse">
                    <select class="border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 text-sm">
                        <option value="12:00">12:00</option>
                        <option value="12:30">12:30</option>
                        <option value="13:00">13:00</option>
                        <option value="13:30">13:30</option>
                    </select>
                    <span class="text-gray-500">تا</span>
                    <select class="border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 text-sm">
                        <option value="13:00">13:00</option>
                        <option value="13:30">13:30</option>
                        <option value="14:00">14:00</option>
                        <option value="14:30">14:30</option>
                        <option value="15:00">15:00</option>
                    </select>
                    <input type="checkbox" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                </div>
            </div>
        </div>
        <div class="mt-6 flex justify-end">
            <button type="button" class="bg-blue-600 text-white px-6 py-2 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
                ذخیره زمان‌ها
            </button>
        </div>
    </div>

    <!-- Time Slot Settings -->
    <div class="bg-white shadow rounded-lg p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-6">تنظیمات بازه زمانی</h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div>
                <label class="block text-sm font-medium text-gray-700">مدت زمان هر مشاوره (دقیقه)</label>
                <select class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500">
                    <option value="15">15 دقیقه</option>
                    <option value="30" selected>30 دقیقه</option>
                    <option value="45">45 دقیقه</option>
                    <option value="60">60 دقیقه</option>
                </select>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700">فاصله بین مشاوره‌ها (دقیقه)</label>
                <select class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500">
                    <option value="0">بدون فاصله</option>
                    <option value="5" selected>5 دقیقه</option>
                    <option value="10">10 دقیقه</option>
                    <option value="15">15 دقیقه</option>
                </select>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700">حداکثر تعداد مشاوره در روز</label>
                <input type="number" value="20" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" min="1" max="50">
            </div>
        </div>
        <div class="mt-6 flex justify-end">
            <button type="button" class="bg-blue-600 text-white px-6 py-2 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
                ذخیره تنظیمات
            </button>
        </div>
    </div>
</div> 