@model SnappDoctor.Core.Entities.Doctor
@{
    ViewData["Title"] = "پروفایل پزشک";
}

<div class="px-4 py-6 sm:px-0">
    <!-- Header -->
    <div class="mb-8 flex justify-between items-center">
        <div>
            <h1 class="text-3xl font-bold text-gray-900">پروفایل پزشک</h1>
            <p class="text-gray-600 mt-2">مدیریت اطلاعات شخصی و حرفه‌ای</p>
        </div>
        <a href="/Doctor/Profile/Edit" class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
            ویرایش پروفایل
        </a>
    </div>

    <!-- Profile Picture Section -->
    <div class="bg-white shadow rounded-lg p-6 mb-6">
        <div class="flex items-center space-x-6 space-x-reverse">
            <div class="relative">
                @if (Model.ProfilePicture != null)
                {
                    <img src="/Doctor/Profile/GetProfilePicture" alt="تصویر پروفایل" class="w-24 h-24 rounded-full object-cover border-4 border-gray-200">
                }
                else
                {
                    <div class="w-24 h-24 bg-blue-100 rounded-full flex items-center justify-center border-4 border-gray-200">
                        <svg class="w-12 h-12 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                    </div>
                }
                <button onclick="document.getElementById('profilePictureInput').click()" class="absolute bottom-0 right-0 bg-blue-600 text-white rounded-full w-8 h-8 flex items-center justify-center hover:bg-blue-700">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
                    </svg>
                </button>
            </div>
            <div class="flex-1">
                <h2 class="text-2xl font-bold text-gray-900">@Model.FullName</h2>
                <p class="text-gray-600">@Model.Specialization</p>
                <div class="flex items-center mt-2 space-x-4 space-x-reverse">
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium @(Model.IsAvailable ? "bg-green-100 text-green-800" : "bg-red-100 text-red-800")">
                        @(Model.IsAvailable ? "در دسترس" : "غیر قابل دسترس")
                    </span>
                    <span class="text-sm text-gray-500">@Model.YearsOfExperience سال تجربه</span>
                    @if (Model.Rating > 0)
                    {
                        <div class="flex items-center space-x-1 space-x-reverse">
                            <span class="text-sm text-gray-500">@Model.Rating.ToString("F1")</span>
                            <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                            </svg>
                            <span class="text-sm text-gray-500">(@Model.ReviewCount نظر)</span>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Upload Form (Hidden) -->
        <form asp-action="UploadProfilePicture" method="post" enctype="multipart/form-data" style="display: none;">
            <input type="file" id="profilePictureInput" name="profilePicture" accept="image/*" onchange="this.form.submit()">
        </form>
    </div>

    <!-- Personal Information -->
    <div class="bg-white shadow rounded-lg p-6 mb-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">اطلاعات شخصی</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <label class="block text-sm font-medium text-gray-700">نام</label>
                <p class="mt-1 text-sm text-gray-900">@Model.FirstName</p>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700">نام خانوادگی</label>
                <p class="mt-1 text-sm text-gray-900">@Model.LastName</p>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700">شماره تماس</label>
                <p class="mt-1 text-sm text-gray-900">@Model.PhoneNumber</p>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700">ایمیل</label>
                <p class="mt-1 text-sm text-gray-900">@(string.IsNullOrEmpty(Model.Email) ? "تعیین نشده" : Model.Email)</p>
            </div>
        </div>
    </div>

    <!-- Professional Information -->
    <div class="bg-white shadow rounded-lg p-6 mb-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">اطلاعات حرفه‌ای</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <label class="block text-sm font-medium text-gray-700">تخصص</label>
                <p class="mt-1 text-sm text-gray-900">@Model.Specialization</p>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700">شماره نظام پزشکی</label>
                <p class="mt-1 text-sm text-gray-900">@(string.IsNullOrEmpty(Model.MedicalLicenseNumber) ? "تعیین نشده" : Model.MedicalLicenseNumber)</p>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700">سال‌های تجربه</label>
                <p class="mt-1 text-sm text-gray-900">@Model.YearsOfExperience سال</p>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700">هزینه مشاوره</label>
                <p class="mt-1 text-sm text-gray-900">@Model.ConsultationFee.ToString("N0") تومان</p>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700">وضعیت دسترسی</label>
                <div class="mt-1 flex items-center space-x-3 space-x-reverse">
                    <span class="text-sm text-gray-900">@(Model.IsAvailable ? "در دسترس" : "غیر قابل دسترس")</span>
                    <form asp-action="UpdateAvailability" method="post" class="inline">
                        <input type="hidden" name="isAvailable" value="@(!Model.IsAvailable)">
                        <button type="submit" class="text-blue-600 hover:text-blue-800 text-sm font-medium">
                            @(Model.IsAvailable ? "غیرفعال کردن" : "فعال کردن")
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Bio Section -->
    <!-- Consultation Types -->
    <div class="bg-white shadow rounded-lg p-6 mb-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">نوع مشاوره‌های ارائه شده</h3>
        <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
            @if (Model.OffersVoiceCall)
            {
                <div class="flex items-center space-x-2 space-x-reverse">
                    <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center">
                        <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                        </svg>
                    </div>
                    <span class="text-sm text-gray-700">تماس صوتی</span>
                </div>
            }
            @if (Model.OffersVideoCall)
            {
                <div class="flex items-center space-x-2 space-x-reverse">
                    <div class="w-8 h-8 bg-purple-100 rounded-full flex items-center justify-center">
                        <svg class="w-4 h-4 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                        </svg>
                    </div>
                    <span class="text-sm text-gray-700">تماس تصویری</span>
                </div>
            }
            @if (Model.OffersInPersonConsultation)
            {
                <div class="flex items-center space-x-2 space-x-reverse">
                    <div class="w-8 h-8 bg-orange-100 rounded-full flex items-center justify-center">
                        <svg class="w-4 h-4 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                        </svg>
                    </div>
                    <span class="text-sm text-gray-700">حضوری</span>
                </div>
            }
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.Bio))
    {
        <div class="bg-white shadow rounded-lg p-6 mb-6">
            <h3 class="text-lg font-medium text-gray-900 mb-4">درباره پزشک</h3>
            <p class="text-gray-700 leading-relaxed">@Model.Bio</p>
        </div>
    }

    <!-- Statistics -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="bg-white shadow rounded-lg p-6">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
                        <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
                        </svg>
                    </div>
                </div>
                <div class="mr-4">
                    <div class="text-sm font-medium text-gray-500">امتیاز</div>
                    <div class="text-2xl font-bold text-gray-900">@Model.Rating.ToString("F1")</div>
                </div>
            </div>
        </div>

        <div class="bg-white shadow rounded-lg p-6">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center">
                        <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-1.586l-4 4z"></path>
                        </svg>
                    </div>
                </div>
                <div class="mr-4">
                    <div class="text-sm font-medium text-gray-500">نظرات</div>
                    <div class="text-2xl font-bold text-gray-900">@Model.ReviewCount</div>
                </div>
            </div>
        </div>

        <div class="bg-white shadow rounded-lg p-6">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="w-8 h-8 bg-yellow-100 rounded-full flex items-center justify-center">
                        <svg class="w-5 h-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                </div>
                <div class="mr-4">
                    <div class="text-sm font-medium text-gray-500">تجربه</div>
                    <div class="text-2xl font-bold text-gray-900">@Model.YearsOfExperience</div>
                </div>
            </div>
        </div>
    </div>
</div> 