        $(document).ready(function() {
            // ===== Specialization Cards =====
            $('.spec-card').on('click', function() {
                $('.spec-card').removeClass('selected');
                $(this).addClass('selected');
                $('#Specialization').val($(this).data('value'));
                
                // Animation effect
                $(this).addClass('animate-pulse');
                setTimeout(() => {
                    $(this).removeClass('animate-pulse');
                }, 300);
            });
            
            // Set initial specialization selection
            const currentSpec = $('#Specialization').val();
            if (currentSpec) {
                $(`.spec-card[data-value="${currentSpec}"]`).addClass('selected');
            }
            
            // ===== Consultation Type Cards =====
            $('.consultation-type-card').on('click', function(e) {
                // اگر کاربر مستقیماً روی checkbox کلیک کرد، اجازه می‌دهیم عمل طبیعی انجام شود
                if (e.target.type === 'checkbox') {
                    return;
                }
                
                // اگر روی هر جای دیگر کارت کلیک کرد، checkbox را toggle می‌کنیم
                e.preventDefault();
                const checkbox = $(this).find('.consultation-checkbox');
                checkbox.prop('checked', !checkbox.prop('checked')).trigger('change');
            });
            
            // افکت برای انتخاب consultation types
            $('.consultation-checkbox').on('change', function() {
                const card = $(this).closest('.consultation-type-card').find('.consultation-card');
                
                // انیمیشن bounce برای تغییر حالت
                card.addClass('selected-bounce');
                setTimeout(() => {
                    card.removeClass('selected-bounce');
                }, 600);
                
                // بروزرسانی ظاهر کارت
                updateConsultationCardAppearance();
            });
            
            // تابع برای بروزرسانی ظاهر کارت‌ها
            function updateConsultationCardAppearance() {
                $('.consultation-type-card').each(function() {
                    const checkbox = $(this).find('.consultation-checkbox');
                    const card = $(this).find('.consultation-card');
                    const checkmark = card.find('.consultation-checkmark');
                    const isChecked = checkbox.is(':checked');
                    
                    if (isChecked) {
                        card.addClass('selected');
                        checkmark.css({
                            'opacity': '1',
                            'transform': 'scale(1)'
                        });
                    } else {
                        card.removeClass('selected');
                        checkmark.css({
                            'opacity': '0',
                            'transform': 'scale(0)'
                        });
                    }
                });
                
                // نمایش تعداد انتخاب شده‌ها
                const selectedCount = $('.consultation-checkbox:checked').length;
                $('#selected-count').text(selectedCount);
                
                // تغییر رنگ counter بر اساس تعداد انتخاب شده
                const counterElement = $('#selected-count');
                if (selectedCount === 0) {
                    counterElement.removeClass('text-blue-600 text-green-600 text-orange-600').addClass('text-gray-400');
                } else if (selectedCount === 1) {
                    counterElement.removeClass('text-gray-400 text-green-600 text-orange-600').addClass('text-blue-600');
                } else if (selectedCount === 2) {
                    counterElement.removeClass('text-gray-400 text-blue-600 text-orange-600').addClass('text-green-600');
                } else if (selectedCount === 3) {
                    counterElement.removeClass('text-gray-400 text-blue-600 text-green-600').addClass('text-orange-600');
                }
                
                console.log(`تعداد نوع مشاوره انتخاب شده: ${selectedCount}`);
            }
            
            // اولیه‌سازی ظاهر کارت‌ها
            updateConsultationCardAppearance();
            
            // Debug: نمایش وضعیت checkboxها در console
            $('.consultation-checkbox').on('change', function() {
                const voiceChecked = $('#voice-call').is(':checked');
                const videoChecked = $('#video-call').is(':checked');
                const personChecked = $('#person-consultation').is(':checked');
                
                console.log('Consultation Types Selected:', {
                    voice: voiceChecked,
                    video: videoChecked,
                    person: personChecked
                });
            });
            
            // کلیک تست برای بررسی عملکرد
            $('.consultation-type-card').on('click', function() {
                const cardType = $(this).data('type');
                const checkbox = $(this).find('.consultation-checkbox');
                console.log(`کلیک روی کارت ${cardType}، وضعیت checkbox:`, checkbox.is(':checked'));
            });
            
            // ===== Availability Toggle =====
            
            // Initialize availability state on page load
            function initializeAvailabilityState() {
                $('.availability-radio').each(function() {
                    const radio = $(this);
                    const card = radio.closest('.availability-card');
                    const label = radio.next('.availability-label');
                    
                    if (radio.is(':checked')) {
                        card.addClass('selected');
                        label.addClass('selected');
                        console.log('Radio button checked:', radio.attr('id'), 'Value:', radio.val());
                    } else {
                        card.removeClass('selected');
                        label.removeClass('selected');
                    }
                });
            }
            
            // Initialize on page load
            initializeAvailabilityState();
            
