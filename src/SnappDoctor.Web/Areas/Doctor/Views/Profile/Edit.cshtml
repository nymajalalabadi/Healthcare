@model SnappDoctor.Core.Entities.Doctor
@{
    ViewData["Title"] = "ویرایش پروفایل";
}

<div class="px-4 py-6 sm:px-0">
    <!-- Header -->
    <div class="mb-6">
        <div class="flex items-center space-x-3 space-x-reverse">
            <a href="/Doctor/Profile" class="text-blue-600 hover:text-blue-800">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
            </a>
            <h1 class="text-2xl font-bold text-gray-900">ویرایش پروفایل</h1>
        </div>
        <p class="text-gray-600 mt-2">بروزرسانی اطلاعات شخصی و حرفه‌ای</p>
    </div>

    <form asp-action="Edit" method="post" class="space-y-6">
        <!-- Personal Information -->
        <div class="bg-white shadow rounded-lg p-6">
            <h3 class="text-lg font-medium text-gray-900 mb-6 flex items-center">
                <svg class="w-6 h-6 ml-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
                اطلاعات شخصی
            </h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- نام -->
                <div class="form-card-wrapper">
                    <div class="form-card">
                        <div class="form-icon">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                            </svg>
                        </div>
                        <div class="form-content">
                            <label asp-for="FirstName" class="form-label">نام</label>
                            <input asp-for="FirstName" type="text" class="form-input" placeholder="نام خود را وارد کنید" required>
                            <span asp-validation-for="FirstName" class="form-error"></span>
                        </div>
                    </div>
                </div>

                <!-- نام خانوادگی -->
                <div class="form-card-wrapper">
                    <div class="form-card">
                        <div class="form-icon">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                            </svg>
                        </div>
                        <div class="form-content">
                            <label asp-for="LastName" class="form-label">نام خانوادگی</label>
                            <input asp-for="LastName" type="text" class="form-input" placeholder="نام خانوادگی خود را وارد کنید" required>
                            <span asp-validation-for="LastName" class="form-error"></span>
                        </div>
                    </div>
                </div>

                <!-- شماره تماس -->
                <div class="form-card-wrapper">
                    <div class="form-card readonly-card">
                        <div class="form-icon readonly-icon">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                            </svg>
                        </div>
                        <div class="form-content">
                            <label asp-for="PhoneNumber" class="form-label">شماره تماس</label>
                            <input asp-for="PhoneNumber" type="tel" class="form-input readonly-input" readonly>
                            <p class="form-hint">شماره تماس قابل تغییر نیست</p>
                        </div>
                        <div class="readonly-badge">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                            </svg>
                        </div>
                    </div>
                </div>

                <!-- ایمیل -->
                <div class="form-card-wrapper">
                    <div class="form-card">
                        <div class="form-icon">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"></path>
                            </svg>
                        </div>
                        <div class="form-content">
                            <label asp-for="Email" class="form-label">ایمیل</label>
                            <input asp-for="Email" type="email" class="form-input" placeholder="example@email.com">
                            <span asp-validation-for="Email" class="form-error"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Professional Information -->
        <div class="bg-white shadow rounded-lg p-6">
            <h3 class="text-lg font-medium text-gray-900 mb-6 flex items-center">
                <svg class="w-6 h-6 ml-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                اطلاعات حرفه‌ای
            </h3>
            
            <!-- تخصص -->
            <div class="mb-8">
                <label class="block text-sm font-medium text-gray-700 mb-4">تخصص پزشکی</label>
                <select asp-for="Specialization" class="hidden-select" required>
                    <option value="">انتخاب تخصص</option>
                    <option value="قلب و عروق">قلب و عروق</option>
                    <option value="داخلی">داخلی</option>
                    <option value="اطفال">اطفال</option>
                    <option value="زنان و زایمان">زنان و زایمان</option>
                    <option value="ارولوژی">ارولوژی</option>
                    <option value="عفونی">عفونی</option>
                    <option value="ریه">ریه</option>
                    <option value="گوارش">گوارش</option>
                    <option value="روانپزشکی">روانپزشکی</option>
                    <option value="پوست">پوست</option>
                    <option value="ارتوپدی">ارتوپدی</option>
                    <option value="چشم">چشم</option>
                    <option value="گوش و حلق و بینی">گوش و حلق و بینی</option>
                    <option value="مغز و اعصاب">مغز و اعصاب</option>
                    <option value="جراحی عمومی">جراحی عمومی</option>
                    <option value="سایر">سایر</option>
                </select>
                <div class="specialization-grid">
                    <div class="spec-card" data-value="قلب و عروق">
                        <div class="spec-icon">❤️</div>
                        <div class="spec-title">قلب و عروق</div>
                    </div>
                    <div class="spec-card" data-value="داخلی">
                        <div class="spec-icon">🏥</div>
                        <div class="spec-title">داخلی</div>
                    </div>
                    <div class="spec-card" data-value="اطفال">
                        <div class="spec-icon">👶</div>
                        <div class="spec-title">اطفال</div>
                    </div>
                    <div class="spec-card" data-value="زنان و زایمان">
                        <div class="spec-icon">👩‍⚕️</div>
                        <div class="spec-title">زنان و زایمان</div>
                    </div>
                    <div class="spec-card" data-value="ارولوژی">
                        <div class="spec-icon">🔬</div>
                        <div class="spec-title">ارولوژی</div>
                    </div>
                    <div class="spec-card" data-value="عفونی">
                        <div class="spec-icon">🦠</div>
                        <div class="spec-title">عفونی</div>
                    </div>
                    <div class="spec-card" data-value="ریه">
                        <div class="spec-icon">🫁</div>
                        <div class="spec-title">ریه</div>
                    </div>
                    <div class="spec-card" data-value="گوارش">
                        <div class="spec-icon">🍽️</div>
                        <div class="spec-title">گوارش</div>
                    </div>
                    <div class="spec-card" data-value="روانپزشکی">
                        <div class="spec-icon">🧠</div>
                        <div class="spec-title">روانپزشکی</div>
                    </div>
                    <div class="spec-card" data-value="پوست">
                        <div class="spec-icon">✨</div>
                        <div class="spec-title">پوست</div>
                    </div>
                    <div class="spec-card" data-value="ارتوپدی">
                        <div class="spec-icon">🦴</div>
                        <div class="spec-title">ارتوپدی</div>
                    </div>
                    <div class="spec-card" data-value="چشم">
                        <div class="spec-icon">👁️</div>
                        <div class="spec-title">چشم</div>
                    </div>
                    <div class="spec-card" data-value="گوش و حلق و بینی">
                        <div class="spec-icon">👂</div>
                        <div class="spec-title">گوش و حلق و بینی</div>
                    </div>
                    <div class="spec-card" data-value="مغز و اعصاب">
                        <div class="spec-icon">🧠</div>
                        <div class="spec-title">مغز و اعصاب</div>
                    </div>
                    <div class="spec-card" data-value="جراحی عمومی">
                        <div class="spec-icon">⚕️</div>
                        <div class="spec-title">جراحی عمومی</div>
                    </div>
                    <div class="spec-card" data-value="سایر">
                        <div class="spec-icon">📋</div>
                        <div class="spec-title">سایر</div>
                    </div>
                </div>
                <span asp-validation-for="Specialization" class="form-error"></span>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- شماره نظام پزشکی -->
                <div class="form-card-wrapper">
                    <div class="form-card">
                        <div class="form-icon">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                            </svg>
                        </div>
                        <div class="form-content">
                            <label asp-for="MedicalLicenseNumber" class="form-label">شماره نظام پزشکی</label>
                            <input asp-for="MedicalLicenseNumber" type="text" class="form-input" placeholder="مثال: 12345">
                            <span asp-validation-for="MedicalLicenseNumber" class="form-error"></span>
                        </div>
                    </div>
                </div>

                <!-- سال‌های تجربه -->
                <div class="form-card-wrapper">
                    <div class="form-card">
                        <div class="form-icon">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                        </div>
                        <div class="form-content">
                            <label asp-for="YearsOfExperience" class="form-label">سال‌های تجربه</label>
                            <input asp-for="YearsOfExperience" type="number" min="0" max="50" class="form-input" placeholder="مثال: 5" required>
                            <span asp-validation-for="YearsOfExperience" class="form-error"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- وضعیت دسترسی -->
            <div class="mt-8">
                <label class="block text-sm font-medium text-gray-700 mb-4">وضعیت دسترسی</label>
                <div class="availability-toggle-container">
                    <div class="availability-card available-card" data-value="true">
                        <input type="radio" asp-for="IsAvailable" value="True" id="available-yes" class="availability-radio" checked="@(Model.IsAvailable == true)">
                        <label for="available-yes" class="availability-label">
                            <div class="availability-icon">
                                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                            </div>
                            <div class="availability-content">
                                <h4 class="availability-title">در دسترس</h4>
                                <p class="availability-description">آماده پذیرش مشاوره</p>
                            </div>
                        </label>
                    </div>
                    
                    <div class="availability-card unavailable-card" data-value="false">
                        <input type="radio" asp-for="IsAvailable" value="False" id="available-no" class="availability-radio" checked="@(Model.IsAvailable == false)">
                        <label for="available-no" class="availability-label">
                            <div class="availability-icon">
                                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                            </div>
                            <div class="availability-content">
                                <h4 class="availability-title">غیر قابل دسترس</h4>
                                <p class="availability-description">موقتاً نمی‌پذیرم</p>
                            </div>
                        </label>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bio Section -->
        <div class="bg-white shadow rounded-lg p-6">
            <h3 class="text-lg font-medium text-gray-900 mb-6 flex items-center">
                <svg class="w-6 h-6 ml-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                </svg>
                درباره پزشک
            </h3>
            <div class="bio-card-wrapper">
                <div class="bio-card">
                    <div class="bio-header">
                        <div class="bio-icon">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                            </svg>
                        </div>
                        <label asp-for="Bio" class="bio-label">بیوگرافی و معرفی</label>
                    </div>
                    <div class="bio-content">
                        <textarea asp-for="Bio" rows="6" class="bio-textarea" placeholder="درباره خودتان، تحصیلات، تجربیات، تخصص‌ها و روش‌های درمانی‌تان بنویسید...&#10;&#10;مثال:&#10;• فارغ‌التحصیل دانشگاه علوم پزشکی تهران&#10;• ۱۰ سال تجربه در درمان بیماری‌های قلبی&#10;• متخصص در انجام آنژیوپلاستی"></textarea>
                        <div class="character-count">
                            <span class="current-count">0</span>
                            <span class="max-count">/ 1000 کاراکتر</span>
                        </div>
                    </div>
                    <span asp-validation-for="Bio" class="form-error"></span>
                </div>
            </div>
        </div>

        <!-- Fees Section -->
        <div class="bg-white shadow rounded-lg p-6">
            <h3 class="text-lg font-medium text-gray-900 mb-4">تعرفه‌ها و خدمات</h3>
            <div class="grid grid-cols-1 gap-6">
                <div class="bg-gray-50 p-4 rounded-lg border border-gray-200">
                    <label asp-for="ConsultationFee" class="block text-sm font-medium text-gray-700 mb-2">
                        <svg class="w-5 h-5 inline-block ml-2 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
                        </svg>
                        هزینه مشاوره (تومان)
                    </label>
                    <div class="relative">
                        <input asp-for="ConsultationFee" type="number" min="0" step="1000" 
                               class="block w-full border-gray-300 rounded-lg shadow-sm focus:ring-green-500 focus:border-green-500 pl-12 pr-4 py-3 text-lg font-semibold" 
                               placeholder="مثال: 50000">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <span class="text-gray-500 sm:text-sm">تومان</span>
                        </div>
                    </div>
                    <span asp-validation-for="ConsultationFee" class="text-red-600 text-sm"></span>
                    <p class="text-sm text-gray-500 mt-2">هزینه‌ای که از هر بیمار دریافت می‌کنید</p>
                </div>
                <div>
                    <div class="flex items-center justify-between mb-4">
                        <label class="block text-sm font-medium text-gray-700">نوع مشاوره‌های ارائه شده</label>
                        <div class="consultation-counter">
                            <span class="text-sm text-gray-500">انتخاب شده: </span>
                            <span id="selected-count" class="text-sm font-semibold text-blue-600">0</span>
                            <span class="text-sm text-gray-500"> از 3</span>
                        </div>
                    </div>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                        <!-- تماس صوتی -->
                        <div class="consultation-type-card" data-type="voice">
                            <input asp-for="OffersVoiceCall" type="checkbox" id="voice-call" class="consultation-checkbox">
                            <label for="voice-call" class="consultation-label">
                                <div class="consultation-card">
                                    <div class="consultation-icon voice-icon">
                                        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                                        </svg>
                                    </div>
                                    <div class="consultation-content">
                                        <h4 class="consultation-title">تماس صوتی</h4>
                                        <p class="consultation-description">مشاوره صوتی با کیفیت بالا</p>
                                    </div>
                                    <div class="consultation-checkmark">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                        </svg>
                                    </div>
                                </div>
                            </label>
                        </div>

                        <!-- تماس تصویری -->
                        <div class="consultation-type-card" data-type="video">
                            <input asp-for="OffersVideoCall" type="checkbox" id="video-call" class="consultation-checkbox">
                            <label for="video-call" class="consultation-label">
                                <div class="consultation-card">
                                    <div class="consultation-icon video-icon">
                                        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                                        </svg>
                                    </div>
                                    <div class="consultation-content">
                                        <h4 class="consultation-title">تماس تصویری</h4>
                                        <p class="consultation-description">ملاقات آنلاین با ویدیو</p>
                                    </div>
                                    <div class="consultation-checkmark">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                        </svg>
                                    </div>
                                </div>
                            </label>
                        </div>

                        <!-- حضوری -->
                        <div class="consultation-type-card" data-type="person">
                            <input asp-for="OffersInPersonConsultation" type="checkbox" id="person-consultation" class="consultation-checkbox">
                            <label for="person-consultation" class="consultation-label">
                                <div class="consultation-card">
                                    <div class="consultation-icon person-icon">
                                        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                                        </svg>
                                    </div>
                                    <div class="consultation-content">
                                        <h4 class="consultation-title">مشاوره حضوری</h4>
                                        <p class="consultation-description">ملاقات در مطب یا کلینیک</p>
                                    </div>
