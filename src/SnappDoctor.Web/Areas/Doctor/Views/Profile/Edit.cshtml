                const radio = $(this).find('.availability-radio');
                
                // Uncheck all other radio buttons first
                $('.availability-radio').prop('checked', false);
                $('.availability-card').removeClass('selected');
                $('.availability-label').removeClass('selected');
                
                // Check the clicked radio button
                radio.prop('checked', true);
                $(this).addClass('selected');
                $(this).find('.availability-label').addClass('selected');
                
                console.log('Availability changed to:', radio.val());
                
                // Animation effect
                $(this).find('.availability-label').addClass('selected-bounce');
                setTimeout(() => {
                    $(this).find('.availability-label').removeClass('selected-bounce');
                }, 600);
            });
            
            // ===== Bio Character Counter =====
            const bioTextarea = $('.bio-textarea');
            const currentCount = $('.current-count');
            const maxCount = 1000;
            
            function updateCharacterCount() {
                const length = bioTextarea.val().length;
                currentCount.text(length);
                
                if (length > maxCount * 0.9) {
                    currentCount.css('color', '#ef4444');
                } else if (length > maxCount * 0.8) {
                    currentCount.css('color', '#f59e0b');
                } else {
                    currentCount.css('color', '#6b7280');
                }
            }
            
            bioTextarea.on('input', updateCharacterCount);
            updateCharacterCount(); // Initial count
            
            // ===== Form Submission Debug =====
            $('form').on('submit', function(e) {
                const checkedRadio = $('input[name="IsAvailable"]:checked');
                console.log('Form submitting with IsAvailable:', checkedRadio.val());
                
                if (checkedRadio.length === 0) {
                    console.error('No radio button selected for IsAvailable!');
                    e.preventDefault();
                    alert('لطفاً وضعیت دسترسی خود را انتخاب کنید');
                    return false;
                }
                
                // Visual feedback
                $('.submit-button').prop('disabled', true).text('در حال ذخیره...');
            });
            
            // ===== Form Focus Effects =====
            $('.form-input').on('focus', function() {
                $(this).closest('.form-card').addClass('focused');
            }).on('blur', function() {
                $(this).closest('.form-card').removeClass('focused');
            });
            
            // ===== Auto-resize Bio Textarea =====
            bioTextarea.on('input', function() {
                this.style.height = 'auto';
                this.style.height = Math.max(120, this.scrollHeight) + 'px';
            });
        });
    </script>
    
