@model Consultation
@{
    ViewData["Title"] = "جزئیات مشاوره";
}

<div class="px-4 py-6 sm:px-0">
    <!-- Header -->
    <div class="mb-6">
        <div class="flex items-center space-x-3 space-x-reverse">
            <a href="/Doctor/Consultations" class="text-blue-600 hover:text-blue-800">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
            </a>
            <h1 class="text-2xl font-bold text-gray-900">جزئیات مشاوره</h1>
        </div>
        <p class="text-gray-600 mt-2">مدیریت مشاوره بیمار</p>
    </div>

    <!-- Patient Info Card -->
    <div class="bg-white shadow rounded-lg p-6 mb-6">
        <h2 class="text-lg font-medium text-gray-900 mb-4">اطلاعات بیمار</h2>
        <div class="flex items-center space-x-4 space-x-reverse">
            <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center">
                <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
            </div>
            <div>
                <h3 class="text-xl font-medium text-gray-900">@Model.User.FullName</h3>
                <p class="text-gray-600">@Model.User.PhoneNumber</p>
            </div>
        </div>
    </div>

    <!-- Consultation Details -->
    <div class="bg-white shadow rounded-lg p-6 mb-6">
        <h2 class="text-lg font-medium text-gray-900 mb-4">جزئیات مشاوره</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <label class="block text-sm font-medium text-gray-700">نوع مشاوره</label>
                <p class="mt-1 text-sm text-gray-900">
                    @(Model.Type == ConsultationType.TextChat ? "چت متنی" :
                      Model.Type == ConsultationType.VoiceCall ? "تماس صوتی" :
                      Model.Type == ConsultationType.VideoCall ? "تماس تصویری" :
                      "حضوری")
                </p>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700">وضعیت</label>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium mt-1
                    @(Model.Status == ConsultationStatus.Completed ? "bg-green-100 text-green-800" :
                      Model.Status == ConsultationStatus.Pending ? "bg-yellow-100 text-yellow-800" :
                      Model.Status == ConsultationStatus.InProgress ? "bg-blue-100 text-blue-800" :
                      Model.Status == ConsultationStatus.Confirmed ? "bg-blue-100 text-blue-800" :
                      Model.Status == ConsultationStatus.Cancelled ? "bg-red-100 text-red-800" :
                      "bg-gray-100 text-gray-800")">
                    @(Model.Status == ConsultationStatus.Completed ? "تکمیل شده" :
                      Model.Status == ConsultationStatus.Pending ? "در انتظار تأیید" :
                      Model.Status == ConsultationStatus.InProgress ? "در حال انجام" :
                      Model.Status == ConsultationStatus.Confirmed ? "تأیید شده" :
                      Model.Status == ConsultationStatus.Cancelled ? "لغو شده" :
                      Model.Status.ToString())
                </span>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700">تاریخ رزرو</label>
                <p class="mt-1 text-sm text-gray-900">@Model.CreatedAt.ToLocalTime().ToString("yyyy/MM/dd HH:mm")</p>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700">زمان مشاوره</label>
                <p class="mt-1 text-sm text-gray-900">@Model.ScheduledAt.ToLocalTime().ToString("yyyy/MM/dd HH:mm")</p>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700">هزینه</label>
                <p class="mt-1 text-sm text-gray-900">@Model.Fee.ToString("N0") تومان</p>
            </div>
            @if (Model.StartedAt.HasValue)
            {
                <div>
                    <label class="block text-sm font-medium text-gray-700">زمان شروع</label>
                    <p class="mt-1 text-sm text-gray-900">@Model.StartedAt.Value.ToLocalTime().ToString("yyyy/MM/dd HH:mm")</p>
                </div>
            }
            @if (Model.EndedAt.HasValue)
            {
                <div>
                    <label class="block text-sm font-medium text-gray-700">زمان پایان</label>
                    <p class="mt-1 text-sm text-gray-900">@Model.EndedAt.Value.ToLocalTime().ToString("yyyy/MM/dd HH:mm")</p>
                </div>
            }
        </div>
    </div>

    <!-- Patient Symptoms -->
    @if (!string.IsNullOrEmpty(Model.PatientSymptoms))
    {
        <div class="bg-white shadow rounded-lg p-6 mb-6">
            <h2 class="text-lg font-medium text-gray-900 mb-4">علائم و شکایات بیمار</h2>
            <div class="bg-gray-50 rounded-lg p-4">
                <p class="text-gray-700">@Model.PatientSymptoms</p>
            </div>
        </div>
    }

    <!-- Doctor Notes & Prescription -->
    @if (Model.Status == ConsultationStatus.InProgress || Model.Status == ConsultationStatus.Completed)
    {
        <div class="bg-white shadow rounded-lg p-6 mb-6">
            <h2 class="text-lg font-medium text-gray-900 mb-4">یادداشت‌های پزشک و نسخه</h2>
            
            @if (Model.Status == ConsultationStatus.InProgress)
            {
                <form asp-action="Complete" method="post">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <div class="space-y-4">
                        <div>
                            <label for="doctorNotes" class="block text-sm font-medium text-gray-700">یادداشت‌های پزشک</label>
                            <textarea id="doctorNotes" name="doctorNotes" rows="4" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" placeholder="یادداشت‌های تشخیص و درمان...">@Model.DoctorNotes</textarea>
                        </div>
                        <div>
                            <label for="prescription" class="block text-sm font-medium text-gray-700">نسخه دارو</label>
                            <textarea id="prescription" name="prescription" rows="4" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" placeholder="نسخه دارو و توصیه‌های درمانی...">@Model.Prescription</textarea>
                        </div>
                        <div class="flex justify-end">
                            <button type="submit" class="bg-green-600 text-white px-6 py-2 rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500">
                                تکمیل مشاوره
                            </button>
                        </div>
                    </div>
                </form>
            }
            else if (Model.Status == ConsultationStatus.Completed)
            {
                <div class="space-y-4">
                    @if (!string.IsNullOrEmpty(Model.DoctorNotes))
                    {
                        <div>
                            <label class="block text-sm font-medium text-gray-700">یادداشت‌های پزشک</label>
                            <div class="mt-1 bg-gray-50 rounded-lg p-4">
                                <p class="text-gray-700">@Model.DoctorNotes</p>
                            </div>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.Prescription))
                    {
                        <div>
                            <label class="block text-sm font-medium text-gray-700">نسخه دارو</label>
                            <div class="mt-1 bg-gray-50 rounded-lg p-4">
                                <p class="text-gray-700">@Model.Prescription</p>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    }

    <!-- Action Buttons -->
    <div class="bg-white shadow rounded-lg p-6">
        <div class="flex space-x-4 space-x-reverse">
            @if (Model.Status == ConsultationStatus.Pending)
            {
                <form asp-action="Accept" method="post" class="inline">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="bg-green-600 text-white px-6 py-2 rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500">
                        تأیید مشاوره
                    </button>
                </form>
            }
            
            @if (Model.Status == ConsultationStatus.Confirmed)
            {
                <form asp-action="Start" method="post" class="inline">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
                        شروع مشاوره
                    </button>
                </form>
            }
            
            <a href="/Doctor/Consultations" class="bg-gray-600 text-white px-6 py-2 rounded-md hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-500">
                بازگشت
            </a>
        </div>
    </div>
</div> 