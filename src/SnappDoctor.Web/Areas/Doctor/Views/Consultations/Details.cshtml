@model Consultation
@{
    ViewData["Title"] = "جزئیات مشاوره";
}

<div class="min-h-screen bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50 p-4">
    <div class="max-w-6xl mx-auto">
        <!-- Header Section -->
        <div class="mb-8">
            <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
                <div>
                    <div class="flex items-center gap-3 mb-2">
                        <a href="/Doctor/Consultations" class="w-10 h-10 bg-gradient-to-r from-blue-500 to-purple-600 rounded-xl flex items-center justify-center hover:from-blue-600 hover:to-purple-700 transition-all duration-200">
                            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                            </svg>
                        </a>
                        <h1 class="text-3xl font-bold bg-gradient-to-r from-gray-900 to-gray-700 bg-clip-text text-transparent">
                            جزئیات مشاوره
                        </h1>
                    </div>
                    <p class="text-gray-600 mr-13">مدیریت مشاوره بیمار</p>
                </div>
            </div>
        </div>

        <!-- Patient Info Card -->
        <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6 mb-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">اطلاعات بیمار</h2>
            <div class="flex items-center space-x-4 space-x-reverse">
                <div class="w-16 h-16 bg-gradient-to-r from-green-100 to-blue-100 rounded-xl flex items-center justify-center">
                    <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                </div>
                <div>
                    <h3 class="text-xl font-semibold text-gray-900">@Model.User.FullName</h3>
                    <p class="text-gray-600">@Model.User.PhoneNumber</p>
                </div>
            </div>
        </div>

        <!-- Consultation Details -->
        <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6 mb-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">جزئیات مشاوره</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="bg-gray-50 rounded-lg p-4">
                    <label class="block text-sm font-medium text-gray-700 mb-2">نوع مشاوره</label>
                    <p class="text-sm font-medium text-gray-900">
                        @(Model.Type == ConsultationType.TextChat ? "چت متنی" :
                          Model.Type == ConsultationType.VoiceCall ? "تماس صوتی" :
                          Model.Type == ConsultationType.VideoCall ? "تماس تصویری" :
                          "حضوری")
                    </p>
                </div>
                <div class="bg-gray-50 rounded-lg p-4">
                    <label class="block text-sm font-medium text-gray-700 mb-2">وضعیت</label>
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium
                        @(Model.Status == ConsultationStatus.Completed ? "bg-green-100 text-green-800 border border-green-200" :
                          Model.Status == ConsultationStatus.Pending ? "bg-yellow-100 text-yellow-800 border border-yellow-200" :
                          Model.Status == ConsultationStatus.InProgress ? "bg-blue-100 text-blue-800 border border-blue-200" :
                          Model.Status == ConsultationStatus.Confirmed ? "bg-blue-100 text-blue-800 border border-blue-200" :
                          Model.Status == ConsultationStatus.Cancelled ? "bg-red-100 text-red-800 border border-red-200" :
                          "bg-gray-100 text-gray-800 border border-gray-200")">
                        @(Model.Status == ConsultationStatus.Completed ? "تکمیل شده" :
                          Model.Status == ConsultationStatus.Pending ? "در انتظار تأیید" :
                          Model.Status == ConsultationStatus.InProgress ? "در حال انجام" :
                          Model.Status == ConsultationStatus.Confirmed ? "تأیید شده" :
                          Model.Status == ConsultationStatus.Cancelled ? "لغو شده" :
                          Model.Status.ToString())
                    </span>
                </div>
                <div class="bg-gray-50 rounded-lg p-4">
                    <label class="block text-sm font-medium text-gray-700 mb-2">تاریخ رزرو</label>
                    <p class="text-sm font-medium text-gray-900">@Model.CreatedAt.ToLocalTime().ToString("yyyy/MM/dd HH:mm")</p>
                </div>
                <div class="bg-gray-50 rounded-lg p-4">
                    <label class="block text-sm font-medium text-gray-700 mb-2">زمان مشاوره</label>
                    <p class="text-sm font-medium text-gray-900">@Model.ScheduledAt.ToLocalTime().ToString("yyyy/MM/dd HH:mm")</p>
                </div>
                <div class="bg-gray-50 rounded-lg p-4">
                    <label class="block text-sm font-medium text-gray-700 mb-2">هزینه</label>
                    <p class="text-sm font-medium text-gray-900">@Model.Fee.ToString("N0") تومان</p>
                </div>
                @if (Model.StartedAt.HasValue)
                {
                    <div class="bg-gray-50 rounded-lg p-4">
                        <label class="block text-sm font-medium text-gray-700 mb-2">زمان شروع</label>
                        <p class="text-sm font-medium text-gray-900">@Model.StartedAt.Value.ToLocalTime().ToString("yyyy/MM/dd HH:mm")</p>
                    </div>
                }
                @if (Model.EndedAt.HasValue)
                {
                    <div class="bg-gray-50 rounded-lg p-4">
                        <label class="block text-sm font-medium text-gray-700 mb-2">زمان پایان</label>
                        <p class="text-sm font-medium text-gray-900">@Model.EndedAt.Value.ToLocalTime().ToString("yyyy/MM/dd HH:mm")</p>
                    </div>
                }
            </div>
        </div>

        <!-- Patient Symptoms -->
        @if (!string.IsNullOrEmpty(Model.PatientSymptoms))
        {
            <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6 mb-6">
                <h2 class="text-lg font-semibold text-gray-900 mb-4">علائم و شکایات بیمار</h2>
                <div class="bg-blue-50 rounded-lg p-4 border border-blue-100">
                    <p class="text-blue-800">@Model.PatientSymptoms</p>
                </div>
            </div>
        }

        <!-- User Notes -->
        @if (!string.IsNullOrEmpty(Model.Notes))
        {
            <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6 mb-6">
                <h2 class="text-lg font-semibold text-gray-900 mb-4">یادداشت‌های بیمار</h2>
                <div class="bg-yellow-50 rounded-lg p-4 border border-yellow-100">
                    <p class="text-yellow-800">@Model.Notes</p>
                </div>
            </div>
        }

        <!-- Doctor Notes & Prescription -->
        @if (Model.Status == ConsultationStatus.InProgress || Model.Status == ConsultationStatus.Completed)
        {
            <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6 mb-6">
                <h2 class="text-lg font-semibold text-gray-900 mb-4">یادداشت‌های پزشک و نسخه</h2>
                
                @if (Model.Status == ConsultationStatus.InProgress)
                {
                    <form asp-action="Complete" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <div class="space-y-4">
                            <div>
                                <label for="doctorNotes" class="block text-sm font-medium text-gray-700 mb-2">یادداشت‌های پزشک</label>
                                <textarea id="doctorNotes" name="doctorNotes" rows="4" class="mt-1 block w-full border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200" placeholder="یادداشت‌های تشخیص و درمان...">@Model.DoctorNotes</textarea>
                            </div>
                            <div>
                                <label for="prescription" class="block text-sm font-medium text-gray-700 mb-2">نسخه دارو</label>
                                <textarea id="prescription" name="prescription" rows="4" class="mt-1 block w-full border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200" placeholder="نسخه دارو و توصیه‌های درمانی...">@Model.Prescription</textarea>
                            </div>
                            <div>
                                <label for="userNotes" class="block text-sm font-medium text-gray-700 mb-2">یادداشت‌های جدید برای بیمار</label>
                                <textarea id="userNotes" name="userNotes" rows="3" class="mt-1 block w-full border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200" placeholder="یادداشت‌های جدید برای بیمار..."></textarea>
                            </div>
                            <div class="flex justify-end">
                                <button type="submit" class="bg-gradient-to-r from-green-600 to-green-700 text-white px-6 py-3 rounded-lg hover:from-green-700 hover:to-green-800 focus:outline-none focus:ring-2 focus:ring-green-500 transition-all duration-200 shadow-sm hover:shadow-md">
                                    تکمیل مشاوره
                                </button>
                            </div>
                        </div>
                    </form>
                }
                else if (Model.Status == ConsultationStatus.Completed)
                {
                    <div class="space-y-4">
                        @if (!string.IsNullOrEmpty(Model.DoctorNotes))
                        {
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">یادداشت‌های پزشک</label>
                                <div class="mt-1 bg-gray-50 rounded-lg p-4 border border-gray-200">
                                    <p class="text-gray-700">@Model.DoctorNotes</p>
                                </div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.Prescription))
                        {
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">نسخه دارو</label>
                                <div class="mt-1 bg-gray-50 rounded-lg p-4 border border-gray-200">
                                    <p class="text-gray-700">@Model.Prescription</p>
                                </div>
                            </div>
                        }
                        
                        <!-- Add New Notes Form -->
                        <div class="mt-6 pt-6 border-t border-gray-200">
                            <h3 class="text-lg font-medium text-gray-900 mb-4">افزودن یادداشت جدید</h3>
                            <form asp-action="AddUserNotes" method="post">
                                <input type="hidden" name="id" value="@Model.Id" />
                                <div class="space-y-4">
                                    <div>
                                        <label for="newUserNotes" class="block text-sm font-medium text-gray-700 mb-2">یادداشت جدید برای بیمار</label>
                                        <textarea id="newUserNotes" name="newUserNotes" rows="3" class="mt-1 block w-full border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200" placeholder="یادداشت جدید برای بیمار..."></textarea>
                                    </div>
                                    <div class="flex justify-end">
                                        <button type="submit" class="bg-gradient-to-r from-blue-600 to-blue-700 text-white px-4 py-2 rounded-lg text-sm hover:from-blue-700 hover:to-blue-800 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all duration-200 shadow-sm hover:shadow-md">
                                            افزودن یادداشت
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                }
            </div>
        }

        <!-- Action Buttons -->
        <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
            <div class="flex space-x-4 space-x-reverse">
                @if (Model.Status == ConsultationStatus.Pending)
                {
                    <form asp-action="Accept" method="post" class="inline">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit" class="bg-gradient-to-r from-green-600 to-green-700 text-white px-6 py-3 rounded-lg hover:from-green-700 hover:to-green-800 focus:outline-none focus:ring-2 focus:ring-green-500 transition-all duration-200 shadow-sm hover:shadow-md">
                            تأیید مشاوره
                        </button>
                    </form>
                }
                
                @if (Model.Status == ConsultationStatus.Confirmed)
                {
                    <form asp-action="Start" method="post" class="inline">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit" class="bg-gradient-to-r from-blue-600 to-blue-700 text-white px-6 py-3 rounded-lg hover:from-blue-700 hover:to-blue-800 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all duration-200 shadow-sm hover:shadow-md">
                            شروع مشاوره
                        </button>
                    </form>
                }
                
                <a href="/Doctor/Consultations" class="bg-gradient-to-r from-gray-600 to-gray-700 text-white px-6 py-3 rounded-lg hover:from-gray-700 hover:to-gray-800 focus:outline-none focus:ring-2 focus:ring-gray-500 transition-all duration-200 shadow-sm hover:shadow-md">
                    بازگشت
                </a>
            </div>
        </div>
    </div>
</div> 