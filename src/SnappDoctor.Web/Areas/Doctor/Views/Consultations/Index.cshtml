@model IEnumerable<Consultation>
@{
    ViewData["Title"] = "مشاوره‌ها";
}

<div class="min-h-screen bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50 p-4">
    <div class="max-w-6xl mx-auto">
        <!-- Header Section -->
        <div class="mb-8">
            <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
                <div>
                    <div class="flex items-center gap-3 mb-2">
                        <div class="w-10 h-10 bg-gradient-to-r from-blue-500 to-purple-600 rounded-xl flex items-center justify-center">
                            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                            </svg>
                        </div>
                        <h1 class="text-3xl font-bold bg-gradient-to-r from-gray-900 to-gray-700 bg-clip-text text-transparent">
                            مشاوره‌ها
                        </h1>
                    </div>
                    <p class="text-gray-600 mr-13">مدیریت مشاوره‌های بیماران</p>
                </div>
            </div>
        </div>

        <!-- Status Filter -->
        <div class="mb-6">
            <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
                <div class="flex flex-wrap items-center gap-3">
                    <span class="text-gray-700 font-medium">فیلتر وضعیت:</span>
                    <a href="/Doctor/Consultations" class="px-4 py-2 rounded-full @(ViewBag.CurrentStatus == null ? "bg-blue-600 text-white" : "bg-gray-200 text-gray-700 hover:bg-gray-300")">همه</a>
                    <a href="/Doctor/Consultations?status=Pending" class="px-4 py-2 rounded-full @(ViewBag.CurrentStatus?.ToString() == "Pending" ? "bg-yellow-600 text-white" : "bg-gray-200 text-gray-700 hover:bg-gray-300")">در انتظار</a>
                    <a href="/Doctor/Consultations?status=Confirmed" class="px-4 py-2 rounded-full @(ViewBag.CurrentStatus?.ToString() == "Confirmed" ? "bg-blue-600 text-white" : "bg-gray-200 text-gray-700 hover:bg-gray-300")">تأیید شده</a>
                    <a href="/Doctor/Consultations?status=InProgress" class="px-4 py-2 rounded-full @(ViewBag.CurrentStatus?.ToString() == "InProgress" ? "bg-blue-600 text-white" : "bg-gray-200 text-gray-700 hover:bg-gray-300")">در حال انجام</a>
                    <a href="/Doctor/Consultations?status=Completed" class="px-4 py-2 rounded-full @(ViewBag.CurrentStatus?.ToString() == "Completed" ? "bg-green-600 text-white" : "bg-gray-200 text-gray-700 hover:bg-gray-300")">تکمیل شده</a>
                </div>
            </div>
        </div>

        @if (Model.Any())
        {
            <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden">
                <div class="divide-y divide-gray-200">
                    @foreach (var consultation in Model)
                    {
                        <div class="p-6 hover:bg-gray-50 transition-colors duration-200">
                            <div class="flex items-center justify-between">
                                <div class="flex-1">
                                    <div class="flex items-center space-x-3 space-x-reverse">
                                        <div class="w-12 h-12 bg-gradient-to-r from-green-100 to-blue-100 rounded-xl flex items-center justify-center">
                                            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                            </svg>
                                        </div>
                                        <div>
                                            <h3 class="text-lg font-semibold text-gray-900">@consultation.User.FullName</h3>
                                            <p class="text-sm text-gray-500">@consultation.User.PhoneNumber</p>
                                        </div>
                                    </div>
                                    
                                    <div class="mt-4 grid grid-cols-2 md:grid-cols-4 gap-4 text-sm">
                                        <div class="bg-gray-50 rounded-lg p-3">
                                            <span class="text-gray-500 text-xs block mb-1">نوع مشاوره:</span>
                                            <p class="font-medium text-gray-900">
                                                @(consultation.Type == ConsultationType.TextChat ? "چت متنی" :
                                                  consultation.Type == ConsultationType.VoiceCall ? "تماس صوتی" :
                                                  consultation.Type == ConsultationType.VideoCall ? "تماس تصویری" :
                                                  "حضوری")
                                            </p>
                                        </div>
                                        <div class="bg-gray-50 rounded-lg p-3">
                                            <span class="text-gray-500 text-xs block mb-1">تاریخ رزرو:</span>
                                            <p class="font-medium text-gray-900">@consultation.CreatedAt.ToLocalTime().ToString("yyyy/MM/dd")</p>
                                        </div>
                                        <div class="bg-gray-50 rounded-lg p-3">
                                            <span class="text-gray-500 text-xs block mb-1">زمان مشاوره:</span>
                                            <p class="font-medium text-gray-900">@consultation.ScheduledAt.ToLocalTime().ToString("yyyy/MM/dd HH:mm")</p>
                                        </div>
                                        <div class="bg-gray-50 rounded-lg p-3">
                                            <span class="text-gray-500 text-xs block mb-1">هزینه:</span>
                                            <p class="font-medium text-gray-900">@(consultation.Fee?.ToString("N0") ?? "0") تومان</p>
                                        </div>
                                    </div>
                                    
                                    @if (!string.IsNullOrEmpty(consultation.PatientSymptoms))
                                    {
                                        <div class="mt-4 bg-blue-50 rounded-lg p-3 border border-blue-100">
                                            <span class="text-blue-700 text-sm font-medium block mb-2">علائم بیمار:</span>
                                            <p class="text-sm text-blue-800">@consultation.PatientSymptoms</p>
                                        </div>
                                    }

                                    @if (!string.IsNullOrEmpty(consultation.Notes))
                                    {
                                        <div class="mt-4 bg-yellow-50 rounded-lg p-3 border border-yellow-100">
                                            <span class="text-yellow-700 text-sm font-medium block mb-2">یادداشت‌های بیمار:</span>
                                            <p class="text-sm text-yellow-800">@consultation.Notes</p>
                                        </div>
                                    }
                                </div>
                                
                                <div class="flex flex-col items-end space-y-3">
                                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium
                                        @(consultation.Status == ConsultationStatus.Completed ? "bg-green-100 text-green-800 border border-green-200" :
                                          consultation.Status == ConsultationStatus.Pending ? "bg-yellow-100 text-yellow-800 border border-yellow-200" :
                                          consultation.Status == ConsultationStatus.InProgress ? "bg-blue-100 text-blue-800 border border-blue-200" :
                                          consultation.Status == ConsultationStatus.Confirmed ? "bg-blue-100 text-blue-800 border border-blue-200" :
                                          consultation.Status == ConsultationStatus.Cancelled ? "bg-red-100 text-red-800 border border-red-200" :
                                          "bg-gray-100 text-gray-800 border border-gray-200")">
                                        @(consultation.Status == ConsultationStatus.Completed ? "تکمیل شده" :
                                          consultation.Status == ConsultationStatus.Pending ? "در انتظار تأیید" :
                                          consultation.Status == ConsultationStatus.InProgress ? "در حال انجام" :
                                          consultation.Status == ConsultationStatus.Confirmed ? "تأیید شده" :
                                          consultation.Status == ConsultationStatus.Cancelled ? "لغو شده" :
                                          consultation.Status.ToString())
                                    </span>
                                    
                                    <div class="flex space-x-2 space-x-reverse">
                                        <a href="/Doctor/Consultations/Details/@consultation.Id" class="bg-gradient-to-r from-blue-600 to-blue-700 text-white px-4 py-2 rounded-lg text-sm hover:from-blue-700 hover:to-blue-800 transition-all duration-200 shadow-sm hover:shadow-md">
                                            جزئیات
                                        </a>
                                        
                                        @if (consultation.Status == ConsultationStatus.Pending)
                                        {
                                            <form asp-action="Accept" method="post" class="inline">
                                                <input type="hidden" name="id" value="@consultation.Id" />
                                                <button type="submit" class="bg-gradient-to-r from-green-600 to-green-700 text-white px-4 py-2 rounded-lg text-sm hover:from-green-700 hover:to-green-800 transition-all duration-200 shadow-sm hover:shadow-md">
                                                    تأیید
                                                </button>
                                            </form>
                                        }
                                        
                                        @if (consultation.Status == ConsultationStatus.Confirmed)
                                        {
                                            <form asp-action="Start" method="post" class="inline">
                                                <input type="hidden" name="id" value="@consultation.Id" />
                                                <button type="submit" class="bg-gradient-to-r from-blue-600 to-blue-700 text-white px-4 py-2 rounded-lg text-sm hover:from-blue-700 hover:to-blue-800 transition-all duration-200 shadow-sm hover:shadow-md">
                                                    شروع
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
        else
        {
            <div class="text-center py-16">
                <div class="w-32 h-32 bg-gradient-to-br from-gray-100 to-gray-200 rounded-full flex items-center justify-center mx-auto mb-6">
                    <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                    </svg>
                </div>
                <h3 class="text-xl font-semibold text-gray-900 mb-3">مشاوره‌ای یافت نشد</h3>
                <p class="text-gray-600 text-lg">در حال حاضر مشاوره‌ای با این فیلتر وجود ندارد</p>
            </div>
        }
    </div>
</div> 