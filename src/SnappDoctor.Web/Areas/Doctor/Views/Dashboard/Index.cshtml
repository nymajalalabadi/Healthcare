@model Doctor
@{
    ViewData["Title"] = "داشبورد پزشکی";
}

<div class="px-4 py-6 sm:px-0">
    <!-- Welcome Section -->
    <div class="mb-8 flex justify-between items-center">
        <div>
            <h1 class="text-3xl font-bold text-gray-900">سلام دکتر @Model.FullName</h1>
            <p class="text-gray-600 mt-2">@Model.Specialization</p>
        </div>
        <div>
            <form asp-action="UpdateAvailability" method="post" class="inline">
                <input type="hidden" name="isAvailable" value="@(!Model.IsAvailable)" />
                <button type="submit" class="@(Model.IsAvailable ? "bg-red-600 hover:bg-red-700" : "bg-green-600 hover:bg-green-700") text-white px-6 py-2 rounded-lg font-medium">
                    @(Model.IsAvailable ? "غیرفعال کردن" : "فعال کردن")
                </button>
            </form>
        </div>
    </div>

    <!-- Status Card -->
    <div class="mb-6">
        <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center">
                <div class="w-4 h-4 rounded-full @(Model.IsAvailable ? "bg-green-500" : "bg-red-500") ml-3"></div>
                <span class="text-lg font-medium">
                    وضعیت: @(Model.IsAvailable ? "آنلاین و آماده پاسخگویی" : "آفلاین")
                </span>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
        <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center">
                            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                            </svg>
                        </div>
                    </div>
                    <div class="mr-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">مشاوره‌های امروز</dt>
                            <dd class="text-lg font-medium text-gray-900">@ViewBag.TodayConsultations</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <div class="w-8 h-8 bg-yellow-500 rounded-full flex items-center justify-center">
                            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                        </div>
                    </div>
                    <div class="mr-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">در انتظار تأیید</dt>
                            <dd class="text-lg font-medium text-gray-900">@ViewBag.PendingConsultations</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <div class="w-8 h-8 bg-green-500 rounded-full flex items-center justify-center">
                            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                        </div>
                    </div>
                    <div class="mr-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">تکمیل شده</dt>
                            <dd class="text-lg font-medium text-gray-900">@ViewBag.CompletedConsultations</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <div class="w-8 h-8 bg-purple-500 rounded-full flex items-center justify-center">
                            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
                            </svg>
                        </div>
                    </div>
                    <div class="mr-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">درآمد کل</dt>
                            <dd class="text-lg font-medium text-gray-900">@ViewBag.TotalEarnings.ToString("N0") تومان</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Doctor Info & Quick Actions -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
        <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-6">
                <h3 class="text-lg font-medium text-gray-900 mb-4">اطلاعات پزشک</h3>
                <div class="space-y-3">
                    <div class="flex justify-between">
                        <span class="text-gray-600">تخصص:</span>
                        <span class="font-medium">@Model.Specialization</span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-600">سال تجربه:</span>
                        <span class="font-medium">@Model.YearsOfExperience سال</span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-600">امتیاز:</span>
                        <span class="font-medium">@Model.Rating ⭐</span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-600">تعداد نظرات:</span>
                        <span class="font-medium">@Model.ReviewCount نظر</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-6">
                <h3 class="text-lg font-medium text-gray-900 mb-4">عملیات سریع</h3>
                <div class="space-y-3">
                    <a href="/Doctor/Consultations?status=Pending" class="w-full bg-yellow-600 text-white px-4 py-2 rounded-md hover:bg-yellow-700 flex items-center justify-center">
                        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        مشاوره‌های در انتظار
                    </a>
                    <a href="/Doctor/Consultations?status=InProgress" class="w-full bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 flex items-center justify-center">
                        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                        </svg>
                        مشاوره‌های فعال
                    </a>
                    <a href="/Doctor/Consultations" class="w-full bg-green-600 text-white px-4 py-2 rounded-md hover:bg-green-700 flex items-center justify-center">
                        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                        </svg>
                        همه مشاوره‌ها
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Consultations -->
    @if (ViewBag.RecentConsultations != null)
    {
        <div class="bg-white shadow rounded-lg">
            <div class="px-6 py-4 border-b border-gray-200">
                <h3 class="text-lg font-medium text-gray-900">آخرین مشاوره‌ها</h3>
            </div>
            <div class="divide-y divide-gray-200">
                @foreach (var consultation in ViewBag.RecentConsultations)
                {
                    <div class="px-6 py-4">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-sm font-medium text-gray-900">@consultation.User.FullName</p>
                                <p class="text-sm text-gray-500">@consultation.Type.ToString()</p>
                                <p class="text-sm text-gray-400">@consultation.CreatedAt.ToLocalTime().ToString("yyyy/MM/dd HH:mm")</p>
                            </div>
                            <div class="text-left">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                                    @(consultation.Status == ConsultationStatus.Completed ? "bg-green-100 text-green-800" :
                                      consultation.Status == ConsultationStatus.Pending ? "bg-yellow-100 text-yellow-800" :
                                      consultation.Status == ConsultationStatus.InProgress ? "bg-blue-100 text-blue-800" :
                                      "bg-gray-100 text-gray-800")">
                                    @(consultation.Status == ConsultationStatus.Completed ? "تکمیل شده" :
                                      consultation.Status == ConsultationStatus.Pending ? "در انتظار" :
                                      consultation.Status == ConsultationStatus.InProgress ? "در حال انجام" :
                                      consultation.Status.ToString())
                                </span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div> 